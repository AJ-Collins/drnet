            { id: 2, name: 'Jane Smith', phone: '+254723456789', location: 'Nairobi', subscription_amount: 2000, payment_date: '2025-10-15', expiry_date: '2025-11-15', paid_subscription: false, is_deleted: 0 },
            { id: 3, name: 'Bob Wilson', phone: '+254734567890', location: 'Kisumu', subscription_amount: 1800, payment_date: '2025-11-03', expiry_date: '2025-12-03', paid_subscription: true, is_deleted: 0 },
            { id: 4, name: 'Alice Brown', phone: '+254745678901', location: 'Eldoret', subscription_amount: 1200, payment_date: '2025-09-20', expiry_date: '2025-10-20', paid_subscription: false, is_deleted: 0 }
        ];

        let renewals = [
            { id: 1, user_id: 1, user_name: 'John Doe', amount: 1500, renewal_date: '2025-11-01', expiry_date: '2025-12-01', month: 'November', year: 2025, is_deleted: false },
            { id: 2, user_id: 3, user_name: 'Bob Wilson', amount: 1800, renewal_date: '2025-11-03', expiry_date: '2025-12-03', month: 'November', year: 2025, is_deleted: false },
            { id: 3, user_id: 2, user_name: 'Jane Smith', amount: 2000, renewal_date: '2025-10-15', expiry_date: '2025-11-15', month: 'October', year: 2025, is_deleted: false }
        ];

        window.BASE_URL = '';
        window.MOCK_MODE = true;

        function previewUser() {
            const userId = document.getElementById('renewalUser').value;
            const preview = document.getElementById('userPreview');
            
            if (!userId) {
                preview.classList.add('hidden');
                return;
            }

            const user = users.find(u => u.id == userId);
            if (!user) return;

            const expiryDate = dayjs(user.expiry_date);
            const daysRemaining = expiryDate.diff(dayjs(), 'day');
            const isActive = daysRemaining >= 0;

            document.getElementById('previewName').textContent = user.name;
            document.getElementById('previewDetails').textContent = `${user.phone} • ${user.location}`;
            document.getElementById('previewStatus').textContent = isActive ? '✓ Active' : '✗ Expired';
            document.getElementById('previewStatus').className = `text-sm font-bold ${isActive ? 'text-green-600' : 'text-red-600'}`;
            document.getElementById('previewExpiry').textContent = `Expires: ${expiryDate.format('MMM D, YYYY')} (${daysRemaining} days)`;

            document.getElementById('renewalAmount').value = user.subscription_amount;
            preview.classList.remove('hidden');
        }

        async function fetchData() {
            return users;
        }

        async function fetchRenewals() {
            return renewals;
        }

        async function renderRenewals() {
            const renewalUserSelect = document.getElementById('renewalUser');
            const allRenewalsList = document.getElementById('allRenewalsList');
            const renewalsCount = document.getElementById('renewalsCount');
            const renewalsRevenue = document.getElementById('renewalsRevenue');
            const renewalsAverage = document.getElementById('renewalsAverage');
            const activeUsersCount = document.getElementById('activeUsersCount');
            const renewalSearchInput = document.getElementById('renewalSearchInput').value.toLowerCase();
            const renewalSubscriptionFilter = document.getElementById('renewalSubscriptionFilter');
            const renewalStatusFilter = document.getElementById('renewalStatusFilter');

            try {
                await fetchData();
                const renewalsList = await fetchRenewals();
                const activeUsers = users.filter(u => u.is_deleted !== 1);
                const currentMonth = dayjs().format('YYYY-MM');

                // Monthly Renewals
                const monthlyRenewals = renewalsList.filter(r => 
                    !r.is_deleted && 
                    r.month === dayjs().format('MMMM') && 
                    r.year === dayjs().year()
                );

                const renewalsRevenueValue = monthlyRenewals.reduce((sum, r) => sum + Number(r.amount), 0);
                const renewalsAverageValue = monthlyRenewals.length > 0 ? Math.round(renewalsRevenueValue / monthlyRenewals.length) : 0;
                const activeUsersValue = activeUsers.filter(u => {
                    const expiryDate = dayjs(u.expiry_date);
                    return expiryDate.diff(dayjs(), 'day') >= 0;
                }).length;

                // Populate Quick Renewal Select
                renewalUserSelect.innerHTML = `
                    <option value="">Choose a user...</option>
                    ${activeUsers.map(user => `
                        <option value="${user.id}">${user.name} - ${user.location}</option>
                    `).join('')}
                `;

                // Filter renewals
                let filteredRenewals = renewalsList.filter(r => !r.is_deleted);

                if (renewalSearchInput) {
                    filteredRenewals = filteredRenewals.filter(r => {
                        const user = users.find(u => u.id === r.user_id);
                        return (
                            r.user_name.toLowerCase().includes(renewalSearchInput) ||
                            (user && user.phone.toLowerCase().includes(renewalSearchInput)) ||
                            (user && user.location.toLowerCase().includes(renewalSearchInput))
                        );
                    });
                }

                if (renewalSubscriptionFilter.value !== 'all') {
                    filteredRenewals = filteredRenewals.filter(r => {
                        const user = users.find(u => u.id === r.user_id);
                        return user ? (renewalSubscriptionFilter.value === 'paid' ? user.paid_subscription : !user.paid_subscription) : false;
                    });
                }

                if (renewalStatusFilter.value !== 'all') {
                    filteredRenewals = filteredRenewals.filter(r => {
                        const expiryDate = dayjs(r.expiry_date);
                        const daysRemaining = expiryDate.diff(dayjs(), 'day');
                        const isActive = daysRemaining >= 0;
                        return renewalStatusFilter.value === 'active' ? isActive : !isActive;
                    });
                }

                // Render All Renewals
                allRenewalsList.innerHTML = filteredRenewals.length > 0 ? filteredRenewals.map(r => {
                    const user = users.find(u => u.id === r.user_id) || {};
                    const expiryDate = dayjs(r.expiry_date);
                    const daysRemaining = expiryDate.diff(dayjs(), 'day');
                    const isActive = daysRemaining >= 0;
                    const statusBg = isActive ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700';

                    return `
                      <div class="bg-gray-50 p-5 border hover:border-gray-100 hover:bg-teal-50 transition-all cursor-pointer"
                          onclick="viewRenewal('${r.id}')">

                        <div class="grid grid-cols-1 sm:grid-cols-7 items-center gap-4 w-full">

                          <!-- NAME + STATUS -->
                          <div class="flex items-center space-x-2 overflow-hidden text-ellipsis whitespace-nowrap">
                            <span class="font-semibold text-gray-800">${r.user_name}</span>
                            <span class="px-2 py-0.5 rounded text-xs font-medium ${isActive ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}">
                              ${isActive ? 'ACTIVE' : 'EXPIRED'}
                            </span>
                          </div>

                          <div class="text-sm text-gray-700 overflow-hidden text-ellipsis whitespace-nowrap">${user.phone || ''}</div>
                          <div class="text-sm text-gray-700 overflow-hidden text-ellipsis whitespace-nowrap">${user.location || ''}</div>

                          <div class="text-sm text-gray-700 whitespace-nowrap">Renewed: ${dayjs(r.renewal_date).format('MMM D, YYYY')}</div>
                          <div class="text-sm text-gray-700 whitespace-nowrap">Expires: ${expiryDate.format('MMM D, YYYY')}</div>

                          <!-- AMOUNTS -->
                          <div class="flex flex-col text-right whitespace-nowrap">
                            <span class="text-xs text-gray-500">Prev: KSH ${Number(user.subscription_amount || 0).toLocaleString()}</span>
                            <span class="font-semibold text-gray-800">New: KSH ${Number(r.amount).toLocaleString()}</span>
                          </div>

                          <!-- ACTIONS -->
                          <div class="flex space-x-2 justify-end">
                            <button onclick="editRenewal(event,'${r.id}')" class="text-blue-600 hover:bg-blue-100 p-2 rounded">
                              <i class="fas fa-edit"></i>
                            </button>
                            <button onclick="reverseRenewal(event,'${r.id}')" class="text-red-600 hover:bg-red-100 p-2 rounded">
                              <i class="fas fa-undo"></i>
                            </button>
                          </div>

                        </div>
                      </div>
                    `;
                }).join('') : '<p class="text-gray-500 text-center py-8">No renewals found.</p>';

                // Update Summary
                renewalsCount.textContent = monthlyRenewals.length.toString();
                renewalsRevenue.textContent = `Ksh ${renewalsRevenueValue.toLocaleString()}`;
                renewalsAverage.textContent = `Ksh ${renewalsAverageValue.toLocaleString()}`;
                activeUsersCount.textContent = activeUsersValue.toString();

            } catch (err) {
                console.error('Error loading renewals:', err);
                allRenewalsList.innerHTML = '<p class="text-red-600 text-center py-8">Failed to load renewals.</p>';
            }
        }

        async function processQuickRenewal() {
            const userId = document.getElementById('renewalUser').value;
            const amount = document.getElementById('renewalAmount').value;

            if (!userId || !amount || amount <= 0) {
                Swal.fire({
                    title: 'Error',
                    text: 'Please select a user and enter a valid renewal amount',
                    icon: 'error',
                    confirmButtonColor: '#0d9488'
                });
                return;
            }

            const user = users.find(u => u.id == userId);
            if (!user) return;

            const renewalDate = dayjs().format('YYYY-MM-DD');
            const expiryDate = dayjs().add(30, 'day').format('YYYY-MM-DD');

            // Update user
            user.subscription_amount = parseFloat(amount);
            user.payment_date = renewalDate;
            user.expiry_date = expiryDate;
            user.paid_subscription = true;

            // Add renewal
            renewals.push({
                id: renewals.length + 1,
                user_id: user.id,
                user_name: user.name,
                amount: parseFloat(amount),
                renewal_date: renewalDate,
                expiry_date: expiryDate,
                month: dayjs().format('MMMM'),
                year: dayjs().year(),
                is_deleted: false
            });

            Swal.fire({
                title: 'Success!',
                text: `${user.name} renewed successfully!`,
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });

            document.getElementById('renewalUser').value = '';
            document.getElementById('renewalAmount').value = '';
            document.getElementById('userPreview').classList.add('hidden');
            await renderRenewals();
        }

        async function editRenewal(renewalId) {
            const renewal = renewals.find(r => r.id === renewalId);
            if (!renewal) return;

            const user = users.find(u => u.id === renewal.user_id) || {};

            const { value: formValues } = await Swal.fire({
                title: `Edit Renewal for ${renewal.user_name}`,
                html: `
                    <div class="text-left space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Renewal Amount (Ksh)</label>
                            <input id="editRenewalAmount" type="number" value="${renewal.amount}" class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Renewal Date</label>
                            <input id="editRenewalDate" type="date" value="${renewal.renewal_date}" class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500" />
                        </div>
                        <div class="flex items-center space-x-3">
                            <input type="checkbox" id="editPaidSubscription" ${user.paid_subscription ? 'checked' : ''} class="w-4 h-4 text-teal-600">
                            <label class="text-sm text-gray-700">Paid Subscription</label>
                        </div>
                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'Save Changes',
                confirmButtonColor: '#0d9488',
                cancelButtonText: 'Cancel',
                preConfirm: () => {
                    const amount = document.getElementById('editRenewalAmount').value;
                    const renewalDate = document.getElementById('editRenewalDate').value;
                    const paidSubscription = document.getElementById('editPaidSubscription').checked;

                    if (!amount || amount <= 0 || !renewalDate) {
                        Swal.showValidationMessage('Please enter valid amount and date');
                        return false;
                    }

                    return { amount: parseFloat(amount), renewalDate, paidSubscription };
                }
            });

            if (formValues) {
                const expiryDate = dayjs(formValues.renewalDate).add(30, 'day').format('YYYY-MM-DD');
                
                renewal.amount = formValues.amount;
                renewal.renewal_date = formValues.renewalDate;
                renewal.expiry_date = expiryDate;
                renewal.month = dayjs(formValues.renewalDate).format('MMMM');
                renewal.year = dayjs(formValues.renewalDate).year();

                user.subscription_amount = formValues.amount;
                user.payment_date = formValues.renewalDate;
                user.expiry_date = expiryDate;
                user.paid_subscription = formValues.paidSubscription;

                Swal.fire({
                    title: 'Success!',
                    text: 'Renewal updated successfully!',
                    icon: 'success',
                    timer: 2000,
                    showConfirmButton: false
                });

                await renderRenewals();
            }
        }

        async function reverseRenewal(renewalId) {
            const renewal = renewals.find(r => r.id === renewalId);
            if (!renewal) return;

            const result = await Swal.fire({
                title: 'Are you sure?',
                text: `This will reverse the renewal for ${renewal.user_name}. The subscription will be marked as unpaid.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, reverse it!',
                confirmButtonColor: '#dc2626',
                cancelButtonText: 'Cancel'
            });

            if (result.isConfirmed) {
                renewal.is_deleted = true;
                
                const user = users.find(u => u.id === renewal.user_id);
                if (user) {
                    user.paid_subscription = false;
                    user.payment_date = dayjs().subtract(31, 'days').format('YYYY-MM-DD');
                    user.expiry_date = dayjs().subtract(1, 'day').format('YYYY-MM-DD');
                }

                Swal.fire({
                    title: 'Success!',
                    text: 'Renewal reversed successfully!',
                    icon: 'success',
                    timer: 2000,
                    showConfirmButton: false
                });

                await renderRenewals();
            }
        }

        function exportRenewalsToCSV() {
            const currentMonth = dayjs().format('MMMM');
            const monthlyRenewals = renewals.filter(r => 
                !r.is_deleted && 
                r.month === currentMonth && 
                r.year === dayjs().year()
            );

            const headers = ['ID', 'Name', 'Phone', 'Location', 'Amount', 'Renewal Date', 'Expiry Date', 'Status'];
            const csvContent = [
                headers.join(','),
                ...monthlyRenewals.map(r => {
                    const user = users.find(u => u.id === r.user_id) || {};
                    return [
                        r.id,
                        `"${r.user_name}"`,
                        user.phone || 'N/A',
                        `"${user.location || 'N/A'}"`,
                        r.amount,
                        dayjs(r.renewal_date).format('YYYY-MM-DD'),
                        dayjs(r.expiry_date).format('YYYY-MM-DD'),
                        user.paid_subscription ? 'Paid' : 'Unpaid'
                    ].join(',');
                })
            ].join('\n');

            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `renewals-${dayjs().format('YYYY-MM-DD')}.csv`;
            link.click();

            Swal.fire({
                title: 'Success!',
                text: 'Renewals exported successfully!',
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', () => {
            renderRenewals();

            document.getElementById('renewalSearchInput').addEventListener('input', renderRenewals);
            document.getElementById('renewalSubscriptionFilter').addEventListener('change', renderRenewals);
            document.getElementById('renewalStatusFilter').addEventListener('change', renderRenewals);
        });
    </script>
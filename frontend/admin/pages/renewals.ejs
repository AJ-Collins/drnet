<script>
  /* ==============================================================
   RENEWALS MANAGEMENT – FULLY RE-IMPLEMENTED (same API as User Mgmt)
   ============================================================== */
  const RENEW = {
    clientsCache: [], // all clients
    packagesCache: [], // all packages
    selectedClient: null, // {id, name, email, phone, currentSub}
    historyCache: [], // historic subs for selected client
    modalMode: "", // 'renew' | 'upgrade' | 'subscribe'
  };

  const $r = (id) => document.getElementById(id);
  const API = "/api";
  const PKG_API = "/api/packages";

  /* ---------- HELPERS ---------- */
  const formatDate = (d) =>
    new Date(d).toLocaleDateString("en-KE", {
      day: "numeric",
      month: "short",
      year: "numeric",
    });
  const getBadge = (s) =>
    ({
      Active: "bg-green-100 text-green-700",
      Expired: "bg-red-100 text-red-700",
      Suspended: "bg-orange-100 text-orange-700",
    }[s] || "bg-gray-100 text-gray-700");

  /* ---------- FETCH ---------- */
  async function fetchClients() {
    const res = await fetch(`${API}/clients`);
    if (!res.ok) throw new Error("Clients fetch failed");
    const data = await res.json();

    // enrich with current subscription
    const enriched = await Promise.all(
      data.map(async (c) => {
        try {
          const subRes = await fetch(
            `${API}/subscribe/client/current?userId=${c.id}`,
            {
              headers: { "X-Admin-Request": "true" },
            }
          );
          const sub = subRes.ok ? await subRes.json() : null;
          return { ...c, currentSub: sub };
        } catch {
          return { ...c, currentSub: null };
        }
      })
    );
    RENEW.clientsCache = enriched;
    return enriched;
  }

  async function fetchPackages() {
    const res = await fetch(PKG_API);
    if (!res.ok) throw new Error("Packages fetch failed");
    const data = await res.json();
    RENEW.packagesCache = Array.isArray(data) ? data : [];
    return RENEW.packagesCache;
  }

  async function fetchHistory(clientId) {
    const res = await fetch(
      `${API}/subscribe/client/history?userId=${clientId}`,
      {
        headers: { "X-Admin-Request": "true" },
      }
    );
    if (!res.ok) throw new Error("History fetch failed");
    const data = await res.json();
    RENEW.historyCache = Array.isArray(data) ? data : [];
    return RENEW.historyCache;
  }

  /* ---------- UI POPULATION ---------- */
  async function populateClientSelect(search = "") {
    const select = $r("renewClientSelect");
    if (!select) return;

    const clients = RENEW.clientsCache.filter(
      (c) =>
        `${c.first_name} ${c.second_name}`
          .toLowerCase()
          .includes(search.toLowerCase()) ||
        c.phone?.includes(search) ||
        c.email?.toLowerCase().includes(search.toLowerCase())
    );

    select.innerHTML = clients
      .map(
        (c) => `
    <option value="${c.id}">
      ${c.first_name} ${c.second_name} – ${c.phone} ${
          c.currentSub ? `(${c.currentSub.package_name})` : ""
        }
    </option>
  `
      )
      .join("");
  }

  /* ---------- SEARCH DEBOUNCE ---------- */
  let searchTimer;
  $r("renewClientSearch").addEventListener("input", (e) => {
    clearTimeout(searchTimer);
    searchTimer = setTimeout(() => populateClientSelect(e.target.value), 300);
  });

  /* ---------- CLIENT SELECTED ---------- */
  window.loadClientSubscriptions = async (clientId) => {
    if (!clientId) return;
    const client = RENEW.clientsCache.find((c) => c.id == clientId);
    if (!client) return;

    RENEW.selectedClient = client;
    await fetchHistory(clientId);
    renderClientPreview();
    renderHistory();
    toggleActionButtons();
  };

  /* ---------- PREVIEW ---------- */
  function renderClientPreview() {
    const p = $r("clientPreview");
    const c = RENEW.selectedClient;
    const sub = c.currentSub;

    $r("previewInitials").textContent =
      `${c.first_name[0]}${c.second_name[0]}`.toUpperCase();
    $r("previewName").textContent = `${c.first_name} ${c.second_name}`;
    $r("previewContact").textContent = `${c.phone} • ${c.email}`;
    $r("previewPlan").textContent = sub ? sub.package_name : "No active plan";
    $r("previewExpiry").textContent = sub
      ? `Expires ${formatDate(sub.expires)}`
      : "";

    p.classList.remove("hidden");
  }

  /* ---------- HISTORY TABLE ---------- */
  function renderHistory() {
    const tbody = $r("historyBody");
    if (!RENEW.historyCache.length) {
      tbody.innerHTML = `<tr><td colspan="6" class="p-4 text-center text-gray-500">No history</td></tr>`;
      return;
    }

    tbody.innerHTML = RENEW.historyCache
      .map((h, idx) => {
        const status = new Date(h.expires) >= new Date() ? "Active" : "Expired";
        const isActive = status === "Active";
        const isLatest = idx === 0; // latest entry

        return `
    <tr class="hover:bg-gray-50 transition-all">
      <td class="p-3">${h.package_name}</td>
      <td class="p-3">${formatDate(h.assigned_at || h.created_at)}</td>
      <td class="p-3">${formatDate(h.expires)}</td>
      <td class="p-3">KSh ${Number(h.price).toLocaleString()}</td>
      <td class="p-3"><span class="px-2 py-1 rounded text-xs font-medium ${getBadge(
        status
      )}">${status}</span></td>
      <td class="p-3 text-right space-x-1">
        ${
          isActive && isLatest
            ? `<button onclick="reverseRenewal(${h.id})" class="text-xs bg-orange-100 hover:bg-orange-200 text-orange-700 px-2 py-1 rounded" title="Reverse this renewal">
                 <i class="fas fa-undo"></i> Reverse
               </button>`
            : ""
        }
        <button onclick="deleteRenewal(${
          h.id
        })" class="text-xs bg-red-100 hover:bg-red-200 text-red-700 px-2 py-1 rounded" title="Delete record">
          <i class="fas fa-trash"></i>
        </button>
      </td>
    </tr>`;
      })
      .join("");
  }

  /* ---------- ACTION BUTTON VISIBILITY ---------- */
  function toggleActionButtons() {
    const hasCurrent = !!RENEW.selectedClient.currentSub;
    $r("btnRenew").disabled = !hasCurrent;
    $r("btnUpgrade").disabled = !hasCurrent;
    $r("btnSubscribe").disabled = false;
  }

  /* ---------- MODAL HANDLERS ---------- */
  async function populateModalPlans() {
    const sel = $r("modalPlanSelect");
    sel.innerHTML = '<option value="">Select plan…</option>';
    RENEW.packagesCache.forEach((p) => {
      const opt = document.createElement("option");
      opt.value = p.id;
      opt.textContent = `${p.name} – KSh ${p.price} (${p.speed})`;
      sel.appendChild(opt);
    });
  }
  function autoSelectCurrentPlan() {
    const cur = RENEW.selectedClient.currentSub;
    if (!cur) return;

    const sel = $r("modalPlanSelect");
    const opt = sel.querySelector(`option[value="${cur.package_id}"]`);
    if (opt) opt.selected = true;
  }

  function openModal(mode) {
    if (!RENEW.selectedClient) {
      return Swal.fire(
        "No Client Selected",
        "Please select a client first",
        "warning"
      );
    }

    RENEW.modalMode = mode;
    const header = {
      renew: "Renew Subscription",
      upgrade: "Upgrade Plan",
      subscribe: "Subscribe to New Plan",
    }[mode];
    $r("modalHeader").textContent = header;
    $r("modalActionText").textContent =
      mode === "renew" ? "Renew" : mode === "upgrade" ? "Upgrade" : "Subscribe";

    $r(
      "modalClientName"
    ).textContent = `${RENEW.selectedClient.first_name} ${RENEW.selectedClient.second_name}`;

    // ---- Current plan box ----
    const curBox = $r("currentPlanBox");
    const cur = RENEW.selectedClient.currentSub;
    if (cur && mode !== "subscribe") {
      $r("currentPlanName").textContent = cur.package_name;
      $r("currentPlanExpiry").textContent = `Expires: ${formatDate(
        cur.expires
      )}`;
      curBox.classList.remove("hidden");
    } else {
      curBox.classList.add("hidden");
    }

    // ---- Plan selector visibility & auto-select ----
    const wrapper = $r("planSelectWrapper");
    if (mode === "renew") {
      wrapper.classList.add("hidden"); // hide selector
      populateModalPlans(); // still load options (for cache)
      autoSelectCurrentPlan(); // pre-select current plan
    } else {
      wrapper.classList.remove("hidden"); // show for Upgrade/Subscribe
      populateModalPlans();
      // clear selection for safety
      $r("modalPlanSelect").selectedIndex = 0;
    }

    $r("renewModal").style.display = "flex";
    setTimeout(
      () =>
        $r("renewModal")
          .querySelector(".bg-white")
          .classList.replace("scale-95", "scale-100"),
      10
    );
  }

  window.openRenewModal = () => openModal("renew");
  window.openUpgradeModal = () => openModal("upgrade");
  window.openSubscribeModal = () => openModal("subscribe");

  window.closeRenewModal = () => {
    const modal = $r("renewModal");
    modal.querySelector(".bg-white").classList.replace("scale-100", "scale-95");
    setTimeout(() => (modal.style.display = "none"), 200);
  };

  /* ---------- MODAL ACTION ---------- */
  $r("modalActionBtn").onclick = async () => {
    // For Renew we auto-selected the plan – no need to validate selection
    if (RENEW.modalMode !== "renew") {
      const planId = $r("modalPlanSelect").value;
      if (!planId)
        return Swal.fire("Select Plan", "Please choose a plan", "warning");
    }

    const clientId = RENEW.selectedClient.id;
    let endpoint = "";
    let method = "POST";
    let msg = "";

    switch (RENEW.modalMode) {
      case "renew":
        endpoint = `${API}/subscribe/client/renew?userId=${clientId}`;
        msg = "Renewed";
        break;
      case "upgrade":
        endpoint = `${API}/subscribe/client/upgrade/${
          $r("modalPlanSelect").value
        }?userId=${clientId}`;
        msg = "Upgraded";
        break;
      case "subscribe":
        endpoint = `${API}/subscribe/client/${
          $r("modalPlanSelect").value
        }?userId=${clientId}`;
        msg = "Subscribed";
        break;
    }

    try {
      const res = await fetch(endpoint, {
        method,
        headers: { "X-Admin-Request": "true" },
      });
      if (!res.ok) throw new Error(await res.text());
      const data = await res.json();

      Swal.fire(
        "Success!",
        `${msg}: ${data.name}<br>Expires ${data.expires}`,
        "success"
      );
      closeRenewModal();

      // refresh
      await fetchClients();
      await loadClientSubscriptions(clientId);
      await updateStats();
    } catch (e) {
      Swal.fire("Error", e.message, "error");
    }
  };

  /* ---------- STATS ---------- */
  async function updateStats() {
    try {
      const res = await fetch(`${API}/renewals/stats`, {
        headers: { "X-Admin-Request": "true" },
      });

      if (!res.ok) throw new Error("Failed to load stats");

      const { monthlyRenewals, revenue, avgRenewal, activeClients } =
        await res.json();

      // Optional: still calculate active clients from clientsCache if needed
      const now = new Date();
      const active = RENEW.clientsCache.filter(
        (c) => c.currentSub && new Date(c.currentSub.expires) >= now
      ).length;

      $r("statRenewals").textContent = monthlyRenewals;
      $r("statRevenue").textContent = `Ksh ${revenue.toLocaleString()}`;
      $r("statAvg").textContent = `Ksh ${avgRenewal.toLocaleString()}`;
      $r("statActive").textContent = active; // still from clients
    } catch (e) {
      console.error("Stats error:", e);
      $r("statRenewals").textContent = "Error";
      $r("statRevenue").textContent = "Error";
      $r("statAvg").textContent = "Error";
    }
  }

  /* ---------- EXPORT CSV ---------- */
  window.exportRenewalsCSV = () => {
    if (!RENEW.selectedClient) {
      return Swal.fire(
        "No Client Selected",
        "Please select a client first to export their renewal history",
        "info"
      );
    }

    const rows = RENEW.historyCache.map((h) => [
      RENEW.selectedClient
        ? `${RENEW.selectedClient.first_name} ${RENEW.selectedClient.second_name}`
        : "",
      h.package_name,
      h.price,
      formatDate(h.assigned_at || h.created_at),
      formatDate(h.expires),
      new Date(h.expires) >= new Date() ? "Active" : "Expired",
    ]);

    if (!rows.length)
      return Swal.fire("No data", "No renewal history to export", "info");

    const csv = [
      ["Client", "Plan", "Price", "Assigned", "Expires", "Status"],
      ...rows,
    ]
      .map((r) => r.map((v) => `"${v}"`).join(","))
      .join("\n");

    const blob = new Blob([csv], { type: "text/csv" });
    const url = URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = `renewals-${RENEW.selectedClient.id}-${new Date()
      .toISOString()
      .slice(0, 10)}.csv`;
    a.click();
    URL.revokeObjectURL(url);
  };

  /* ---------- REVERSE RENEWAL ---------- */
  window.reverseRenewal = async (subscriptionId) => {
    const client = RENEW.selectedClient;
    if (!client) return;

    const confirm = await Swal.fire({
      title: "Reverse Renewal?",
      text: "This will cancel the current plan and restore the previous one (if any).",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes, reverse it",
      cancelButtonText: "No, keep it",
    });

    if (!confirm.isConfirmed) return;

    try {
      const res = await fetch(
        `${API}/subscribe/client/reverse/${subscriptionId}?userId=${client.id}`,
        {
          method: "POST",
          headers: { "X-Admin-Request": "true" },
        }
      );

      if (!res.ok) throw new Error(await res.text());

      const data = await res.json();

      Swal.fire(
        "Reversed!",
        `Plan reverted to: ${data.previous?.package_name || "None"}`,
        "success"
      );

      // Refresh
      await fetchClients();
      await loadClientSubscriptions(client.id);
      await updateStats();
    } catch (e) {
      Swal.fire("Error", e.message, "error");
    }
  };

  /* ---------- DELETE RENEWAL ---------- */
  window.deleteRenewal = async (subscriptionId) => {
    const confirm = await Swal.fire({
      title: "Delete Renewal Record?",
      text: "This action cannot be undone.",
      icon: "danger",
      showCancelButton: true,
      confirmButtonText: "Yes, delete",
      cancelButtonText: "Cancel",
    });

    if (!confirm.isConfirmed) return;

    try {
      const res = await fetch(
        `${API}/subscribe/client/delete/${subscriptionId}`,
        {
          method: "DELETE",
          headers: { "X-Admin-Request": "true" },
        }
      );

      if (!res.ok) throw new Error(await res.text());

      Swal.fire("Deleted!", "Renewal record removed.", "success");

      const clientId = RENEW.selectedClient.id;
      await fetchHistory(clientId);
      renderHistory();
      await updateStats();
    } catch (e) {
      Swal.fire("Error", e.message, "error");
    }
  };

  /* ---------- INITIAL LOAD ---------- */
  (async () => {
    try {
      await Promise.all([fetchClients(), fetchPackages()]);
      populateClientSelect();
      updateStats();
    } catch (e) {
      console.error(e);
      Swal.fire("Load error", e.message, "error");
    }
  })();
</script>

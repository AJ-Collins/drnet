            } catch (error) {
                showToast('Connection error', 'error');
            }
        }

        // ==================== DIRECT MESSAGES ====================
        async function loadDMContacts() {
            try {
                const response = await fetch('/api/communication/contacts', {
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });
                const data = await response.json();
                if (data.success) {
                    dmContacts = data.contacts;
                    renderDMContacts();
                }
            } catch (error) {
                console.error('Error loading DM contacts:', error);
            }
        }

        function renderDMContacts() {
            const container = document.getElementById('dmList');
            
            if (dmContacts.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-8">
                        <i class="fas fa-comments text-gray-300 text-3xl mb-2"></i>
                        <p class="text-gray-400 text-xs">No conversations yet</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = dmContacts.map(contact => {
                const isActive = activeView.type === 'direct' && activeView.id == contact.user_id && activeView.userType == contact.user_type;
                const hasUnread = contact.unread_count > 0;
                
                return `
                    <div onclick="switchToDM(${contact.user_id}, '${contact.user_type}')" 
                         class="channel-item px-3 py-2.5 rounded-r-lg cursor-pointer ${isActive ? 'active' : ''}">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xs">
                                    ${contact.name.charAt(0).toUpperCase()}
                                </div>
                                <div class="absolute bottom-0 right-0 w-2.5 h-2.5 status-online rounded-full border-2 border-white"></div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-semibold ${isActive ? 'text-gray-900' : 'text-gray-600'} truncate">
                                    ${escapeHtml(contact.name)}
                                </p>
                                <p class="text-[10px] text-gray-400">
                                    ${contact.user_type === 'admin' ? 'Administrator' : 'Team Member'}
                                </p>
                            </div>
                            ${hasUnread ? `
                                <span class="unread-badge w-5 h-5 bg-emerald-500 text-white text-[10px] font-bold rounded-full flex items-center justify-center">
                                    ${contact.unread_count}
                                </span>
                            ` : ''}
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function switchToDM(userId, userType) {
            // Leave previous room
            if (currentSocketRoom && currentSocketRoom.startsWith('dm_')) {
                socket.emit('leaveDM', { 
                    userId: activeView.id, 
                    userType: activeView.userType 
                });
            } else if (currentSocketRoom && currentSocketRoom.startsWith('channel_')) {
                socket.emit('leaveChannel', activeView.id);
            }

            activeView = { type: 'direct', id: userId, userType: userType };
            
            // Find contact info
            let contact = dmContacts.find(c => c.user_id == userId && c.user_type == userType);
            if (!contact) {
                contact = allStaff.find(s => s.id == userId);
            }
            
            if (!contact) return;

            // Update header
            document.getElementById('chatIcon').innerHTML = `
                <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                    ${contact.name.charAt(0).toUpperCase()}
                </div>
            `;
            document.getElementById('chatTitle').textContent = contact.name;
            document.getElementById('chatDescription').textContent = 'Direct Message';
            const deleteBtn = document.getElementById('deleteChannelBtn');

            const isAdmin = currentUser.role && currentUser.role.toLowerCase() === 'admin';
            if (isAdmin) {
                deleteBtn.innerHTML = '<i class="fas fa-trash mr-1"></i> END CONVERSATION';
                deleteBtn.classList.remove('hidden');
                deleteBtn.onclick = deleteCurrentConversation; // New function
            } else {
                deleteBtn.classList.add('hidden');
            }

            // Load messages
            await loadDirectMessages(userId, userType);
            
            // Re-render DM list
            renderDMContacts();
            
            // Join socket room
            socket.emit('joinDM', { userId, userType });
            currentSocketRoom = `dm_${userId}_${userType}`;
        }

        async function deleteCurrentConversation() {
            const isAdmin = currentUser.role && currentUser.role.toLowerCase() === 'admin';
            
            if (!isAdmin) {
                showToast('Only admins can end conversations', 'error');
                return;
            }
            
            if (!confirm('Are you sure you want to end this conversation? All messages will be deleted.')) {
                return;
            }

            try {
                const response = await fetch(`/api/communication/conversations/${activeView.id}/${activeView.userType}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });

                const data = await response.json();
                if (data.success) {
                    showToast('Conversation ended', 'success');
                    await loadDMContacts(); // Refresh contacts list
                    switchToChannel(1); // Switch to General
                } else {
                    showToast(data.message || 'Failed to end conversation', 'error');
                }
            } catch (error) {
                showToast('Connection error', 'error');
            }
        }

        async function loadDirectMessages(otherUserId, otherUserType) {
            try {
                const response = await fetch(`/api/communication/messages/direct/${otherUserId}/${otherUserType}`, {
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });
                const data = await response.json();
                if (data.success) {
                    renderMessages(data.messages);
                }
            } catch (error) {
                console.error('Error loading direct messages:', error);
            }
        }

        async function loadStaffList() {
            try {
                const response = await fetch('/api/communication/staff', {
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });
                const data = await response.json();
                if (data.success) {
                    allStaff = data.staff.filter(s => s.id != currentUser.id);
                }

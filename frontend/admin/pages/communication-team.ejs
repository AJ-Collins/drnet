        function toggleNewDM() {
            const section = document.getElementById('newDMSection');
            const isHidden = section.classList.contains('hidden');
            
            if (isHidden) {
                renderStaffList();
            }
            
            section.classList.toggle('hidden');
        }

        function renderStaffList() {
            const container = document.getElementById('staffList');
            
            if (allStaff.length === 0) {
                container.innerHTML = '<p class="text-gray-400 text-xs text-center py-2">No staff available</p>';
                return;
            }

            container.innerHTML = allStaff.map(staff => `
                <div onclick="startNewDM(${staff.id}, 'staff')" 
                     class="flex items-center gap-3 p-2 hover:bg-gray-100 rounded-lg cursor-pointer transition-colors">
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xs">
                        ${staff.name.charAt(0).toUpperCase()}
                    </div>
                    <div class="flex-1">
                        <p class="text-sm font-semibold text-gray-700">${escapeHtml(staff.name)}</p>
                        <p class="text-[10px] text-gray-400">${staff.email}</p>
                    </div>
                </div>
            `).join('');

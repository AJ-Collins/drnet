    <script>
        // ==================== GLOBAL STATE ====================
        let socket;
        let currentUser = { id: null, name: '', type: 'staff', role: '' };
        let activeView = { type: 'channel', id: 1 }; // Default to general channel
        let channels = [];
        let dmContacts = [];
        let announcements = [];
        let allStaff = [];
        let typingTimeout;
        let currentSocketRoom = null; // Track current socket room

        // ==================== INITIALIZATION ====================
        window.onload = async () => {
            await fetchCurrentUser();
            initializeSocketIO();
            await loadAllData();
            requestNotificationPermission();
        };

        async function fetchCurrentUser() {
            try {
                const response = await fetch('/api/profile', {
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });
                const data = await response.json();
                
                
                if (data.profile) {
                    currentUser.id = data.profile.id;
                    currentUser.name = data.profile.first_name + ' ' + data.profile.second_name;
                    currentUser.role = data.profile.role_name;
                    
                    const roleLower = data.profile.role_name.toLowerCase();
                    currentUser.type = roleLower === 'admin' ? 'admin' : 'staff';

                    if (roleLower !== 'admin') {
                        
                        const announcementBtn = document.getElementById('createAnnouncementBtn');
                        const channelBtn = document.getElementById('createChannelBtn');
                        const newDmBtn = document.getElementById('createNewDmBtn');
                        
                        if (announcementBtn) {
                            announcementBtn.style.display = 'none';
                        }
                        
                        if (channelBtn) {
                            channelBtn.style.display = 'none';
                        }
                        if (newDmBtn) {
                            newDmBtn.style.display = 'none';
                        }
                    } else {
                        //
                    }
                }
            } catch (error) {
                console.error('Error fetching user:', error);
            }
        }

        async function loadAllData() {
            await Promise.all([
                loadChannels(),
                loadAnnouncements(),
                loadDMContacts(),
                loadStaffList()
            ]);
            
            // Load default channel (General)
            switchToChannel(1);
        }

        // SOCKET.IO 
        function initializeSocketIO() {
            socket = io();

            socket.on('connect', () => {
                if (currentSocketRoom) {
                    rejoinCurrentRoom();
                }
            });

            socket.on('disconnect', () => {
            });

            // Channel events
            socket.on('channelCreated', async (data) => {
                await loadChannels();
                showNotification('New Channel', `${data.name} has been created`);
            });

            socket.on('channelDeleted', async (data) => {
                await loadChannels();
                if (activeView.type === 'channel' && activeView.id == data.channelId) {
                    switchToChannel(1); // Switch to General
                }
            });

            // Listen for new messages on ANY channel
            socket.on('newChannelMessage', (data) => {
                // Only append if we're viewing this channel
                if (activeView.type === 'channel' && activeView.id == data.channelId) {
                    appendMessage(data.message);
                    if (data.message.sender_id != currentUser.id) {
                        showNotification('New Message', data.message.content);
                    }
                }
            });

            // FIXED: Listen for new direct messages
            socket.on('newDirectMessage', (data) => {
                
                // Backend already filtered this message for us, so just check if we're in the right view
                if (activeView.type === 'direct') {
                    // Check if this message belongs to the current conversation
                    const isRelevant = (
                        (data.message.sender_id == activeView.id && data.message.sender_type == activeView.userType) ||
                        (data.message.recipient_id == activeView.id && data.message.recipient_type == activeView.userType)
                    );
                    
                    if (isRelevant) {
                        appendMessage(data.message);
                        // Backend will set isFromMe flag
                        if (!data.message.isFromMe) {
                            showNotification('New Message', data.message.content);
                        }
                    }
                }
                
                loadDMContacts();
            });

            // Typing indicators for channels
            socket.on('userTyping', (data) => {
                if (activeView.type === 'channel' && activeView.id == data.channelId) {
                    if (data.isTyping && data.userId != currentUser.id) {
                        showTypingIndicator(data.userName || 'Someone');
                    } else {
                        hideTypingIndicator();
                    }
                }
            });

            socket.on('userTypingDM', (data) => {
                
                // Backend already validated this is for us
               if (activeView.type === 'direct') {
                    // Check: Is this typing event from the person I'm chatting with?
                    const isChatPartnerTyping = (
                        data.senderId == activeView.id && 
                        data.senderType == activeView.userType
                    );
                    
                    if (isChatPartnerTyping) {
                        if (data.isTyping) {
                            showTypingIndicator(data.senderName || 'Someone');
                        } else {
                            hideTypingIndicator();
                        }
                    }
                }
            });

            socket.on('messageDeleted', (data) => {
                const msgElement = document.querySelector(`[data-message-id="${data.messageId}"]`);
                if (msgElement) {
                    msgElement.remove();
                }
            });

            // Announcement events
            socket.on('newAnnouncement', async (data) => {
                await loadAnnouncements();
                showNotification('New Announcement', data.title);
            });

            socket.on('announcementDeleted', async () => {
                await loadAnnouncements();
            });
        }

        function rejoinCurrentRoom() {
            if (activeView.type === 'channel') {
                socket.emit('joinChannel', activeView.id);
                currentSocketRoom = `channel_${activeView.id}`;
            } else if (activeView.type === 'direct') {
                socket.emit('joinDM', { 
                    userId: activeView.id, 
                    userType: activeView.userType 
                });
                currentSocketRoom = `dm_${activeView.id}_${activeView.userType}`;
            }
        }

        // ==================== CHANNELS ====================
        async function loadChannels() {
            try {
                const response = await fetch('/api/communication/channels', {
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });
                const data = await response.json();
                if (data.success) {
                    channels = data.channels;
                    renderChannels();
                }
            } catch (error) {
                console.error('Error loading channels:', error);
            }
        }

        function renderChannels() {
            const container = document.getElementById('channelsList');
            
            if (channels.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <p class="text-gray-400 text-xs">No channels yet</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = channels.map(channel => {
                const isActive = activeView.type === 'channel' && activeView.id == channel.id;
                return `
                    <div onclick="switchToChannel(${channel.id})" 
                         class="channel-item px-3 py-2.5 rounded-r-lg cursor-pointer ${isActive ? 'active' : ''}">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-hashtag text-sm ${isActive ? 'text-emerald-500' : 'text-gray-400'}"></i>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-semibold ${isActive ? 'text-gray-900' : 'text-gray-600'} truncate">
                                    ${escapeHtml(channel.name)}
                                </p>
                                ${channel.is_default ? '<span class="text-[10px] text-gray-400 uppercase font-bold">Default</span>' : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function switchToChannel(channelId) {
            if (currentSocketRoom && currentSocketRoom.startsWith('channel_')) {
                socket.emit('leaveChannel', activeView.id);
            } else if (currentSocketRoom && currentSocketRoom.startsWith('dm_')) {
                socket.emit('leaveDM', { 
                    userId: activeView.id, 
                    userType: activeView.userType 
                });
            }

            activeView = { type: 'channel', id: channelId };
            
            const channel = channels.find(c => c.id == channelId);
            if (!channel) return;

            // Update header
            document.getElementById('chatIcon').innerHTML = '<i class="fas fa-hashtag text-emerald-500"></i>';
            document.getElementById('chatTitle').textContent = channel.name;
            document.getElementById('chatDescription').textContent = channel.description || 'Channel discussion';

            const deleteBtn = document.getElementById('deleteChannelBtn');
            const isAdmin = currentUser.role && currentUser.role.toLowerCase() === 'admin';
            
            if (isAdmin && !channel.is_default) {
                deleteBtn.innerHTML = '<i class="fas fa-trash mr-1"></i> DELETE CHANNEL';
                deleteBtn.onclick = deleteCurrentChannel;
                deleteBtn.classList.remove('hidden');
            } else {
                deleteBtn.classList.add('hidden');
            }

            // Load messages
            await loadChannelMessages(channelId);
            
            // Re-render channels to update active state
            renderChannels();
            
            // Join socket room
            socket.emit('joinChannel', channelId);
            currentSocketRoom = `channel_${channelId}`;
        }

        async function loadChannelMessages(channelId) {
            try {
                const response = await fetch(`/api/communication/messages/channel/${channelId}`, {
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });
                const data = await response.json();
                if (data.success) {
                    renderMessages(data.messages);
                }
            } catch (error) {
                console.error('Error loading messages:', error);
            }
        }

        function toggleCreateChannel() {
            const form = document.getElementById('createChannelForm');
            form.classList.toggle('hidden');
            if (!form.classList.contains('hidden')) {
                document.getElementById('channelName').focus();
            }
        }

        async function submitChannel() {
            const name = document.getElementById('channelName').value.trim();
            const description = document.getElementById('channelDescription').value.trim();

            if (!name) {
                showToast('Channel name is required', 'error');
                return;
            }

            try {
                const response = await fetch('/api/communication/channels', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('token')}`
                    },
                    body: JSON.stringify({ name, description })
                });

                const data = await response.json();
                if (data.success) {
                    document.getElementById('channelName').value = '';
                    document.getElementById('channelDescription').value = '';
                    toggleCreateChannel();
                    showToast('Channel created successfully', 'success');
                    await loadChannels();
                } else {
                    showToast(data.message || 'Failed to create channel', 'error');
                }
            } catch (error) {
                showToast('Connection error', 'error');
            }
        }

        async function deleteCurrentChannel() {
            const isAdmin = currentUser.role && currentUser.role.toLowerCase() === 'admin';
            
            if (!isAdmin) {
                showToast('Only admins can delete channels', 'error');
                return;
            }
            
            if (!confirm('Are you sure you want to delete this channel? All messages will be lost.')) {
                return;
            }

            try {
                const response = await fetch(`/api/communication/channels/${activeView.id}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
                });

                const data = await response.json();
                if (data.success) {
                    showToast('Channel deleted', 'success');
                    switchToChannel(1); // Switch to General
                } else {
                    showToast(data.message || 'Failed to delete channel', 'error');

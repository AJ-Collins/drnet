<style>
        * { font-family: 'Inter', sans-serif; }
        
        body { 
            background: #f0f2f5;
            overflow: hidden;
        }

        /* Scrollbar Styling */
        .custom-scroll::-webkit-scrollbar { width: 6px; height: 6px; }
        .custom-scroll::-webkit-scrollbar-track { background: transparent; }
        .custom-scroll::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 3px; }
        .custom-scroll::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

        /* WhatsApp-style Message Bubbles */
        .message-bubble-me {
            background: #d9fdd3;
            border-radius: 8px 8px 2px 8px;
            position: relative;
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            min-width: 100px;
        }

        .message-bubble-other {
            background: #ffffff;
            border-radius: 8px 8px 8px 2px;
            position: relative;
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            min-width: 100px;
        }
        
        .message-bubble-me::before {
            content: '';
            position: absolute;
            right: -8px;
            top: 0;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 0 13px 9px;
            border-color: transparent transparent #d9fdd3 transparent;
        }
        
        .message-bubble-other::before {
            content: '';
            position: absolute;
            left: -8px;
            top: 0;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 9px 13px 0;
            border-color: transparent #ffffff transparent transparent;
        }

        /* Chat Background Pattern (WhatsApp-like) */
        .chat-bg {
            background-color: #efeae2;
            background-image: 
                repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.03) 35px, rgba(255,255,255,.03) 70px),
                repeating-linear-gradient(-45deg, transparent, transparent 35px, rgba(255,255,255,.03) 35px, rgba(255,255,255,.03) 70px);
        }

        /* Channel & Contact Items */
        .channel-item {
            transition: all 0.15s ease;
            border-left: 3px solid transparent;
        }
        
        .channel-item:hover {
            background: #f5f6f6;
            border-left-color: #10b981;
        }
        
        .channel-item.active {
            background: #ebebeb;
            border-left-color: #10b981;
            font-weight: 600;
        }

        /* Announcement Card */
        .announcement-card {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border-radius: 12px;
            position: relative;
            overflow: hidden;
            border: 1px solid #f0e5b5;
        }
        
        .announcement-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transform: translate(30%, -30%);
        }

        /* Announcement expansion */
        .announcement-content {
            max-height: 3.6em; /* ~2 lines */
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        
        .announcement-content.expanded {
            max-height: none;
        }

        /* Unread Badge */
        .unread-badge {
            background: #25d366;
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: .7; }
        }

        /* Typing Indicator */
        .typing-dot {
            width: 8px;
            height: 8px;
            background: #64748b;
            border-radius: 50%;
            animation: typing 1.4s infinite;
        }
        
        .typing-dot:nth-child(2) { animation-delay: 0.2s; }
        .typing-dot:nth-child(3) { animation-delay: 0.4s; }

        @keyframes typing {
            0%, 60%, 100% { transform: translateY(0); }
            30% { transform: translateY(-10px); }
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .sidebar-mobile {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            
            .sidebar-mobile.open {
                transform: translateX(0);
            }
        }

        /* Input Focus */
        .message-input:focus {
            outline: none;
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }

        /* Status Indicator */
        .status-online { background: #25d366; }
        .status-busy { background: #ef4444; }
        .status-away { background: #f59e0b; }
        .status-offline { background: #94a3b8; }

        /* Animation */
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Create Channel Form */
        .create-form {
            background: #f7f8fa;
            border-radius: 12px;
            border: 1px solid #e1e4e8;
        }

        /* Message Time */
        .msg-time {
            font-size: 11px;
            color: rgba(0, 0, 0, 0.45);
        }

        /* Delete Button */
        .delete-msg-btn {
            opacity: 0;
            transition: opacity 0.2s;
        }

        .message-group:hover .delete-msg-btn {
            opacity: 1;
        }

<style>
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif; 
        }

        .animate-fade-in { 
            animation: fadeIn 0.3s ease-out forwards; 
            opacity: 0;
        }

        @keyframes fadeIn { 
            from { opacity: 0; transform: translateY(10px); } 
            to { opacity: 1; transform: translateY(0); } 
        }

        .animate-fade-up {
            animation: fadeUp 0.4s ease-out forwards;
            opacity: 0;
        }

        @keyframes fadeUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .spinner {
            border: 2px solid rgba(255,255,255,0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            animation: spin 0.6s linear infinite;
            display: inline-block;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .tab-button.active {
            border-bottom: 3px solid #1e293b;
            color: #1e293b;
            font-weight: 800;
        }

        .stat-card {
            transition: all 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }

        .input-field { 
            background: #f1f5f9; 
            border: 1px solid #cbd5e1; 
            transition: all 0.2s; 
        }
        
        .input-field:focus { 
            background: white; 
            border-color: #0d9488; 
            box-shadow: 0 0 0 4px rgba(13, 148, 136, 0.1); 
        }

        .client-row {
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .client-row:hover {
            background: #f8fafc !important;
        }

        .client-row.selected {
            background: #e0f2fe !important;
            border-left: 4px solid #0ea5e9;
        }
    </style>
    
    <!-- Toast Container -->
    <div id="toastContainer" class="fixed top-5 right-5 z-[100] space-y-3"></div>

    <!-- Header -->
    <div class="bg-white border-b border-slate-200">
        <div class="px-8 py-4">
            <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">
                
                <div class="min-w-[300px]">
                    <h1 class="text-2xl font-black text-slate-800 tracking-tight">Onboarding Management</h1>
                    <p class="text-[12px] text-slate-500 font-medium">Manage onboardings and payouts</p>
                </div>

                <div class="flex flex-1 items-center justify-end gap-4">
                    <div class="bg-slate-50 border border-slate-200 rounded-lg px-5 py-3 flex items-center gap-6 min-w-[210px] min-h-[100px]">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Total</p>
                            <h2 id="totalClients" class="text-xl font-black text-slate-900 leading-none">0</h2>
                        </div>
                        <div class="border-l border-slate-200 pl-6">
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Growth</p>
                            <div class="flex items-baseline gap-1">
                                <h2 id="monthlyClients" class="text-lg font-black text-slate-900 leading-none">0</h2>
                                <span class="text-[9px] font-extrabold text-emerald-600">Monthly</span>
                            </div>
                        </div>
                    </div>

                    <div class="bg-slate-50 border border-slate-200 rounded-lg px-5 py-3 flex items-center gap-6 min-w-[240px] min-h-[100px]">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Commissions</p>
                            <h2 id="totalCommissions" class="text-xl font-black text-slate-900 leading-none">KES 0</h2>
                        </div>
                        <div class="border-l border-slate-200 pl-6">
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Unpaid</p>
                            <h2 id="pendingCommissions" class="text-lg font-black text-amber-600 leading-none">KES 0</h2>
                        </div>
                    </div>

                    <div class="bg-slate-50 border border-slate-200 rounded-lg px-5 py-3 flex flex-col justify-center min-w-[240px]">
                        <div class="flex justify-between items-center mb-2">
                            <div class="flex flex-col">
                                <span class="text-[9px] font-black text-slate-400 uppercase tracking-tight">Paid Out</span>
                                <span id="paidCommissions" class="text-sm font-black text-slate-800">KES 0</span>
                            </div>
                            <div class="h-6 w-px bg-slate-200 mx-2"></div>
                            <div class="flex flex-col text-right">
                                <span class="text-[9px] font-black text-slate-400 uppercase tracking-tight">Awaiting</span>
                                <span id="unpaidCommissions" class="text-sm font-black text-slate-800">KES 0</span>
                            </div>
                        </div>
                        <div class="h-px bg-slate-200 w-full mb-2"></div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Staff Count</p>
                            </div>
                            <p id="staffCount" class="text-sm font-black text-slate-900">0</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="px-8 border-t border-slate-200">
            <div class="flex gap-6">
                <button onclick="switchTab('clients', event)" class="tab-button active px-4 py-3 text-sm font-bold text-slate-500 border-b-3 border-transparent transition">
                    <i class="fas fa-users mr-2"></i>Client Management
                </button>
                <button onclick="switchTab('commissions', event)" class="tab-button px-4 py-3 text-sm font-bold text-slate-500 border-b-3 border-transparent transition">
                    <i class="fas fa-dollar-sign mr-2"></i>Commissions
                </button>
                <button onclick="switchTab('staff-earnings', event)" class="tab-button px-4 py-3 text-sm font-bold text-slate-500 border-b-3 border-transparent transition">
                    <i class="fas fa-chart-bar mr-2"></i>Staff Earnings
                </button>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="h-screen flex flex-col overflow-hidden">
        
        <!-- CLIENTS TAB -->
        <div id="clientsTab" class="tab-content flex-1 flex flex-col lg:flex-row overflow-hidden">
            
            <!-- Clients Table Container -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <div class="bg-white border-b border-slate-200">
                    <div class="p-4 bg-slate-50 flex justify-between items-center">
                        <h2 class="text-lg font-black text-slate-800">All Client Onboardings</h2>
                        <input 
                            type="text" 
                            id="searchClients" 
                            onkeyup="filterClients()" 
                            placeholder="Search by name, phone, email..." 
                            class="px-4 py-2 border border-slate-300 rounded-lg text-sm outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500"
                        >
                    </div>
                </div>
                
                <div class="flex-1 overflow-y-auto bg-white">
                    <table class="w-full">
                        <thead class="bg-slate-800 text-slate-200 sticky top-0">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Client Details</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Contact</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Location</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Package</th>                                
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Onboarded By</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Status</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Date</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="clientsTableBody" class="divide-y divide-slate-100">
                            <tr>
                                <td colspan="9" class="px-6 py-12 text-center text-slate-400">
                                    <i class="fas fa-circle-notch fa-spin text-2xl mb-2"></i>
                                    <p class="text-sm font-semibold">Loading clients...</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- RIGHT SIDE PANEL - CLIENT FORM -->
            <aside id="clientFormContainer" class="hidden w-full lg:w-1/3 bg-slate-50 border-l border-slate-200 flex flex-col overflow-hidden">
                <div class="p-4 bg-slate-800 text-white flex justify-between items-center flex-shrink-0">
                    <div>
                        <h2 class="text-lg font-black tracking-tight">Register New Client</h2>
                        <p class="text-[10px] text-slate-400 mt-0.5">Create a new client account from onboarding information</p>
                    </div>
                    <button 
                        onclick="closeClientForm()" 
                        class="w-8 h-8 rounded-full hover:bg-slate-700 flex items-center justify-center transition"
                    >
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="flex-1 overflow-y-auto p-6">
                    <form id="createClientForm" onsubmit="handleCreateClient(event)" class="space-y-6">
                        
                        <!-- Personal Details -->
                        <div>
                            <h3 class="text-sm font-black text-slate-700 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="fas fa-user text-teal-500"></i> Personal Information
                            </h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">First Name *</label>
                                    <input 
                                        type="text" 
                                        id="newFirstName"
                                        required 
                                        placeholder="John" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Last Name *</label>
                                    <input 
                                        type="text" 
                                        id="newLastName"
                                        required 
                                        placeholder="Doe" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div>
                            </div>
                        </div>

                        <!-- Contact Details -->
                        <div>
                            <h3 class="text-sm font-black text-slate-700 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="fas fa-phone text-teal-500"></i> Contact Information
                            </h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Email *</label>
                                    <input 
                                        type="email" 
                                        id="newEmail"
                                        required 
                                        placeholder="client@example.com" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Phone Number *</label>
                                    <input 
                                        type="tel" 
                                        id="newPhone"
                                        required 
                                        placeholder="0712345678" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div>
                                <!-- <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">ID Number / Passport</label>
                                    <input 
                                        type="text" 
                                        id="newIdNumber"
                                        placeholder="12345678" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div> -->
                            </div>
                        </div>

                        <!-- Location Details -->
                        <div>
                            <h3 class="text-sm font-black text-slate-700 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="fas fa-map-marker-alt text-teal-500"></i> Location & Address
                            </h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Location *</label>
                                    <input 
                                        type="text" 
                                        id="newLocation"
                                        required 
                                        placeholder="Nairobi, Westlands" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Installation Address *</label>
                                    <input 
                                        type="text" 
                                        id="newAddress"
                                        required 
                                        placeholder="ABC Plaza, 3rd Floor" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none"
                                    >
                                </div>
                            </div>
                        </div>

                        <!-- Security -->
                        <div>
                            <h3 class="text-sm font-black text-slate-700 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="fas fa-lock text-teal-500"></i> Account Security
                            </h3>
                            <div>
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Password *</label>
                                <div class="relative">
                                    <input 
                                        type="password" 
                                        id="newPassword"
                                        required 
                                        placeholder="Set secure password" 
                                        class="w-full px-4 py-3 rounded-lg input-field text-sm font-bold outline-none pr-12"
                                    >
                                    <button 
                                        type="button" 
                                        onclick="toggleNewPassVisibility()" 
                                        class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600"
                                    >
                                        <i class="fas fa-eye" id="newPassIcon"></i>
                                    </button>
                                </div>
                                <p class="text-xs text-slate-500 mt-2">
                                    <i class="fas fa-info-circle mr-1"></i>
                                    Password must be at least 6 characters
                                </p>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="flex flex-col gap-3 pt-4">
                            <button 
                                type="submit" 
                                id="createClientBtn"
                                class="w-full bg-slate-900 text-white py-4 rounded-lg font-bold hover:bg-slate-800 transition shadow-lg flex justify-center items-center gap-3"
                            >
                                <i class="fas fa-user-check text-lg"></i>
                                <span>Create Client Account</span>
                            </button>
                            <button 
                                type="button"
                                onclick="closeClientForm()"
                                class="mt-4 w-full flex justify-center items-center gap-2 text-sm font-semibold text-slate-500 hover:text-red-600 transition"
                            >
                                <i class="fas fa-times text-xs"></i>
                                <span>Cancel</span>
                            </button>
                        </div>
                    </form>
                </div>
            </aside>

            <!-- COMMISSION FORM -->
            <aside id="commissionFormContainer" class="hidden w-full lg:w-1/3 bg-slate-50 border-l border-slate-200 flex flex-col overflow-hidden">
                <div class="p-4 bg-emerald-700 text-white flex justify-between items-center flex-shrink-0">
                    <div>
                        <h2 class="text-lg font-black tracking-tight">Award Commission</h2>
                        <p class="text-[10px] text-emerald-200 mt-0.5">Assign commission for client onboarding</p>
                    </div>
                    <button 
                        onclick="closeCommissionForm()" 
                        class="w-8 h-8 rounded-full hover:bg-emerald-600 flex items-center justify-center transition"
                    >
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="flex-1 overflow-y-auto p-6">
                    <!-- Client Info Display -->
                    <div class="bg-white rounded-lg p-5 mb-6 border border-slate-200 shadow-sm">
                        <div class="flex items-center gap-4">
                            <div class="w-14 h-14 rounded-full bg-indigo-100 flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-user text-indigo-600 text-xl"></i>
                            </div>

                            <div class="flex-1">
                                <p class="text-sm font-black text-slate-800" id="commClientName">-</p>
                                <p class="text-xs text-slate-500 mt-1">
                                    <i class="fas fa-envelope mr-1"></i>
                                    <span id="commClientEmail">-</span>
                                </p>
                                <p class="text-xs text-slate-500 mt-0.5">
                                    <i class="fas fa-user-tie mr-1"></i>
                                    Onboarded By: <span class="font-bold" id="commStaffName">-</span>
                                </p>
                            </div>

                            <div class="text-right px-4 border-l border-slate-100">
                                <p class="text-[10px] uppercase tracking-wider text-slate-400 font-bold mb-1">Onboard Type</p>
                                <div id="commOnboardType" class="text-xs font-bold py-1 px-3 rounded-full bg-slate-100 text-slate-600 inline-block">
                                    -
                                </div>
                            </div>
                        </div>
                    </div>

                    <form id="awardCommissionForm" onsubmit="handleAwardCommission(event)" class="space-y-6">
                        <!-- Hidden client ID -->
                        <input type="hidden" id="commissionClientId" value="">

                        <div>
                            <h3 class="text-sm font-black text-slate-700 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <i class="fas fa-check-square text-teal-500"></i> Onboard Type *
                            </h3>
                            <div class="space-y-3">
                                <label class="flex items-center gap-3 p-3 bg-white rounded-lg border-2 border-slate-200 cursor-pointer hover:border-teal-300 transition" id="withRouterLabel">
                                    <input 
                                        type="checkbox" 
                                        id="withRouter" 
                                        class="w-5 h-5 text-teal-600 rounded focus:ring-2 focus:ring-teal-500 cursor-pointer"
                                        onchange="handleCommissionTypeToggle('withRouter')"
                                    >
                                    <div class="flex-1">
                                        <span class="text-sm font-bold text-slate-700">Full Installation</span>
                                        <p class="text-xs text-slate-500 mt-0.5">Package & Router</p>
                                    </div>
                                    <i class="fas fa-wifi text-teal-500"></i>
                                </label>
                                
                                <label class="flex items-center gap-3 p-3 bg-white rounded-lg border-2 border-slate-200 cursor-pointer hover:border-teal-300 transition" id="packageOnlyLabel">
                                    <input 
                                        type="checkbox" 
                                        id="packageOnly" 
                                        class="w-5 h-5 text-teal-600 rounded focus:ring-2 focus:ring-teal-500 cursor-pointer"
                                        onchange="handleCommissionTypeToggle('packageOnly')"
                                    >
                                    <div class="flex-1">
                                        <span class="text-sm font-bold text-slate-700">Partial Installation</span>
                                        <p class="text-xs text-slate-500 mt-0.5">Package Only</p>
                                    </div>
                                    <i class="fas fa-box text-teal-500"></i>
                                </label>
                            </div>
                            <p class="text-xs text-rose-600 mt-2 font-medium hidden" id="commissionTypeError">
                                <i class="fas fa-exclamation-circle mr-1"></i> Please select at least one commission type
                            </p>
                        </div>

                        <!-- Amount Input -->
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase mb-3 flex items-center gap-2">
                                <i class="fas fa-coins text-emerald-600"></i> Commission Amount (KES)
                            </label>
                            <input 
                                type="number" 
                                id="commissionAmount"
                                required 
                                min="0"
                                step="0.01"
                                placeholder="5000.00" 
                                class="w-full px-2 py-2 rounded-lg border-2 border-slate-300 text-lg font-black outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition"
                            >
                            <p class="text-xs text-slate-500 mt-3 bg-slate-100 p-3 rounded-lg">
                                <i class="fas fa-info-circle mr-1 text-slate-400"></i>
                                Enter the commission amount to award for this onboarding
                            </p>
                        </div>

                        <!-- Submit Button -->
                        <div class="flex flex-col gap-3 pt-4">
                            <button 
                                type="submit" 
                                id="awardCommissionBtn"
                                class="w-full bg-emerald-600 text-white py-4 rounded-lg font-bold hover:bg-emerald-700 transition shadow-lg flex justify-center items-center gap-3"
                            >
                                <i class="fas fa-check-circle text-lg"></i>
                                <span>Award Commission</span>
                            </button>
                            <button 
                                type="button" 
                                onclick="closeCommissionForm()"
                                class="w-full flex justify-center items-center gap-2 text-sm font-semibold text-slate-500 hover:text-red-600 transition"
                            >
                                <i class="fas fa-times text-xs"></i>
                                <span>Cancel</span>
                            </button>
                        </div>
                    </form>
                </div>
            </aside>

        </div>

        <!-- COMMISSIONS TAB -->
        <div id="commissionsTab" class="tab-content hidden flex-1 p-8 overflow-y-auto">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-4 bg-slate-50 border-b border-slate-200 flex justify-between items-center">
                    <div>
                        <h2 class="text-lg font-black text-slate-800">Commission Ledger</h2>
                        <p class="text-xs text-slate-500 mt-1">Track and manage all commission payouts</p>
                    </div>
                    <div class="flex gap-3">
                        <select id="commissionStatusFilter" onchange="filterCommissions()" class="px-4 py-2 border border-slate-300 rounded-lg text-sm font-bold outline-none focus:ring-2 focus:ring-slate-500">
                            <option value="all">All Statuses</option>
                            <option value="unpaid">Unpaid</option>
                            <option value="paid">Paid</option>
                        </select>
                    </div>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-800 text-slate-200">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Commission ID</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Staff Member</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Client</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Type</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Amount</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Status</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Awarded Date</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="commissionsTableBody" class="divide-y divide-slate-100">
                            <tr>
                                <td colspan="7" class="px-6 py-12 text-center text-slate-400">
                                    <i class="fas fa-circle-notch fa-spin text-2xl mb-2"></i>
                                    <p class="text-sm font-semibold">Loading commissions...</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- STAFF EARNINGS TAB -->
        <div id="staffEarningsTab" class="tab-content hidden flex-1 p-8 overflow-y-auto">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-4 bg-slate-50 border-b border-slate-200">
                    <h2 class="text-lg font-black text-slate-800">Staff Earnings Summary</h2>
                    <p class="text-xs text-slate-500 mt-1">Overview of earnings per staff member</p>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-800 text-slate-200">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Staff Member</th>

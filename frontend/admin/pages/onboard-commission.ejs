        function renderCommissions(commissions) {
            const tbody = document.getElementById('commissionsTableBody');
            
            if (commissions.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-slate-400">
                            <i class="fas fa-coins text-3xl mb-2"></i>
                            <p class="text-sm font-semibold">No commissions found</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = commissions.map(comm => {
                const statusClass = comm.status === 'paid' 
                    ? 'bg-emerald-100 text-emerald-700 border-emerald-200'
                    : 'bg-amber-100 text-amber-700 border-amber-200';
                
                return `
                    <tr class="hover:bg-slate-50 transition">
                        <td class="px-6 py-4">
                            <span class="font-mono text-sm font-bold text-slate-700">#${comm.id}</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center text-xs font-bold text-indigo-700">
                                    ${getInitials(comm.staff_fname, comm.staff_sname)}
                                </div>
                                <span class="text-sm font-semibold text-slate-800">${comm.staff_fname} ${comm.staff_sname}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm text-slate-600">${comm.client_fname} ${comm.client_sname}</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex flex-col gap-1">
                                ${
                                comm.with_router == 1 && comm.package_only == 1
                                    ? '<span class="inline-flex items-center gap-1 px-2 py-0.5 bg-yellow-100 text-yellow-700 rounded text-xs font-bold"><i class="fas fa-exclamation-triangle"></i> Full Installation</span>'
                                    : comm.with_router == 1
                                    ? '<span class="inline-flex items-center gap-1 px-2 py-0.5 bg-green-100 text-green-700 rounded text-xs font-bold"><i class="fas fa-tools"></i> Full Installation</span>'
                                    : comm.package_only == 1
                                    ? '<span class="inline-flex items-center gap-1 px-2 py-0.5 bg-blue-100 text-blue-700 rounded text-xs font-bold"><i class="fas fa-box-open"></i> Partial Installation</span>'
                                    : '<span class="text-xs text-slate-400">-</span>'
                                }
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm font-bold text-emerald-600">KES ${parseFloat(comm.amount).toLocaleString()}</span>
                        </td>
                        <td class="px-6 py-4">
                            <select 
                                onchange="updateCommissionStatus(${comm.id}, this.value)"
                                class="px-3 py-1.5 rounded-lg text-xs font-bold border outline-none cursor-pointer ${statusClass}"
                            >
                                <option value="unpaid" ${comm.status === 'unpaid' ? 'selected' : ''}>Unpaid</option>
                                <option value="paid" ${comm.status === 'paid' ? 'selected' : ''}>Paid</option>
                            </select>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-xs font-medium text-slate-500">${formatDate(comm.awarded_at)}</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex gap-2">
                                ${comm.status === 'unpaid' ? `
                                    <button onclick="openCommissionFormEdit(${comm.id})" class="px-3 py-1.5 bg-blue-100 text-blue-700 rounded-lg text-xs font-bold hover:bg-blue-200 transition">
                                        <i class="fas fa-edit mr-1"></i>Edit
                                    </button>
                                    <button onclick="markAsPaid(${comm.id})" class="px-3 py-1.5 bg-emerald-100 text-emerald-700 rounded-lg text-xs font-bold hover:bg-emerald-200 transition">
                                        <i class="fas fa-check mr-1"></i>Mark Paid
                                    </button>
                                    <button onclick="deleteCommission(${comm.id})" class="text-slate-400 hover:text-rose-600 transition" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                ` : `
                                    <span class="text-xs text-slate-400"><i class="fas fa-check-circle mr-1"></i>Paid</span>
                                `}
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Filter Commissions
        function filterCommissions() {
            const statusFilter = document.getElementById('commissionStatusFilter').value;
            
            let filtered = allCommissions;
            if (statusFilter !== 'all') {
                filtered = allCommissions.filter(comm => comm.status === statusFilter);
            }
            
            renderCommissions(filtered);
        }

        // Update Commission Status
        async function updateCommissionStatus(id, newStatus) {
            try {
                const res = await fetch(`/api/onboard/commissions/${id}/pay`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status: newStatus })
                });
                
                if (res.ok) {
                    showToast(`Commission marked as ${newStatus}`, 'success');
                    await loadCommissions();
                    await loadStaffEarnings();
                    await loadClients();
                } else {
                    throw new Error('Failed to update commission');
                }
            } catch (error) {
                console.error('Error updating commission:', error);
                showToast('Failed to update commission', 'error');
            }
        }

        // Mark Commission as Paid
        async function markAsPaid(id) {
            await updateCommissionStatus(id, 'paid');
        }

        // Load Staff Earnings
        async function loadStaffEarnings() {
            try {
                const res = await fetch('/api/onboard/commissions/summary');
                if (!res.ok) throw new Error(`HTTP error! status: ${res.status}`);
                
                const text = await res.text();
                if (!text || text.trim() === '') {
                    console.warn('Empty response from server');
                    staffEarnings = [];
                    renderStaffEarnings([]);
                    
                    const staffEl = document.getElementById('staffCount');
                    if(staffEl) staffEl.innerText = '0';
                    return;
                }
                
                staffEarnings = JSON.parse(text);
                renderStaffEarnings(staffEarnings);
                
                const staffEl = document.getElementById('staffCount');
                if(staffEl) staffEl.innerText = staffEarnings.length;
            } catch (error) {
                console.error('Error loading staff earnings:', error);
                showToast('Failed to load summary', 'error');
                
                const tbody = document.getElementById('staffEarningsTableBody');
                tbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center text-red-400">
                            <i class="fas fa-exclamation-triangle text-3xl mb-2"></i>
                            <p class="text-sm font-semibold">Error loading staff earnings</p>
                            <p class="text-xs mt-2">${error.message}</p>
                        </td>
                    </tr>
                `;
            }
        }

        // Render Staff Earnings
        function renderStaffEarnings(earnings) {
            const tbody = document.getElementById('staffEarningsTableBody');
            
            if (earnings.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center text-slate-400">
                            <i class="fas fa-chart-bar text-3xl mb-2"></i>
                            <p class="text-sm font-semibold">No earnings data available</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = earnings.map(staff => {
                const totalEarned = parseFloat(staff.pending_payout || 0) + parseFloat(staff.total_paid || 0);
                
                return `
                    <tr class="hover:bg-slate-50 transition">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-sm font-bold text-indigo-700">
                                    ${getInitials(staff.first_name, staff.second_name)}
                                </div>
                                <span class="text-sm font-bold text-slate-800">${staff.first_name} ${staff.second_name}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm font-bold text-amber-600">KES ${parseFloat(staff.pending_payout || 0).toLocaleString()}</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm font-bold text-emerald-600">KES ${parseFloat(staff.total_paid || 0).toLocaleString()}</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-sm font-bold text-purple-600">KES ${totalEarned.toLocaleString()}</span>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Utility Functions
        function getInitials(firstName, lastName) {
            const first = firstName ? firstName.charAt(0).toUpperCase() : '';
            const last = lastName ? lastName.charAt(0).toUpperCase() : '';
            return first + last || '?';
        }

        function getStatusConfig(status) {
            switch (status) {
                case 'active':
                    return { css: 'bg-emerald-50 text-emerald-700 border-emerald-200' };
                case 'rejected':
                    return { css: 'bg-rose-50 text-rose-700 border-rose-200' };
                case 'inactive':
                    return { css: 'bg-slate-50 text-slate-600 border-slate-200' };
                default:
                    return { css: 'bg-amber-50 text-amber-700 border-amber-200' };
            }
        }

        function formatDate(dateStr) {
            if (!dateStr) return 'N/A';
            const date = new Date(dateStr);
            return date.toLocaleDateString('en-GB', { 
                day: '2-digit', 
                month: 'short', 
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function showToast(msg, type = 'success') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            const bgColor = type === 'error' ? 'bg-rose-600' : 'bg-emerald-600';
            const icon = type === 'error' ? 'fa-exclamation-circle' : 'fa-check-circle';
            const title = type === 'error' ? 'Error' : 'Success';
            
            toast.className = `${bgColor} text-white p-4 rounded-xl shadow-2xl min-w-[280px] animate-fade-in`;
            toast.innerHTML = `
                <div class="flex items-start gap-3">
                    <i class="fas ${icon} text-lg mt-0.5"></i>
                    <div>
                        <span class="text-xs font-black uppercase tracking-wider block">${title}</span>
                        <span class="text-sm font-semibold">${msg}</span>
                    </div>
                </div>
            `;
            
            container.appendChild(toast);
            
            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => toast.remove(), 500);
            }, 4000);
        }
    </script>
    <script>
        let allClients = [];
        let allCommissions = [];
        let allPackages = [];
        let staffEarnings = [];
        let selectedClientRow = null;
        let selectedClientForCommission = null;
        let selectedOnboardClientId = null;

        const loadedTabs = {
            clients: false,
            commissions: false,
            staff: false
        };

        // Initialize
        window.onload = async () => {
            try {
                await Promise.all([
                    loadPackages(),
                    loadCommissions(),
                    loadStaffEarnings()
                ]);
                
                await switchTab('clients', null);
            } catch (error) {
                console.error('Error during initialization:', error);
                showToast('Error loading dashboard data', 'error');
            }
        };

        // Tab Switching
        async function switchTab(tab, evt) {
            const clickedBtn = evt ? evt.target.closest('.tab-button') : document.querySelector(`[onclick*="switchTab('${tab}',"]`);
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            if(clickedBtn) clickedBtn.classList.add('active');

            document.querySelectorAll('.tab-content').forEach(content => content.classList.add('hidden'));
            
            if (tab === 'clients') {
                document.getElementById('clientsTab').classList.remove('hidden');
                if (!loadedTabs.clients) {
                    await loadClients();
                    loadedTabs.clients = true;
                }
            } 
            else if (tab === 'commissions') {
                document.getElementById('commissionsTab').classList.remove('hidden');
                if (!loadedTabs.commissions) {
                    await loadCommissions();
                    loadedTabs.commissions = true;
                }
            } 
            else if (tab === 'staff-earnings') {
                document.getElementById('staffEarningsTab').classList.remove('hidden');
                if (!loadedTabs.staff) {
                    await loadStaffEarnings();
                    loadedTabs.staff = true;
                }
            }
        }

        // Open Client Form
        function openClientForm(client) {
            selectedOnboardClientId = client.id;
            closeCommissionForm();
            
            const formContainer = document.getElementById('clientFormContainer');
            
            document.getElementById('newFirstName').value = client.first_name || '';
            document.getElementById('newLastName').value = client.second_name || '';
            document.getElementById('newEmail').value = client.email || '';
            document.getElementById('newPhone').value = client.phone || '';
            // document.getElementById('newIdNumber').value = client.id_number || '';
            document.getElementById('newLocation').value = client.location || '';
            document.getElementById('newAddress').value = client.address || '';
            document.getElementById('newPassword').value = '';
            
            formContainer.classList.remove('hidden');
            formContainer.classList.add('flex');
        }

        // Close Client Form
        function closeClientForm() {
            const formContainer = document.getElementById('clientFormContainer');
            formContainer.classList.add('hidden');
            formContainer.classList.remove('flex');
            
            if (selectedClientRow) {
                selectedClientRow.classList.remove('selected');
                selectedClientRow = null;
            }
            
            document.getElementById('createClientForm').reset();
        }

        // Open Commission Form
        function openCommissionForm(client) {
            // Close client form if open
            closeClientForm();
            
            selectedClientForCommission = client;
            
            document.getElementById('commClientName').textContent = `${client.first_name} ${client.second_name}`;
            document.getElementById('commClientEmail').textContent = client.email || 'No email';
            document.getElementById('commStaffName').textContent = `${client.staff_first_name} ${client.staff_second_name}`;
            document.getElementById('commissionClientId').value = client.id;
            document.getElementById('commissionAmount').value = '';
            
            const typeBadge = document.getElementById('commOnboardType');

            if (client.with_router === 1) {
                typeBadge.textContent = "Full Installation";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-green-100 text-green-700 inline-block";
            } else if (client.package_only === 1) {
                typeBadge.textContent = "Partial Installation";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-emerald-100 text-emerald-700 inline-block";
            } else {
                typeBadge.textContent = "Full Installation";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-slate-100 text-slate-600 inline-block";
            }
            
            const formContainer = document.getElementById('commissionFormContainer');
            formContainer.classList.remove('hidden');
            formContainer.classList.add('flex');
        }

        // Open Commission Form for Editing
        async function openCommissionFormEdit(commissionId) {
            const commission = allCommissions.find(c => c.id === commissionId);
            if (!commission) {
                showToast('Commission not found', 'error');
                return;
            }
            
            await switchTab('clients', null);

            // Create a client object from commission data
            const client = {
                id: commission.onboard_id,
                first_name: commission.client_fname,
                second_name: commission.client_sname,
                email: commission.client_email || 'No email',
                staff_first_name: commission.staff_fname,
                staff_second_name: commission.staff_sname,
                packageOnly: commission.package_only,
                with_router: commission.with_router
            };
            
            // Populate the form
            closeClientForm();
            selectedClientForCommission = client;
            
            document.getElementById('commClientName').textContent = `${client.first_name} ${client.second_name}`;
            document.getElementById('commClientEmail').textContent = client.email;
            document.getElementById('commStaffName').textContent = `${client.staff_first_name} ${client.staff_second_name}`;
            document.getElementById('commissionClientId').value = commissionId; // Store commission ID instead
            document.getElementById('commissionAmount').value = commission.amount;
            document.getElementById('packageOnly').checked = commission.package_only == 1;
            document.getElementById('withRouter').checked = commission.with_router == 1;

            // Update the badge display based on the commission type
            const typeBadge = document.getElementById('commOnboardType');
            if (commission.with_router == 1 && commission.package_only == 1) {
                typeBadge.textContent = "Both Types";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-yellow-100 text-yellow-700 inline-block";
            } else if (commission.with_router == 1) {
                typeBadge.textContent = "Full Installation";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-green-100 text-green-700 inline-block";
            } else if (commission.package_only == 1) {
                typeBadge.textContent = "Partial Installation";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-emerald-100 text-emerald-700 inline-block";
            } else {
                typeBadge.textContent = "Not Set";
                typeBadge.className = "text-xs font-bold py-1 px-3 rounded-full bg-slate-100 text-slate-600 inline-block";
            }
            
            // Mark as edit mode
            document.getElementById('awardCommissionForm').dataset.editMode = 'true';
            document.getElementById('awardCommissionForm').dataset.commissionId = commissionId;
            document.getElementById('awardCommissionBtn').innerHTML = '<i class="fas fa-edit text-lg"></i><span>Update Commission</span>';
            
            const formContainer = document.getElementById('commissionFormContainer');
            formContainer.classList.remove('hidden');
            formContainer.classList.add('flex');
        }

        // Delete Commission
        async function deleteCommission(commissionId) {
            if (!confirm('Are you sure you want to delete this commission? This action cannot be undone.')) {
                return;
            }
            
            try {
                const res = await fetch(`/api/onboard/commissions/${commissionId}`, {
                    method: 'DELETE'
                });
                
                if (res.ok) {
                    showToast('Commission deleted successfully', 'success');
                    await loadCommissions();
                    await loadStaffEarnings();
                    await loadClients();
                } else {
                    throw new Error('Failed to delete commission');
                }
            } catch (error) {
                console.error('Error deleting commission:', error);
                showToast('Failed to delete commission', 'error');
            }
        }

        // Close Commission Form
        function closeCommissionForm() {
            const formContainer = document.getElementById('commissionFormContainer');
            formContainer.classList.add('hidden');
            formContainer.classList.remove('flex');
            
            if (selectedClientRow) {
                selectedClientRow.classList.remove('selected');
                selectedClientRow = null;
            }
            
            const form = document.getElementById('awardCommissionForm');
            form.reset();
            form.dataset.editMode = 'false';
            form.dataset.commissionId = '';
            
            // Reset button text
            document.getElementById('awardCommissionBtn').innerHTML = '<i class="fas fa-check-circle text-lg"></i><span>Award Commission</span>';
            
            selectedClientForCommission = null;
        }

        // Validate Commission Type - at least one must be selected
        function validateCommissionType() {
            const withRouter = document.getElementById('withRouter').checked;
            const packageOnly = document.getElementById('packageOnly').checked;
            const errorMsg = document.getElementById('commissionTypeError');
            const withRouterLabel = document.getElementById('withRouterLabel');
            const packageOnlyLabel = document.getElementById('packageOnlyLabel');
            
            if (!withRouter && !packageOnly) {
                errorMsg.classList.remove('hidden');
                withRouterLabel.classList.add('border-rose-300');
                packageOnlyLabel.classList.add('border-rose-300');
                return false;
            } else {
                errorMsg.classList.add('hidden');
                withRouterLabel.classList.remove('border-rose-300');
                packageOnlyLabel.classList.remove('border-rose-300');
                return true;
            }
        }

        function handleCommissionTypeToggle(checkedBox) {
            const withRouter = document.getElementById('withRouter');
            const packageOnly = document.getElementById('packageOnly');
            
            if (checkedBox === 'withRouter' && withRouter.checked) {
                packageOnly.checked = false;
            } else if (checkedBox === 'packageOnly' && packageOnly.checked) {
                withRouter.checked = false;
            }
            
            validateCommissionType();
        }

        // Handle Award Commission
        async function handleAwardCommission(event) {
            event.preventDefault();
            
            const btn = document.getElementById('awardCommissionBtn');
            const originalContent = btn.innerHTML;
            const form = document.getElementById('awardCommissionForm');
            const isEditMode = form.dataset.editMode === 'true';
            const commissionId = form.dataset.commissionId;
            
            const onboard_id = document.getElementById('commissionClientId').value;
            const amount = document.getElementById('commissionAmount').value;

            const with_router = document.getElementById('withRouter').checked;
            const package_only = document.getElementById('packageOnly').checked;
            
            if (!amount || parseFloat(amount) <= 0) {
                showToast('Please enter a valid commission amount', 'error');
                return;
            }

            if (!validateCommissionType()) {
                showToast('Please select at least one commission type', 'error');
                return;
            }
            
            btn.disabled = true;
            btn.innerHTML = `<span class="spinner"></span> <span>${isEditMode ? 'Updating...' : 'Awarding...'}</span>`;
            
            try {
                let res, result;
                
                if (isEditMode) {
                    res = await fetch(`/api/onboard/commissions/${commissionId}`, {
                        method: 'PATCH',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ amount, with_router, package_only })
                    });
                } else {
                    // Award new commission
                    res = await fetch('/api/onboard/commissions/award', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ onboard_id, amount, with_router, package_only })
                    });
                }
                
                result = await res.json();
                
                if (res.ok) {
                    const action = isEditMode ? 'updated' : 'awarded';
                    await switchTab('commissions', null);
                    showToast(`Commission of KES ${parseFloat(amount).toLocaleString()} ${action} successfully!`, 'success');
                    closeCommissionForm();
                    
                    if (loadedTabs.commissions) {
                        loadCommissions();
                    }
                    if (loadedTabs.staff) {
                        loadStaffEarnings();
                    }
                } else {
                    showToast(result.message || `Failed to ${isEditMode ? 'update' : 'award'} commission`, 'error');
                }
            } catch (err) {
                console.error('Commission operation error:', err);
                showToast(`Error ${isEditMode ? 'updating' : 'awarding'} commission. Please try again.`, 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        }

        // Load Packages
        async function loadPackages() {
            try {
                const res = await fetch('/api/packages');
                if (!res.ok) throw new Error(`HTTP error! status: ${res.status}`);
                allPackages = await res.json();
            } catch (error) {
                console.error('Error loading packages:', error);
                showToast('Failed to load packages', 'error');
            }
        }

        // Load Clients
        async function loadClients() {
            try {
                const res = await fetch('/api/onboard/clients');
                if (!res.ok) throw new Error(`HTTP error! status: ${res.status}`);
                allClients = await res.json();
                renderClients(allClients);
                updateClientStats();
            } catch (error) {
                console.error('Error loading clients:', error);
                showToast('Failed to load clients', 'error');
            }
        }

        function updateClientStats() {
            const total = allClients.length;
            const now = new Date();
            const firstDayOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
            const thisMonthClients = allClients.filter(c => new Date(c.created_at) >= firstDayOfMonth).length;
            
            const lastMonthTotal = total - thisMonthClients;
            const growthPercentage = lastMonthTotal > 0 
                ? ((thisMonthClients / lastMonthTotal) * 100).toFixed(1)
                : (thisMonthClients > 0 ? 100 : 0);

            document.getElementById('totalClients').innerText = total;
            document.getElementById('monthlyClients').innerText = `${growthPercentage}%`;
        }

        function updateCommissionStats() {
            const totalComm = allCommissions.reduce((sum, comm) => sum + parseFloat(comm.amount || 0), 0);
            const paidComm = allCommissions.filter(c => c.status === 'paid').reduce((sum, comm) => sum + parseFloat(comm.amount || 0), 0);
            const unpaidComm = totalComm - paidComm;

            document.getElementById('totalCommissions').innerText = `KES ${totalComm.toLocaleString()}`;
            document.getElementById('pendingCommissions').innerText = `KES ${unpaidComm.toLocaleString()}`;
            document.getElementById('paidCommissions').innerText = `KES ${paidComm.toLocaleString()}`;
            document.getElementById('unpaidCommissions').innerText = `KES ${unpaidComm.toLocaleString()}`;
        }

        // Render Clients Table
        function renderClients(clients) {
            const tbody = document.getElementById('clientsTableBody');
            
            if (clients.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="9" class="px-6 py-12 text-center text-slate-400">
                            <i class="fas fa-users text-3xl mb-2"></i>
                            <p class="text-sm font-semibold">No clients found</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = clients.map(client => {
                const packageObj = allPackages.find(p => p.id === client.package_id);
                const packageName = packageObj ? packageObj.name : 'Unknown Package';
                const statusConfig = getStatusConfig(client.status);
                
                return `
                    <tr class="client-row hover:bg-slate-50 transition" data-client-id="${client.id}">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-sm font-bold text-slate-700">
                                    ${getInitials(client.first_name, client.second_name)}
                                </div>
                                <div>
                                    <div class="font-bold text-slate-800">${client.first_name} ${client.second_name}</div>
                                    <div class="text-xs text-slate-500">${client.email || 'No email'}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2 text-sm text-slate-600">
                                <i class="fas fa-phone text-xs text-slate-400"></i>
                                ${client.phone}
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-slate-600 max-w-xs truncate" title="${client.location}">
                                <i class="fas fa-map-marker-alt text-xs text-slate-400 mr-1"></i>
                                ${client.location}
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2 text-sm text-slate-600">
                                <i class="fas fa-wifi text-xs text-slate-400"></i>
                                ${packageName}
                            </div>
                        </td>                        
                        <td class="px-6 py-4">
                            <span class="bg-indigo-50 text-indigo-700 px-2.5 py-1 rounded text-xs font-bold">
                                <i class="fas fa-user-tie mr-1"></i> ${client.staff_first_name} ${client.staff_second_name}
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <select 
                                onchange="updateClientStatus(${client.id}, this.value)" 
                                onclick="event.stopPropagation()"
                                class="px-3 py-1.5 rounded-lg text-xs font-bold border outline-none cursor-pointer ${statusConfig.css}"
                            >
                                <option value="pending" ${client.status === 'pending' ? 'selected' : ''}>Pending</option>
                                <option value="active" ${client.status === 'active' ? 'selected' : ''}>Active</option>
                                <option value="rejected" ${client.status === 'rejected' ? 'selected' : ''}>Rejected</option>
                                <option value="inactive" ${client.status === 'inactive' ? 'selected' : ''}>Inactive</option>
                            </select>
                        </td>
                        <td class="px-6 py-4">
                            <span class="text-xs font-medium text-slate-500">${formatDate(client.created_at)}</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex gap-2">
                                <button onclick="event.stopPropagation(); openClientForm(${JSON.stringify(client).replace(/"/g, '&quot;')})" 
                                    class="px-3 py-1.5 bg-teal-100 text-teal-700 rounded-lg text-xs font-bold hover:bg-teal-200 transition" 
                                    title="Create User Account">
                                    <i class="fas fa-user-plus mr-1"></i>Create User
                                </button>
                                <button onclick="event.stopPropagation(); openCommissionForm(${JSON.stringify(client).replace(/"/g, '&quot;')})" 
                                    class="px-3 py-1.5 bg-emerald-100 text-emerald-700 rounded-lg text-xs font-bold hover:bg-emerald-200 transition" 
                                    title="Award Commission">
                                    <i class="fas fa-coins mr-1"></i>Commission
                                </button>
                                <button onclick="event.stopPropagation(); deleteClient(${client.id})" 
                                    class="text-slate-400 hover:text-rose-600 transition" 
                                    title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');

            // Add click handlers to rows
            document.querySelectorAll('.client-row').forEach(row => {
                row.addEventListener('click', function(e) {
                    if (e.target.closest('button') || e.target.closest('select')) {
                        return;
                    }
                    
                    const clientId = this.getAttribute('data-client-id');
                    const client = allClients.find(c => c.id == clientId);
                    
                    if (client) {
                        if (selectedClientRow) {
                            selectedClientRow.classList.remove('selected');
                        }
                        
                        selectedClientRow = this;
                        this.classList.add('selected');
                        openClientForm(client);
                    }
                });
            });
        }

        // Filter Clients
        function filterClients() {
            const query = document.getElementById('searchClients').value.toLowerCase();
            const filtered = allClients.filter(client => 
                client.first_name.toLowerCase().includes(query) ||
                client.second_name.toLowerCase().includes(query) ||
                (client.email && client.email.toLowerCase().includes(query)) ||
                client.phone.includes(query)
            );
            renderClients(filtered);
        }

        // Update Client Status
        async function updateClientStatus(id, newStatus) {
            try {
                const res = await fetch(`/api/onboard/client/${id}/status`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status: newStatus })
                });
                
                if (res.ok) {
                    showToast(`Status updated to ${newStatus}`, 'success');
                    await loadClients();
                    await loadCommissions();
                } else {
                    throw new Error('Failed to update status');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                showToast('Failed to update status', 'error');
            }
        }

        // Create New Client
        async function handleCreateClient(event) {
            event.preventDefault();
            
            const btn = document.getElementById('createClientBtn');
            const originalContent = btn.innerHTML;
            
            const formData = {
                onboard_id: selectedOnboardClientId,
                first_name: document.getElementById('newFirstName').value.trim(),
                second_name: document.getElementById('newLastName').value.trim(),
                email: document.getElementById('newEmail').value.trim(),
                phone: document.getElementById('newPhone').value.trim(),
                // id_number: document.getElementById('newIdNumber').value.trim(),
                location: document.getElementById('newLocation').value.trim(),
                address: document.getElementById('newAddress').value.trim(),
                password: document.getElementById('newPassword').value
            };

            if (formData.password.length < 6) {
                showToast('Password must be at least 6 characters', 'error');
                return;
            }

            btn.disabled = true;
            btn.innerHTML = `<span class="spinner"></span> <span>Creating Account...</span>`;

            try {
                const res = await fetch('/api/manage/clients', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const result = await res.json();

                if (res.ok) {
                    showToast(`Client ${formData.first_name} ${formData.second_name} created successfully!`, 'success');

                    if (result.id) {
                        await updateClientStatus(result.id, 'active');
                    }

                    closeClientForm();
                    await loadClients();
                    await loadCommissions();
                    await loadStaffEarnings();
                } else {
                    showToast(result.message || result.error || 'Failed to create client', 'error');
                }

            } catch (err) {
                console.error('Create client error:', err);
                showToast('Error creating client. Please try again.', 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        }

        // Toggle New Password Visibility
        function toggleNewPassVisibility() {
            const pass = document.getElementById('newPassword');
            const icon = document.getElementById('newPassIcon');
            pass.type = pass.type === 'password' ? 'text' : 'password';
            icon.classList.toggle('fa-eye');

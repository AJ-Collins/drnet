        // Delete Client
        async function deleteClient(id) {
            if (!confirm('Are you sure you want to delete this client? This action cannot be undone.')) {
                return;
            }

            try {
                const res = await fetch(`/api/onboard/client/${id}`, {
                    method: 'DELETE'
                });

                if (res.ok) {
                    showToast('Client deleted successfully', 'success');
                    await loadClients();
                    await loadCommissions();
                    await loadStaffEarnings();
                } else {
                    throw new Error('Failed to delete client');
                }
            } catch (error) {
                console.error('Error deleting client:', error);
                showToast('Failed to delete client', 'error');
            }
        }

        // Load Commissions
        async function loadCommissions() {
            try {
                const res = await fetch('/api/onboard/commissions');
                if (!res.ok) {
                    throw new Error(`HTTP error! status: ${res.status}`);
                }
                allCommissions = await res.json();
                renderCommissions(allCommissions);
                updateCommissionStats();
            } catch (error) {
                console.error('Error loading commissions:', error);
                showToast('Failed to load commissions. Please check server logs.', 'error');
                const tbody = document.getElementById('commissionsTableBody');
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-red-400">
                            <i class="fas fa-exclamation-triangle text-3xl mb-2"></i>
                            <p class="text-sm font-semibold">Error loading commissions</p>
                            <p class="text-xs mt-2">Please check the server connection</p>
                        </td>
                    </tr>
                `;
            }
        }


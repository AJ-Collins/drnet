            <span class="text-[10px] font-bold uppercase tracking-wider opacity-70">${title}</span>
            <span class="text-sm font-semibold">${msg}</span>
        `;
        toastContainer.appendChild(toast);
        setTimeout(() => {
            toast.style.opacity = '0';
            setTimeout(() => toast.remove(), 500);
        }, 4000);

<div class="bg-gray-100 h-screen overflow-hidden flex flex-col">
    <div id="toastContainer" class="fixed top-5 right-5 z-[100] space-y-3"></div>
    
    <header class="bg-slate-800 text-white p-4 flex justify-between items-center shadow-md z-30">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-slate-700 rounded-full flex items-center justify-center">
                <i class="fas fa-users-cog text-lg"></i>
            </div>
            <div>
                <h1 class="text-lg md:text-xl font-bold tracking-tight">STAFF TASK ASSIGNMENT</h1>
                <p class="text-xs text-gray-300">Admin Panel - Assign & Manage Tasks</p>
            </div>
        </div>
        <div class="flex gap-2">
            <button onclick="toggleCreateAssignmentForm()" class="bg-green-600 hover:bg-green-700 px-3 py-2 rounded text-xs md:text-sm font-semibold transition flex items-center gap-2">
                <i class="fas fa-plus"></i>
                <span class="hidden md:inline">New Assignment</span>
            </button>
        </div>
    </header>

    <div class="flex flex-1 overflow-hidden">
        <!-- Left Sidebar - Staff List -->
        <aside id="sidebar" class="w-full md:w-1/3 lg:w-1/4 border-r bg-white flex flex-col">
            <div class="p-4 border-b bg-gray-50">
                <div class="flex justify-between items-center mb-2">
                    <span class="text-xs font-bold text-gray-500 uppercase">Staff Members</span>
                    <input type="text" id="staffSearch" onkeyup="filterStaff()" placeholder="Search staff..." class="w-2/3 p-2 border rounded text-sm outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="flex items-center gap-2 text-xs text-gray-500">
                    <i class="fas fa-filter"></i>
                    <select id="departmentFilter" onchange="filterStaff()" class="flex-1 p-1 border rounded text-sm outline-none bg-white">
                        <option value="">All Departments</option>
                        <option value="Support">Support</option>
                        <option value="Technical">Technical</option>
                        <option value="HR">HR</option>
                        <option value="Sales">Sales</option>
                        <option value="Management">Management</option>
                    </select>
                </div>
            </div>
            <div class="flex-1 overflow-y-auto" id="staffList">
                <!-- Loading Skeleton -->
                <div class="animate-pulse space-y-3 p-4">
                    <div class="h-20 bg-slate-100 rounded-xl"></div>
                    <div class="h-20 bg-slate-100 rounded-xl"></div>
                    <div class="h-20 bg-slate-100 rounded-xl"></div>
                </div>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col bg-white">
            <!-- Create Assignment Form (Hidden by default) -->
            <div id="createAssignmentForm" class="hidden border-b bg-gray-50">
                <div class="p-4">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-bold text-gray-900">Create New Assignment</h3>
                        <button onclick="toggleCreateAssignmentForm()" class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                    
                    <form id="assignmentForm" class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-1">Select Staff Member</label>
                                <select id="staffSelect" class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">-- Choose Staff --</option>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-1">Task Type</label>
                                <select id="taskType" class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">-- Select Type --</option>
                                    <option value="ticket">Support Ticket</option>
                                    <option value="task">Internal Task</option>
                                    <option value="followup">Client Follow-up</option>
                                    <option value="review">Document Review</option>
                                    <option value="training">Training</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-1">Priority</label>
                                <select id="taskPriority" class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="low">Low Priority</option>
                                    <option value="medium" selected>Medium Priority</option>
                                    <option value="high">High Priority</option>
                                    <option value="urgent">Urgent</option>
                                </select>
                            </div>
                            
                            <div class="md:col-span-2">
                                <label class="block text-sm font-semibold text-gray-700 mb-1">Due Date</label>
                                <input type="datetime-local" id="dueDate" 
                                       class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Subject</label>
                            <input type="text" id="taskSubject" placeholder="Brief description of the task" 
                                   class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Detailed Instructions</label>
                            <textarea id="taskInstructions" rows="3" placeholder="Provide clear instructions for the staff member..." 
                                      class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-blue-500 resize-none"></textarea>
                        </div>
                        
                        <div class="flex items-center justify-between pt-4 border-t">
                            <div class="flex items-center gap-2">
                                <input type="checkbox" id="sendNotification" checked class="w-4 h-4 text-blue-600 rounded">
                                <label for="sendNotification" class="text-xs text-gray-700 cursor-pointer">Send notification to staff member</label>
                            </div>
                            
                            <div class="flex gap-2">
                                <button type="button" onclick="toggleCreateAssignmentForm()" 
                                        class="px-6 py-2 text-gray-600 font-semibold hover:text-gray-900">
                                    Cancel
                                </button>
                                <button type="button" onclick="saveAssignment()" 
                                        class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition flex items-center gap-2">
                                    <i class="fas fa-paper-plane"></i> Assign Task
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Staff Details Header -->
            <div id="staffHeader" class="p-4 border-b bg-white shadow-sm">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center text-blue-600">
                            <i class="fas fa-user-tie text-lg"></i>
                        </div>
                        <div>
                            <h2 class="font-bold text-slate-800 text-lg">Select Staff Member</h2>
                            <p class="text-xs text-slate-500">Choose a staff member to view and manage assignments</p>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <button id="assignTaskBtn" onclick="toggleCreateAssignmentForm()" 
                                class="hidden text-xs bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-plus"></i> Assign Task
                        </button>
                    </div>
                </div>
            </div>

            <!-- Assignments Container -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <!-- Tabs Navigation -->
                <div class="border-b bg-gray-50">
                    <div class="flex">
                        <button id="activeTab" onclick="switchTab('active')" 
                                class="px-6 py-3 text-sm font-semibold border-b-2 border-blue-600 text-blue-600">
                            Active Assignments
                            <span id="activeCount" class="ml-2 bg-blue-100 text-blue-600 text-xs px-2 py-0.5 rounded-full">0</span>
                        </button>
                        <button id="completedTab" onclick="switchTab('completed')" 
                                class="px-6 py-3 text-sm font-semibold text-gray-500 hover:text-gray-700">
                            Completed
                            <span id="completedCount" class="ml-2 bg-gray-100 text-gray-600 text-xs px-2 py-0.5 rounded-full">0</span>
                        </button>
                        <button id="statsTab" onclick="switchTab('stats')" 
                                class="px-6 py-3 text-sm font-semibold text-gray-500 hover:text-gray-700">
                            Performance Stats
                        </button>
                        <button id="detailsTab" onclick="switchTab('details')" 
                                class="px-6 py-3 text-sm font-semibold text-gray-500 hover:text-gray-700">
                            Staff Details
                        </button>
                    </div>
                </div>

                <!-- Content Area -->
                <div id="contentArea" class="flex-1 overflow-y-auto p-4">
                    <!-- Default State -->
                    <div id="defaultState" class="flex flex-col items-center justify-center h-full text-gray-400 p-6 text-center">
                        <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4">
                            <i class="fas fa-user-check text-2xl"></i>
                        </div>
                        <p class="text-sm font-semibold mb-1">Select a Staff Member</p>
                        <p class="text-xs text-gray-500">Choose a staff member from the list to view their assignments</p>
                    </div>

                    <!-- Active Assignments -->
                    <div id="activeContent" class="hidden">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-sm font-semibold text-gray-800">Current Tasks</h3>
                            <button onclick="toggleCreateAssignmentForm()" class="text-xs bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded font-semibold flex items-center gap-1">
                                <i class="fas fa-plus"></i> Add Task
                            </button>
                        </div>
                        <div id="activeAssignmentsList" class="space-y-3">
                            <!-- Assignments will be loaded here -->
                        </div>
                    </div>

                    <!-- Completed Assignments -->
                    <div id="completedContent" class="hidden">
                        <h3 class="text-sm font-semibold text-gray-800 mb-4">Completed Tasks</h3>
                        <div id="completedAssignmentsList" class="space-y-3">
                            <!-- Completed assignments will be loaded here -->
                        </div>
                    </div>

                    <!-- Performance Stats -->
                    <div id="statsContent" class="hidden">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                            <div class="bg-white p-4 rounded-xl border shadow-sm">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-gray-500 font-semibold">Total Tasks</p>
                                        <p id="totalTasks" class="text-2xl font-bold text-gray-800">0</p>
                                    </div>
                                    <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-tasks text-blue-600"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-white p-4 rounded-xl border shadow-sm">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-gray-500 font-semibold">Completion Rate</p>
                                        <p id="completionRate" class="text-2xl font-bold text-gray-800">0%</p>
                                    </div>
                                    <div class="w-12 h-12 bg-green-50 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-chart-line text-green-600"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-white p-4 rounded-xl border shadow-sm">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-gray-500 font-semibold">Avg. Time</p>
                                        <p id="avgTime" class="text-2xl font-bold text-gray-800">0h</p>
                                    </div>
                                    <div class="w-12 h-12 bg-purple-50 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-clock text-purple-600"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-white p-4 rounded-xl border shadow-sm">
                            <h3 class="text-sm font-semibold text-gray-800 mb-4">Recent Activity</h3>
                            <div id="recentActivity" class="space-y-3">
                                <!-- Activity items will be loaded here -->
                            </div>
                        </div>
                    </div>

                    <!-- Staff Details -->
                    <div id="detailsContent" class="hidden">
                        <div id="staffDetailsContent" class="bg-white p-6 rounded-xl border shadow-sm">
                            <div class="text-center py-12 text-gray-400">
                                <div class="w-20 h-20 mx-auto mb-4 bg-slate-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user text-2xl"></i>
                                </div>
                                <p class="text-sm font-semibold mb-1">Select a Staff Member</p>
                                <p class="text-xs text-gray-500">Choose a staff member to view their details</p>
                            </div>
                        </div>
                    </div>

                    <!-- Assignment Details View -->
                    <div id="assignmentDetailsView" class="hidden">
                        <div id="assignmentDetailsContent" class="bg-white p-6 rounded-xl border shadow-sm">
                            <!-- Assignment details will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let allStaff = [];
    let selectedStaffId = null;
    let selectedStaffAssignments = [];
    let activeTab = 'active';
    let isCreateFormVisible = false;

    // Initialize
    window.onload = async () => {
        await loadStaff();
        populateStaffSelect();
    };

    // Load all staff members
    async function loadStaff() {
        try {
            const res = await fetch('/api/manage/staff');
            if (!res.ok) throw new Error('Failed to load staff');
            
            allStaff = await res.json();
            renderStaffList(allStaff);
            
        } catch (err) {
            console.error("Failed to load staff:", err);
            showToast("Failed to load staff members", 'error');
            
            const list = document.getElementById('staffList');
            list.innerHTML = `
                <div class="text-center py-12 text-gray-400">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-exclamation-triangle text-xl"></i>
                    </div>
                    <p class="text-sm font-semibold">Unable to load staff</p>
                    <button onclick="loadStaff()" class="text-xs text-blue-600 hover:underline font-bold mt-2">
                        Retry
                    </button>
                </div>
            `;
        }
    }

    function populateStaffSelect() {
        const select = document.getElementById('staffSelect');
        select.innerHTML = '<option value="">-- Choose Staff --</option>' +
            allStaff.map(staff => `
                <option value="${staff.id}">${staff.first_name} ${staff.second_name} - ${staff.position}</option>
            `).join('');
    }

    function renderStaffList(staffMembers) {
        const list = document.getElementById('staffList');
        
        if (!staffMembers || staffMembers.length === 0) {
            list.innerHTML = `
                <div class="text-center py-12 text-gray-400">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-user-slash text-xl"></i>
                    </div>
                    <p class="text-sm font-semibold">No staff members found</p>
                </div>
            `;
            return;
        }
        
        list.innerHTML = staffMembers.map(staff => {
            const isActive = staff.id === selectedStaffId;
            const activeAssignments = staff.active_assignments || 0;
            
            return `
                <div class="p-4 border-b hover:bg-blue-50 cursor-pointer transition border-l-4 ${isActive ? 'border-l-blue-500 bg-blue-50' : 'border-l-transparent'}" 
                     onclick="selectStaff(${staff.id})">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full overflow-hidden bg-slate-100 border">
                            ${staff.image ? 
                                `<img src="${staff.image}" alt="${staff.first_name}" class="w-full h-full object-cover">` :
                                `<div class="w-full h-full flex items-center justify-center text-slate-600 font-bold">
                                    ${staff.first_name.charAt(0)}${staff.second_name?.charAt(0) || ''}
                                </div>`
                            }
                        </div>
                        <div class="flex-1">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h4 class="text-sm font-semibold text-gray-800">${staff.first_name} ${staff.second_name}</h4>
                                    <p class="text-xs text-gray-500">${staff.position || 'Staff'}</p>
                                </div>
                                ${activeAssignments > 0 ? `
                                    <span class="bg-blue-100 text-blue-600 text-[10px] font-bold px-2 py-0.5 rounded-full">
                                        ${activeAssignments}
                                    </span>
                                ` : ''}
                            </div>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="text-xs font-semibold ${staff.is_active ? 'text-green-600' : 'text-red-600'}">
                                    <i class="fas fa-circle text-[6px]"></i> ${staff.is_active ? 'Active' : 'Inactive'}
                                </span>
                                <span class="text-xs text-gray-500">â€¢ ${staff.department || 'No Dept'}</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }).join('');
    }

    function toggleCreateAssignmentForm() {
        const form = document.getElementById('createAssignmentForm');
        const isVisible = form.classList.contains('hidden');
        
        if (isVisible) {
            form.classList.remove('hidden');
            isCreateFormVisible = true;
            
            // If a staff is selected, pre-fill the staff select
            if (selectedStaffId) {
                document.getElementById('staffSelect').value = selectedStaffId;
            }
            
            // Set default due date to tomorrow
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            document.getElementById('dueDate').value = tomorrow.toISOString().slice(0, 16);
        } else {
            form.classList.add('hidden');
            isCreateFormVisible = false;
            document.getElementById('assignmentForm').reset();
        }
    }

    async function selectStaff(staffId) {
        if (isCreateFormVisible) {
            toggleCreateAssignmentForm();
        }
        
        selectedStaffId = staffId;
        const staff = allStaff.find(s => s.id === staffId);
        
        if (!staff) return;
        
        // Update staff list selection
        renderStaffList(allStaff);
        
        // Update header
        document.getElementById('staffHeader').innerHTML = `
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full overflow-hidden bg-blue-50 border">
                        ${staff.image ? 
                            `<img src="${staff.image}" alt="${staff.first_name}" class="w-full h-full object-cover">` :
                            `<div class="w-full h-full flex items-center justify-center text-blue-600 font-bold text-lg">
                                ${staff.first_name.charAt(0)}${staff.second_name?.charAt(0) || ''}
                            </div>`
                        }
                    </div>
                    <div>
                        <h2 class="font-bold text-slate-800 text-lg">${staff.first_name} ${staff.second_name}</h2>
                        <div class="flex items-center gap-3">
                            <p class="text-xs text-gray-500">${staff.position || 'Staff'}</p>
                            <span class="text-xs font-semibold ${staff.is_active ? 'text-green-600' : 'text-red-600'}">
                                <i class="fas fa-circle text-[6px]"></i> ${staff.is_active ? 'Active' : 'Inactive'}
                            </span>
                            <span class="text-xs text-gray-500">${staff.department || 'No Department'}</span>
                        </div>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button onclick="toggleCreateAssignmentForm()" 
                            class="text-xs bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                        <i class="fas fa-plus"></i> Assign Task
                    </button>
                    <button onclick="showStaffDetails()" 
                            class="text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded font-semibold flex items-center gap-2">
                        <i class="fas fa-eye"></i> View Profile
                    </button>
                </div>
            </div>
        `;
        
        // Show assign task button
        document.getElementById('assignTaskBtn').classList.remove('hidden');
        
        // Load staff assignments
        await loadStaffAssignments(staffId);
        
        // Switch to active tab
        switchTab('active');
    }

    async function loadStaffAssignments(staffId) {
        try {
            const res = await fetch(`/api/staff/${staffId}/assignments`);
            if (!res.ok) throw new Error('Failed to load assignments');
            
            selectedStaffAssignments = await res.json();
            updateAssignmentCounts();
            renderActiveAssignments();
            renderCompletedAssignments();
            renderPerformanceStats();
            
            // Hide default state and show active content
            document.getElementById('defaultState').classList.add('hidden');
            document.getElementById('activeContent').classList.remove('hidden');
            
        } catch (err) {
            console.error("Failed to load assignments:", err);
            showToast("Failed to load assignments", 'error');
        }
    }

    function updateAssignmentCounts() {
        const activeCount = selectedStaffAssignments.filter(a => a.status !== 'completed').length;
        const completedCount = selectedStaffAssignments.filter(a => a.status === 'completed').length;
        
        document.getElementById('activeCount').textContent = activeCount;
        document.getElementById('completedCount').textContent = completedCount;
    }

    function renderActiveAssignments() {
        const container = document.getElementById('activeAssignmentsList');
        const activeAssignments = selectedStaffAssignments.filter(a => a.status !== 'completed');
        
        if (activeAssignments.length === 0) {
            container.innerHTML = `
                <div class="text-center py-12 text-gray-400">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-check-circle text-xl"></i>
                    </div>
                    <p class="text-sm font-semibold">No active assignments</p>
                    <p class="text-xs mt-1">All tasks are completed</p>
                    <button onclick="toggleCreateAssignmentForm()" class="text-xs text-blue-600 hover:underline font-bold mt-2">
                        + Create First Task
                    </button>
                </div>
            `;
            return;
        }
        
        container.innerHTML = activeAssignments.map(assignment => {
            const isTicket = assignment.type === 'ticket';
            const priorityColor = assignment.priority === 'high' || assignment.priority === 'urgent' ? 'bg-red-100 text-red-700' :
                                assignment.priority === 'medium' ? 'bg-yellow-100 text-yellow-700' :
                                'bg-green-100 text-green-700';
            
            return `
                <div class="bg-white p-4 rounded-xl border shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center gap-2">
                            <span class="text-[10px] font-bold ${isTicket ? 'bg-indigo-100 text-indigo-700' : 'bg-purple-100 text-purple-700'} px-2 py-0.5 rounded-full uppercase">
                                <i class="fas ${isTicket ? 'fa-ticket-alt' : 'fa-tasks'} mr-1"></i> ${isTicket ? 'Ticket' : 'Task'}
                            </span>
                            <span class="text-[10px] font-bold ${priorityColor} px-2 py-0.5 rounded-full uppercase">
                                ${assignment.priority || 'medium'}
                            </span>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="viewAssignmentDetails(${assignment.id})" class="text-xs text-blue-600 hover:text-blue-800 px-2 py-1 hover:bg-blue-50 rounded">
                                <i class="fas fa-eye mr-1"></i> View
                            </button>
                            <button onclick="editAssignment(${assignment.id})" class="text-xs text-yellow-600 hover:text-yellow-800 px-2 py-1 hover:bg-yellow-50 rounded">
                                <i class="fas fa-edit mr-1"></i> Edit
                            </button>
                            <button onclick="deleteAssignment(${assignment.id})" class="text-xs text-red-600 hover:text-red-800 px-2 py-1 hover:bg-red-50 rounded">
                                <i class="fas fa-trash mr-1"></i>
                            </button>
                        </div>
                    </div>
                    
                    <h4 class="text-sm font-semibold text-gray-800 mb-2 cursor-pointer hover:text-blue-600" onclick="viewAssignmentDetails(${assignment.id})">
                        ${assignment.issue_subject || assignment.note || 'No title'}
                    </h4>
                    

<style>
    @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
    :root { font-family: 'Plus Jakarta Sans', sans-serif; }
        
    .glass-panel { background: white; border: 1px solid #e2e8f0; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05); }
    .input-field { background: #f8fafc; border: 1px solid #e2e8f0; transition: all 0.2s; }
    .input-field:focus-within { border-color: #0d9488; background: white; box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.05); }
        
    .btn-teal { background: #0d9488; color: white; transition: all 0.2s; }
    .btn-teal:hover { background: #0f766e; transform: translateY(-1px); }
        
    .status-badge { font-size: 10px; font-weight: 800; padding: 4px 8px; border-radius: 6px; text-transform: uppercase; letter-spacing: 0.05em; }
    .status-active { background: #f0fdfa; color: #0d9488; border: 1px solid #ccfbf1; }
    .status-overdue { background: #fff1f2; color: #e11d48; border: 1px solid #ffe4e6; animation: pulse-red 2s infinite; }
        
    @keyframes pulse-red {
        0% { box-shadow: 0 0 0 0 rgba(225, 29, 72, 0.4); }
        70% { box-shadow: 0 0 0 6px rgba(225, 29, 72, 0); }
        100% { box-shadow: 0 0 0 0 rgba(225, 29, 72, 0); }
    }

    .custom-table th { font-size: 13px; text-transform: uppercase; letter-spacing: 0.05em; color: #64748b; font-weight: 800; padding: 12px; background: #f8fafc; }
    .custom-table th:not(:last-child) { text-align: left; }
    .custom-table th:last-child { text-align: right; padding-right: 16px; }
    .custom-table td { padding: 14px 12px; border-bottom: 1px solid #f1f5f9; font-size: 14px; color: #334155; font-weight: 600; vertical-align: middle; }
    .custom-table tr:hover td { background: #f8fafc; }

    #paymentDrawer {
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        transform: translateX(100%);
        box-shadow: -10px 0 30px rgba(0,0,0,0.1);
    }
    #paymentDrawer.open { transform: translateX(0); }

    @media (max-width: 1024px) {
        .custom-table td .flex.justify-end {
            opacity: 100 !important;
            gap: 0.5rem;
        }
        
        .custom-table td button {
            height: 2.25rem !important;
            min-width: 2.25rem !important;
        }
    }

    .custom-table th:last-child, 
    .custom-table td:last-child {
        min-width: 140px;
    }

    .drawer-overlay {
        transition: opacity 0.3s ease;
        opacity: 0;
        pointer-events: none;
    }
    .drawer-overlay.active {
        opacity: 0.5;
        pointer-events: auto;
    }

    .payment-step { position: relative; padding-left: 1.5rem; border-left: 2px solid #e2e8f0; }
    .payment-step::before {
        content: '';
        position: absolute;
        left: -7px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #0d9488;
        border: 2px solid white;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        width: 100%;
    }

    @media (min-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, min-content);
            justify-content: flex-end;
        }
    }

    .stat-card {
        min-width: 140px;
        transition: transform 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }
    select:disabled {
        cursor: not-allowed;
        opacity: 0.7;
        background-color: #f1f5f9;
    }

    .progress-dot-container {
        mask-image: radial-gradient(circle, white 1.5px, transparent 1.5px);
        mask-size: 6px 6px;
    }

    .segmented-progress {
        display: flex;
        gap: 2px;
        height: 6px;
        width: 100%;
    }
    .segment {
        flex: 1;
        height: 100%;
        border-radius: 1px;
        transition: all 0.3s ease;
    }
    .segment-empty { background: #f1f5f9; }
    .segment-fill-active { background: #0d9488; }
    .segment-fill-warning { background: #f59e0b; }
    .segment-fill-critical { background: #e11d48; }
</style>

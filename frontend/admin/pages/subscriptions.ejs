<script>
    const $ = id => document.getElementById(id);
    let allData = { subscriptions: [], users: [], packages: [] };

    async function init() {
        try {
            const res = await fetch('/api/subscriptions/dashboard-data');
            allData = await res.json();
            await renderStats();
            renderTable();
            populateDropdowns();
        } catch (e) {
            showToast("ERROR", "Connection Error");
        }
    }

    async function renderStats() {
        try {
            const res = await fetch('/api/subscriptions/metrics');
            const data = await res.json();
            
            $('statsRow').innerHTML = `
                <div class="stat-card bg-white px-4 py-3 rounded-xl border border-slate-200 shadow-sm flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-teal-50 text-teal-600 flex items-center justify-center shrink-0">
                        <i class="fas fa-users text-sm"></i>
                    </div>
                    <div>
                        <p class="text-[12px] font-black text-slate-400 uppercase tracking-wider">Active</p>
                        <p class="text-base font-black text-slate-800">${data.activeCount}</p>
                    </div>
                </div>

                <div class="stat-card bg-white px-4 py-3 rounded-xl border border-slate-200 shadow-sm flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-indigo-50 text-indigo-600 flex items-center justify-center shrink-0">
                        <i class="fas fa-wallet text-sm"></i>
                    </div>
                    <div>
                        <p class="text-[12px] font-black text-slate-400 uppercase tracking-wider">Subscription Revenue</p>
                        <p class="text-base font-black text-slate-800">
                            <span class="text-[12px] mr-0.5">KES</span>${Number(data.totalRevenue).toLocaleString()}
                        </p>
                    </div>
                </div>
            `;
        } catch (e) {
            console.error("Metric UI Error", e);
        }
    }

    function renderTable() {
        const query = $('searchInput').value.toLowerCase();
        const tbody = $('tableBody');
        
        const filtered = allData.subscriptions.filter(s => 
            s.first_name.toLowerCase().includes(query) || 
            s.second_name.toLowerCase().includes(query) ||
            s.package_name.toLowerCase().includes(query) ||
            s.phone.includes(query)
        );

        if (filtered.length === 0) {
            tbody.innerHTML = `<tr><td colspan="5" class="text-center py-8 text-slate-400 text-xs font-bold">No records found</td></tr>`;
            return;
        }

        tbody.innerHTML = filtered.map(sub => {
            const now = new Date();
            const start = new Date(sub.start_date);
            const expiry = new Date(sub.expiry_date);
            
            const totalDurationMs = expiry.getTime() - start.getTime();
            const timeRemainingMs = expiry.getTime() - now.getTime();
            const timeElapsedMs = now.getTime() - start.getTime();
            
            const hoursRemaining = timeRemainingMs / (1000 * 60 * 60);
            const daysRemaining = Math.floor(hoursRemaining / 24);
            const exactHoursRemaining = Math.floor(hoursRemaining % 24);

            let percentUsed = Math.floor((timeElapsedMs / totalDurationMs) * 100);
            percentUsed = Math.max(0, Math.min(100, percentUsed));

            const isExpired = timeRemainingMs <= 0;
            const isCritical = hoursRemaining > 0 && hoursRemaining <= 120;
            const isWarning = hoursRemaining > 120 && hoursRemaining <= 240;

            let segmentClass = 'segment-fill-active';
            if (isCritical) segmentClass = 'segment-fill-critical';
            else if (isWarning) segmentClass = 'segment-fill-warning';

            let segmentsHtml = '';
            for (let i = 1; i <= 10; i++) {
                const threshold = i * 10;
                const isFilled = percentUsed >= threshold;
                segmentsHtml += `<div class="segment ${isFilled ? segmentClass : 'segment-empty'}"></div>`;
            }

            let statusBadge = '';
            if (isExpired) {
                statusBadge = `<span class="status-badge bg-slate-100 text-slate-500 border border-slate-200">Expired</span>`;
            } else if (isCritical) {
                let timeLeftStr = daysRemaining > 0 
                    ? `${daysRemaining}D ${exactHoursRemaining}H` 
                    : `${exactHoursRemaining}H Left`;

                statusBadge = `
                    <div class="flex flex-col items-start gap-1">
                        <span class="status-badge status-overdue">CRITICAL</span>
                        <span class="text-[9px] font-black text-rose-600 animate-pulse uppercase tracking-tighter">
                            <i class="fas fa-clock mr-0.5"></i> ${timeLeftStr}
                        </span>
                    </div>`;
            } else {
                statusBadge = `<span class="status-badge status-active">Active</span>`;
            }

            return `
                <tr class="group transition-colors">
                    <td>
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 rounded-full bg-slate-100 flex items-center justify-center text-slate-500 overflow-hidden border border-slate-200">
                                ${sub.image ? `<img src="${sub.image}" class="w-full h-full object-cover">` : `<i class="fas fa-user text-xs"></i>`}
                            </div>
                            <div>
                                <div class="font-black text-slate-800 leading-tight truncate max-w-[150px]" title="${sub.first_name} ${sub.second_name}">${sub.first_name} ${sub.second_name}</div>
                                <div class="text-[12px] font-bold text-slate-400">${sub.phone}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="font-bold text-slate-700 truncate max-w-[120px]" title="${sub.package_name}">${sub.package_name}</div>
                        <div class="text-[10px] font-bold text-teal-600">${sub.speed}Mbps</div>
                    </td>
                    <td>
                        <div class="flex flex-col gap-0.5">
                            <div class="text-[10px] font-bold text-slate-400">
                                <span class="uppercase text-[10px] opacity-70">Start:</span> ${start.toLocaleDateString('en-GB')} <span class="opacity-50">${start.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                            </div>
                            <div class="text-[10px] font-bold text-slate-600">
                                <span class="uppercase text-[10px] opacity-70">Exp:</span> ${expiry.toLocaleDateString('en-GB')} <span class="text-indigo-500">${expiry.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                            </div>
                        </div>
                        <div class="w-24">
                            <div class="segmented-progress">
                                ${segmentsHtml}
                            </div>
                        </div>
                    </td>
                    <td>${statusBadge}</td>
                    <td class="text-right">
                        <div class="flex justify-end gap-2 lg:opacity-0 group-hover:opacity-100 transition-opacity">
                            <button onclick="viewPayments(${sub.user_id})" class="h-8 w-8 flex items-center justify-center rounded-lg border border-slate-200 text-slate-500 hover:bg-slate-50 hover:text-indigo-600 transition-all" title="View payment history">
                                <i class="fas fa-history text-[10px]"></i>
                            </button>
                            <button onclick="loadEdit(${sub.id})" class="h-8 w-8 flex items-center justify-center rounded-lg border border-slate-200 text-slate-500 hover:bg-indigo-50 hover:text-indigo-600 transition-all" title="Edit Record">
                                <i class="fas fa-pen text-[10px]"></i>
                            </button>
                            <button onclick="loadRenewal(${sub.id})" class="h-8 w-8 flex items-center justify-center rounded-lg bg-slate-800 text-white hover:bg-slate-700 transition-all shadow-sm" title="Renew subscription">
                                <i class="fas fa-sync-alt text-[10px]"></i>
                            </button>
                            <button onclick="deleteSub(${sub.id})" class="h-8 w-8 flex items-center justify-center rounded-lg border border-slate-200 text-slate-400 hover:bg-rose-50 hover:text-rose-500 hover:border-rose-200 transition-all">
                                <i class="fas fa-trash-alt text-[10px]"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `;
        }).join('');
    }

    function populateDropdowns() {
        const uSel = $('userId');
        const pSel = $('packageId');

        const subscribedUserIds = allData.subscriptions.map(s => Number(s.user_id));

        const availableUsers = allData.users.filter(u => !subscribedUserIds.includes(Number(u.id)));

        uSel.innerHTML = `<option value="">Select User</option>` + 
            availableUsers.map(u => `
                <option value="${u.id}">${u.first_name} ${u.second_name}</option>
            `).join('');

        pSel.innerHTML = `<option value="">Select Package</option>` + 
            allData.packages.map(p => `
                <option value="${p.id}" data-price="${p.price}">${p.name} - ${p.speed}</option>
            `).join('');
    }

    function updateTotal() {
        const sel = $('packageId');
        const price = sel.options[sel.selectedIndex]?.getAttribute('data-price') || 0;
        $('priceDisplay').innerText = `KES ${Number(price).toLocaleString()}`;
    }

    function loadRenewal(id) {
        const sub = allData.subscriptions.find(s => s.id === id);
        if(!sub) return;

        $('editSubId').value = id;
        
        const uSel = $('userId');
        
        uSel.innerHTML = `<option value="${sub.user_id}">${sub.first_name} ${sub.second_name}</option>`;
        uSel.value = sub.user_id;
        uSel.disabled = true;

        $('packageId').value = sub.package_id;
        updateTotal();

        $('formTitle').innerText = "Renewing / Upgrading Plan";
        $('submitBtn').innerText = "Process Renewal";
        $('cancelBtn').classList.remove('hidden');
        
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function resetForm() {
        $('subForm').reset();
        $('editSubId').value = '';
        delete $('subForm').dataset.mode;
        $('userId').disabled = false;
        populateDropdowns();
        $('priceDisplay').innerText = "KES 0.00";
        $('formTitle').innerText = "New Connection";
        $('submitBtn').innerText = "Confirm";
        $('cancelBtn').classList.add('hidden');
    }
    function loadEdit(id) {
        const sub = allData.subscriptions.find(s => s.id === id);
        if(!sub) return;

        $('editSubId').value = id;
        $('subForm').dataset.mode = 'edit';
        
        const uSel = $('userId');
        uSel.innerHTML = `<option value="${sub.user_id}">${sub.first_name} ${sub.second_name}</option>`;
        uSel.value = sub.user_id;
        uSel.disabled = true;

        $('packageId').value = sub.package_id;
        updateTotal();

        $('formTitle').innerText = "Edit Subscription Details";
        $('submitBtn').innerText = "Save Changes";
        $('cancelBtn').innerText = "Cancel Edit";
        $('cancelBtn').classList.remove('hidden');
        
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    async function handleSubmit(e) {
        e.preventDefault();
        
        const userId = $('userId').value;
        const packageId = $('packageId').value;
        const paymentMethod = document.querySelector('input[name="payment_method"]:checked')?.value;

        if (!userId || !packageId) {
            showToast("WARNING", "Please select both a Client and a Package Plan");
            
            if (!userId) $('userId').parentElement.classList.add('border-rose-300');
            if (!packageId) $('packageId').parentElement.classList.add('border-rose-300');
            
            setTimeout(() => {
                $('userId').parentElement.classList.remove('border-rose-300');
                $('packageId').parentElement.classList.remove('border-rose-300');
            }, 2000);
            
            return;
        }

        const id = $('editSubId').value;
        const mode = $('subForm').dataset.mode;
        const btn = $('submitBtn');
        
        const data = {
            user_id: userId,
            package_id: packageId,
            payment_method: paymentMethod
        };

        btn.disabled = true;

        try {
            let url, method;
            
            if (!id) {
                url = '/api/subscriptions/subscribe';
                method = 'POST';
            } else if (mode === 'edit') {
                url = `/api/subscriptions/update/${id}`;
                method = 'PUT';
            } else {
                url = `/api/subscriptions/renew/${id}`;
                method = 'PUT';
            }

            const res = await fetch(url, {
                method: method,
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });

            if(res.ok) {
                showToast("SUCCESS", "Record Updated Successfully");
                resetForm();
                init();
            } else {
                showToast("ERROR", "Server rejected the request");
            }
        } catch (err) {
            showToast("ERROR", "Connection failed");
        } finally {
            btn.disabled = false;
        }
    }

    async function viewPayments(userId) {
        const sub = allData.subscriptions.find(s => s.user_id == userId);
        const drawer = $('paymentDrawer');
        const overlay = $('drawerOverlay');
        const content = $('drawerContent');
        
        $('drawerClientName').innerText = sub ? `${sub.first_name} ${sub.second_name}` : 'Client Records';
        
        drawer.classList.add('open');
        overlay.classList.add('active');
        
        content.innerHTML = `
            <div class="flex flex-col items-center justify-center py-10 text-slate-400">
                <i class="fas fa-circle-notch fa-spin text-2xl mb-2"></i>
                <span class="text-xs font-bold">Retrieving financial history...</span>
            </div>
        `;

        try {
            const res = await fetch(`/api/subscriptions/payments/${userId}`);
            const payments = await res.json();

            if (payments.length === 0) {
                content.innerHTML = `
                    <div class="text-center py-20">
                        <i class="fas fa-receipt text-slate-200 text-5xl mb-4"></i>
                        <p class="text-slate-400 font-bold text-sm">No payment history found</p>
                    </div>`;
                return;
            }

            content.innerHTML = `
                <div class="space-y-8">
                    ${payments.map(p => `
                        <div class="payment-step">
                            <div class="flex justify-between items-start">
                                <div>
                                    <p class="text-xs font-black text-slate-800">KES ${Number(p.amount).toLocaleString()}</p>
                                    <p class="text-[10px] font-bold text-slate-400 uppercase">${p.payment_method} Payment</p>
                                </div>
                                <span class="text-[10px] font-bold px-2 py-1 bg-green-50 text-green-600 rounded">PAID</span>
                            </div>
                            <div class="mt-2 flex items-center gap-4 text-[10px] font-bold text-slate-400">
                                <span><i class="far fa-calendar-alt mr-1"></i> ${new Date(p.payment_date).toLocaleDateString()}</span>
                            </div>
                            <div class="mt-2 text-[9px] text-slate-400 font-mono">TXN: REC-${p.id.toString().padStart(5, '0')}</div>
                        </div>
                    `).join('')}
                </div>
            `;
        } catch (e) {
            content.innerHTML = `<p class="text-rose-500 text-xs font-bold">Error loading payments.</p>`;
        }
    }

    function closeDrawer() {
        $('paymentDrawer').classList.remove('open');
        $('drawerOverlay').classList.remove('active');
    }

    async function deleteSub(id) {
        if(!confirm("Disconnect this user?")) return;
        try {
            await fetch(`/api/subscriptions/delete/${id}`, { method: 'DELETE' });
            showToast("SUCCESS", "Disconnected");
            init();
        } catch(e) { showToast("ERROR", "Failed"); }
    }

    function showToast(title, msg) {
        const toast = document.createElement('div');
        toast.className = "bg-slate-900 text-white p-4 rounded-xl shadow-xl min-w-[200px] animate-fade-up border border-teal-500";
        toast.innerHTML = `<h5 class="text-[10px] font-black uppercase text-teal-400 mb-1">${title}</h5><p class="text-xs font-medium">${msg}</p>`;
        $('toastContainer').appendChild(toast);
        setTimeout(() => toast.remove(), 4000);
    }

    init();
</script>
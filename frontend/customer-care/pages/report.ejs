<style>
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            background-color: #f1f5f9; 
        }

        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 3px; }
        ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

        .input-area {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            transition: all 0.2s;
        }
        
        .input-area:focus { 
            background: white; 
            border-color: #0f766e; 
            box-shadow: 0 0 0 3px rgba(15, 118, 110, 0.1); 
            outline: none;
        }

        .section-label {
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .report-card {
            transition: all 0.2s;
        }
        .report-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        /* Sharp Badges */
        .badge-draft { background: #f8fafc; color: #475569; border: 1px solid #cbd5e1; }
        .badge-submitted { background: #ecfdf5; color: #047857; border: 1px solid #6ee7b7; }

        .animate-fade-in { animation: fadeIn 0.4s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .char-counter {
            font-size: 10px;
            color: #94a3b8;
            font-weight: 600;
        }
        .char-counter.warning { color: #f59e0b; }
        .char-counter.danger { color: #ef4444; }
    </style>
    <div id="toastContainer" class="fixed top-5 right-5 z-50 space-y-2"></div>

    <nav class="bg-white h-16 flex items-center justify-between px-6 shadow-sm">
        <div class="flex items-center gap-3">
            <div>
                <h2 class="font-black text-2xl tracking-wide text-slate-900">Daily Reporting</h2>
                <p class="text-[10px] text-slate-400 uppercase tracking-widest font-bold">Daily Activity report</p>
            </div>
        </div>
        
        <div class="flex items-center gap-4">
            <div class="hidden md:flex items-center gap-2 bg-slate-900 px-3 py-1.5 rounded border border-slate-800">
                <i class="fas fa-calendar-day text-teal-400 text-xs"></i>
                <span class="text-xs text-white font-bold" id="currentDate">Loading...</span>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-4 md:p-6 flex-1">
        <div class="grid grid-cols-12 gap-6 min-h-[calc(100vh-8rem)]">

            <div class="col-span-12 lg:col-span-7 flex flex-col min-h-[600px]">
                <div class="bg-white border border-slate-200 shadow-sm rounded-lg flex-1 flex flex-col relative overflow-hidden">
                    
                    <div id="createSection" class="flex flex-col h-full">
                        <div class="p-4 border-b border-slate-200 bg-slate-50">
                            <h2 class="text-lg font-black text-slate-800">Submit New Report</h2>
                            <p class="text-xs text-slate-500 font-bold">Log your daily activities</p>
                        </div>

                        <div class="p-6 flex-1 overflow-y-auto">
                            <form id="reportForm" class="space-y-6">
                                
                                <div class="animate-fade-in">
                                    <div class="section-label">
                                        <i class="fas fa-list-check text-teal-600"></i>
                                        Report Type
                                    </div>
                                    <div class="grid grid-cols-2 gap-3">
                                        <label class="relative cursor-pointer">
                                            <input type="radio" name="reportType" value="daily" checked class="peer sr-only" onchange="updateReportType()">
                                            <div class="bg-white border border-slate-200 rounded p-3 peer-checked:border-teal-600 peer-checked:bg-teal-50/30 transition-all hover:bg-slate-50">
                                                <div class="flex items-center gap-2">
                                                    <i class="fas fa-calendar-day text-slate-400 peer-checked:text-teal-600"></i>
                                                    <span class="font-bold text-xs text-slate-700 uppercase">Daily Report</span>
                                                </div>
                                            </div>
                                        </label>

                                        <label class="relative cursor-pointer">
                                            <input type="radio" name="reportType" value="weekly" class="peer sr-only" onchange="updateReportType()">
                                            <div class="bg-white border border-slate-200 rounded p-3 peer-checked:border-teal-600 peer-checked:bg-teal-50/30 transition-all hover:bg-slate-50">
                                                <div class="flex items-center gap-2">
                                                    <i class="fas fa-calendar-week text-slate-400 peer-checked:text-teal-600"></i>
                                                    <span class="font-bold text-xs text-slate-700 uppercase">Weekly Report</span>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>

                                <div class="animate-fade-in" style="animation-delay: 0.1s">
                                    <div class="section-label">
                                        <i class="fas fa-calendar text-blue-600"></i>
                                        Report Date
                                    </div>
                                    <input 
                                        type="date" 
                                        id="reportDate" 
                                        class="w-full input-area rounded p-3 text-sm font-bold text-slate-700"
                                        required
                                    >
                                </div>

                                <div class="animate-fade-in" style="animation-delay: 0.2s">
                                    <div class="section-label">
                                        <i class="fas fa-pen text-teal-600"></i>
                                        Details
                                        <span class="ml-auto char-counter" id="charCounter">0 / 2000</span>
                                    </div>
                                    <div class="bg-slate-50 p-4 rounded border border-slate-200">
                                        <textarea 
                                            id="reportContent"
                                            rows="10"
                                            maxlength="2000"
                                            class="w-full input-area rounded p-4 text-sm resize-y leading-relaxed"
                                            placeholder="Describe your activities, achievements, challenges..."
                                            oninput="updateCharCounter()"
                                            required
                                        ></textarea>

                                        <div class="mt-3 pt-3 border-t border-slate-200">
                                            <p class="text-[10px] font-bold text-slate-400 uppercase mb-2">Insert Template:</p>
                                            <div class="flex flex-wrap gap-2">
                                                <button type="button" onclick="insertTemplate('installation')" class="px-2 py-1 bg-white border border-slate-300 rounded text-[10px] font-bold text-slate-600 hover:bg-slate-100 hover:text-slate-800 uppercase transition-colors">
                                                    Installation
                                                </button>
                                                <button type="button" onclick="insertTemplate('maintenance')" class="px-2 py-1 bg-white border border-slate-300 rounded text-[10px] font-bold text-slate-600 hover:bg-slate-100 hover:text-slate-800 uppercase transition-colors">
                                                    Maintenance
                                                </button>
                                                <button type="button" onclick="insertTemplate('issue')" class="px-2 py-1 bg-white border border-slate-300 rounded text-[10px] font-bold text-slate-600 hover:bg-slate-100 hover:text-slate-800 uppercase transition-colors">
                                                    Issue
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="flex gap-4 pt-2">
                                    <button 
                                        type="button" 
                                        onclick="submitReport('draft')" 
                                        class="px-6 py-3 rounded border border-slate-300 bg-white text-slate-600 font-bold text-xs hover:bg-slate-50 uppercase transition-colors"
                                    >
                                        Save Draft
                                    </button>
                                    <button 
                                        type="button" 
                                        onclick="submitReport('submitted')" 
                                        class="flex-1 bg-teal-600 text-white py-3 rounded font-bold text-xs hover:bg-teal-700 shadow-lg shadow-teal-500/20 uppercase transition-colors"
                                    >
                                        <i class="fas fa-paper-plane mr-2"></i>Submit Report
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div id="viewSection" class="hidden flex-col bg-white absolute inset-0 z-10 animate-fade-in overflow-hidden">
                        <div class="p-4 border-b border-slate-200 bg-slate-50 flex justify-between items-center">
                            <div>
                                <h2 class="text-lg font-black text-slate-800">Report Details</h2>
                                <p class="text-xs text-slate-500 font-bold">Read-only view</p>
                            </div>
                            <button onclick="switchToCreateMode()" class="px-4 py-2 bg-white border border-slate-300 text-slate-700 text-xs font-bold rounded hover:bg-slate-100 uppercase transition-colors">
                                <i class="fas fa-plus mr-2"></i>Create New
                            </button>
                        </div>

                        <div class="flex-1 overflow-y-auto p-8 bg-white">
                            <div id="viewContentContainer" class="max-w-2xl mx-auto">
                                </div>
                        </div>

                        <div class="p-4 border-t border-slate-200 bg-slate-50 flex justify-between items-center">
                             <span id="viewMetaLeft" class="text-[10px] font-bold text-slate-400 uppercase"></span>
                             <button onclick="switchToCreateMode()" class="text-xs font-bold text-slate-500 hover:text-slate-800 uppercase">
                                <i class="fas fa-arrow-left mr-1"></i> Back to Form
                             </button>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-span-12 lg:col-span-5 flex flex-col h-full">
                <div class="bg-white border border-slate-200 shadow-sm rounded-lg flex flex-col h-full overflow-hidden">
                    <div class="p-4 border-b border-slate-200 bg-slate-50 shrink-0 flex items-center justify-between">
                        <div>
                            <h2 class="text-lg font-black text-slate-800">History</h2>
                        </div>
                        <div class="flex gap-1">
                            <button onclick="filterReports('all')" id="filterAll" class="px-3 py-1 bg-teal-600 text-white rounded text-[10px] font-bold uppercase transition-colors">All</button>
                            <button onclick="filterReports('submitted')" id="filterSubmitted" class="px-3 py-1 bg-slate-100 text-slate-500 hover:bg-slate-200 rounded text-[10px] font-bold uppercase transition-colors">Sent</button>
                            <button onclick="filterReports('draft')" id="filterDraft" class="px-3 py-1 bg-slate-100 text-slate-500 hover:bg-slate-200 rounded text-[10px] font-bold uppercase transition-colors">Drafts</button>
                        </div>
                    </div>

                    <div id="reportsHistory" class="p-3 space-y-3 overflow-y-auto flex-1 bg-slate-50/50">
                        <div class="flex flex-col items-center justify-center p-10 text-slate-400">
                            <i class="fas fa-circle-notch fa-spin text-2xl mb-2"></i>
                            <p class="text-[10px] font-bold uppercase">Loading...</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        let myReports = [];
        let currentFilter = 'all';

        // Templates data
        const templates = {
            installation: `Installation Report:\n- Units Installed: \n- Locations: \n- Issues: None\n- Status: Complete`,
            maintenance: `Maintenance Report:\n- Task: \n- Observations: \n- Actions Taken: \n- Parts Used: `,
            issue: `Issue Report:\n- Problem: \n- Severity: High/Medium/Low\n- Impact: \n- Recommended Action: `
        };

        // Initialize
        window.onload = async () => {
            document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-US', { 
                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
            });

            // Set default date
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('reportDate').value = today;
            
            await fetchMyReports();
        };

        async function fetchMyReports() {
            try {
                const response = await fetch('/api/reports/my/reports');
                const data = await response.json();
                
                if (data.success) {
                    myReports = data.reports;
                    renderReports();
                } else {
                    document.getElementById('reportsHistory').innerHTML = `
                        <p class="text-rose-500 text-xs p-4 text-center">Failed to load reports.</p>
                    `;
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('reportsHistory').innerHTML = `
                    <p class="text-rose-500 text-xs p-4 text-center">Connection error.</p>
                `;
            }
        }

        // --- RENDER LOGIC ---

        function renderReports() {
            const container = document.getElementById('reportsHistory');
            
            let filtered = myReports;
            if (currentFilter !== 'all') {
                filtered = myReports.filter(r => r.status === currentFilter);
            }

            if (filtered.length === 0) {
                container.innerHTML = `
                    <div class="p-8 text-center border-2 border-dashed border-slate-200 rounded mx-2">
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">No reports found</p>
                    </div>`;
                return;
            }

            container.innerHTML = filtered.map(report => {
                const isDraft = report.status === 'draft';
                const statusBadge = isDraft
                    ? '<span class="badge-draft px-2 py-0.5 rounded text-[9px] font-black uppercase">Draft</span>'
                    : '<span class="badge-submitted px-2 py-0.5 rounded text-[9px] font-black uppercase">Sent</span>';

                const contentPreview = (report.content || '').substring(0, 80) + (report.content.length > 80 ? '...' : '');

                return `
                    <div onclick="viewReport(${report.id})" class="bg-white border border-slate-200 hover:border-slate-400 p-3 rounded shadow-sm cursor-pointer transition-all group animate-fade-in relative overflow-hidden">
                        ${isDraft ? '<div class="absolute left-0 top-0 bottom-0 w-1 bg-slate-300"></div>' : '<div class="absolute left-0 top-0 bottom-0 w-1 bg-teal-500"></div>'}
                        
                        <div class="flex items-center justify-between mb-1 pl-2">
                            <span class="text-[10px] font-black text-slate-700 uppercase">
                                ${new Date(report.report_date).toLocaleDateString()}
                            </span>
                            ${statusBadge}
                        </div>
                        
                        <div class="pl-2">
                            <p class="text-xs text-slate-600 font-medium leading-relaxed line-clamp-2 mb-2">
                                ${escapeHtml(contentPreview)}
                            </p>
                            
                            <div class="flex justify-between items-center border-t border-slate-50 pt-2 mt-2">
                                <span class="text-[9px] font-bold text-slate-400 uppercase">
                                    ${new Date(report.created_at).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'})}
                                </span>
                                
                                <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    ${isDraft ? `
                                        <button onclick="editReport(${report.id}); event.stopPropagation();" class="text-[9px] font-black text-amber-600 hover:text-amber-700 uppercase">
                                            <i class="fas fa-pen mr-1"></i> Edit
                                        </button>
                                    ` : ''}
                                    <button onclick="deleteMyReport(${report.id}); event.stopPropagation();" class="text-[9px] font-black text-rose-600 hover:text-rose-700 uppercase">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // --- WORKSPACE LOGIC (Replaces Modals) ---

        function switchToCreateMode() {
            document.getElementById('viewSection').classList.add('hidden');
            document.getElementById('createSection').classList.remove('hidden');
            
            // Clear form for fresh start
            document.getElementById('reportForm').reset();
            document.getElementById('reportDate').value = new Date().toISOString().split('T')[0];
            updateCharCounter();
        }

        function viewReport(id) {
            const report = myReports.find(r => r.id === id);
            if (!report) return;

            // 1. Populate View Container
            const container = document.getElementById('viewContentContainer');
            const metaLeft = document.getElementById('viewMetaLeft');

            const statusClass = report.status === 'submitted' 
                ? 'text-emerald-700 border-emerald-200 bg-emerald-50' 
                : 'text-slate-600 border-slate-200 bg-slate-50';

            container.innerHTML = `
                <div class="mb-6">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="px-3 py-1 border rounded text-[10px] font-black uppercase ${statusClass}">
                            ${report.status}
                        </span>
                        <span class="text-xs font-bold text-slate-500 uppercase">
                            <i class="far fa-calendar mr-1"></i> ${new Date(report.report_date).toLocaleDateString(undefined, {weekday:'long', year:'numeric', month:'long', day:'numeric'})}
                        </span>
                    </div>
                    <div class="bg-slate-50 p-6 shadow-sm">
                        <p class="text-sm text-slate-800 leading-7 font-medium whitespace-pre-wrap">${escapeHtml(report.content)}</p>
                    </div>
                </div>
            `;

            metaLeft.innerHTML = `Created: ${new Date(report.created_at).toLocaleString()}`;

            // 2. Toggle Visibility
            document.getElementById('createSection').classList.add('hidden');
            document.getElementById('viewSection').classList.remove('hidden');
            document.getElementById('viewSection').classList.add('flex');
        }

        function editReport(id) {
            // Switch to form mode first
            switchToCreateMode();

            const report = myReports.find(r => r.id === id);
            if (!report || report.status !== 'draft') return;

            // Populate form
            document.getElementById('reportContent').value = report.content;
            document.getElementById('reportDate').value = report.report_date;
            updateCharCounter();

            showToast('Draft loaded for editing', 'info');
        }

        // --- FORM ACTIONS ---

        function updateCharCounter() {
            const content = document.getElementById('reportContent').value;
            const counter = document.getElementById('charCounter');
            counter.textContent = `${content.length} / 2000`;
            
            if (content.length > 1800) counter.classList.replace('text-slate-400', 'text-rose-500');
            else counter.classList.replace('text-rose-500', 'text-slate-400');
        }

        function updateReportType() {
            // Optional: Add logic if switching report types needs to change templates
        }

        function insertTemplate(type) {
            const textarea = document.getElementById('reportContent');
            if (textarea.value && !confirm("Replace current content?")) return;
            textarea.value = templates[type] || '';
            updateCharCounter();
        }

        function filterReports(filter) {
            currentFilter = filter;
            document.querySelectorAll('#filterAll, #filterSubmitted, #filterDraft').forEach(btn => {
                const type = btn.id.replace('filter', '').toLowerCase();
                if (type === filter) {
                    btn.className = "px-3 py-1 bg-teal-600 text-white rounded text-[10px] font-bold uppercase transition-colors";
                } else {
                    btn.className = "px-3 py-1 bg-slate-100 text-slate-500 hover:bg-slate-200 rounded text-[10px] font-bold uppercase transition-colors";
                }
            });
            renderReports();
        }

        async function submitReport(status) {
            const content = document.getElementById('reportContent').value;
            const date = document.getElementById('reportDate').value;
            
            if(!content) return showToast('Content required', 'error');

            const payload = { 
                content: content, 
                report_date: date, 
                status: status,
                // Department is typically handled by backend session, but included if API requires
                department: 'Staff' 
            };
            
            try {
                const response = await fetch('/api/reports/staff', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const data = await response.json();
                
                if (data.success) {
                    showToast(status === 'draft' ? "Draft Saved" : "Report Submitted", 'success');
                    // Reset and Refresh
                    document.getElementById('reportForm').reset();
                    updateCharCounter();
                    await fetchMyReports();
                } else {
                    showToast('Failed to save report', 'error');
                }
            } catch (error) {
                console.error('Submit Error:', error);
                showToast('Connection error', 'error');
            }
        }

        async function deleteMyReport(id) {
            if(!confirm("Delete this report?")) return;
            
            try {
                const response = await fetch(`/api/reports/staff/delete/${id}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                
                if (data.success) {
                    showToast("Report Deleted", "success");
                    await fetchMyReports();
                    // If viewing the deleted report, switch back to create
                    switchToCreateMode();
                } else {
                    showToast("Failed to delete", "error");
                }
            } catch (error) {
                console.error('Delete Error:', error);
                showToast('Connection error', 'error');
            }
        }

        function showToast(msg, type) {
            const container = document.getElementById('toastContainer');
            const div = document.createElement('div');
            const color = type === 'success' ? 'bg-emerald-600' : (type === 'error' ? 'bg-rose-600' : 'bg-slate-800');
            div.className = `${color} text-white px-4 py-3 rounded shadow-lg text-xs font-bold uppercase tracking-wide animate-fade-in mb-2`;
            div.innerHTML = `<i class="fas fa-info-circle mr-2"></i> ${msg}`;
            container.appendChild(div);
            setTimeout(() => div.remove(), 3000);
        }

        function escapeHtml(text) {
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
    </script>
<style>
    :root { font-family: 'Plus Jakarta Sans', sans-serif; }
    
    body { background-color: #f8fafc; }
    
    .glass-panel { 
        background: white;
        border: 1px solid #e2e8f0; 
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
    }
    
    .glass-panel:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
    }
    
    .chart-container { position: relative; height: 250px; width: 100%; }
    
    .animate-fade-up { animation: fade-in-up 0.5s ease-out forwards; opacity: 0; }
    @keyframes fade-in-up { 
        from { transform: translateY(15px); opacity: 0; } 
        to { transform: translateY(0); opacity: 1; } 
    }
    
    .status-badge {
        font-size: 10px;
        font-weight: 800;
        padding: 2px 8px;
        border-radius: 12px;
        text-transform: uppercase;
    }

    /* Custom progress bar for task metrics */
    .metric-progress {
        height: 8px;
        border-radius: 4px;
        background-color: #f1f5f9;
        overflow: hidden;
    }
</style>

<div class="max-w-full mx-auto space-y-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 animate-fade-up">
        <div>
            <h1 class="text-3xl font-black text-slate-900 tracking-tight">Agent Workspace</h1>
            <p class="text-slate-500 font-bold text-sm">Customer Care Performance & Operations</p>
        </div>
        <div class="flex items-center gap-3">
            <div class="text-right hidden md:block">
                <p id="lastUpdated" class="text-[10px] font-bold text-gray-400">Syncing...</p>
            </div>
            <button onclick="refreshDashboardData()" class="text-xs font-bold bg-slate-50 hover:bg-slate-100 px-3 py-1.5 rounded-lg transition-colors text-slate-600">
                <i class="fas fa-sync-alt mr-1" id="refreshIcon"></i> Refresh
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="glass-panel p-5 rounded-2xl border-l-4 border-indigo-500 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="flex justify-between items-center mb-4">
                <div class="w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <p class="text-[12px] font-black text-slate-400 uppercase tracking-widest">Tickets</p>
            </div>
            <h2 id="totalTickets" class="text-2xl font-black text-slate-900">0</h2>
            <div class="flex justify-between mt-2">
                <div>
                    <p class="text-[9px] font-black text-emerald-500 uppercase">Resolved</p>
                    <p id="resolvedTickets" class="text-sm font-bold text-slate-700">0</p>
                </div>
                <div class="text-right">
                    <p class="text-[9px] font-black text-rose-500 uppercase">Open</p>
                    <p id="openTickets" class="text-sm font-bold text-slate-700">0</p>
                </div>
            </div>
        </div>

        <div class="glass-panel p-5 rounded-2xl border-l-4 border-teal-500 animate-fade-up" style="animation-delay: 0.2s;">
            <div class="flex justify-between items-center mb-4">
                <div class="w-10 h-10 rounded-xl bg-teal-50 flex items-center justify-center text-teal-600">
                    <i class="fas fa-user-check"></i>
                </div>
                <p class="text-[12px] font-black text-slate-400 uppercase tracking-widest">Active Subs</p>
            </div>
            <h2 id="activeSubs" class="text-2xl font-black text-slate-900">0</h2>
            <div class="grid grid-cols-2 gap-2 mt-2 pt-2 border-t border-slate-50">
                <p class="text-[9px] font-bold text-slate-400">Total: <span id="totalSubs" class="text-slate-700 font-black">0</span></p>
                <p class="text-[9px] font-bold text-slate-400 text-right">Overdue: <span id="overdueSubs" class="text-amber-600 font-black">0</span></p>
            </div>
        </div>

        <div class="glass-panel p-5 rounded-2xl border-l-4 border-amber-500 animate-fade-up" style="animation-delay: 0.3s;">
            <div class="flex justify-between items-center mb-4">
                <p class="text-[12px] font-black text-slate-400 uppercase">Task Completion</p>
                <span id="taskPercent" class="text-[10px] font-black text-amber-600">0%</span>
            </div>
            <div class="metric-progress mb-4">
                <div id="taskProgressBar" class="bg-amber-500 h-full transition-all duration-1000" style="width: 0%"></div>
            </div>
            <div class="grid grid-cols-3 gap-1 text-center">
                <div>
                    <p class="text-[8px] font-black text-slate-400 uppercase">Total</p>
                    <p id="totalTasks" class="text-xs font-bold">0</p>
                </div>
                <div>
                    <p class="text-[8px] font-black text-emerald-500 uppercase">Done</p>
                    <p id="completedTasks" class="text-xs font-bold">0</p>
                </div>
                <div>
                    <p class="text-[8px] font-black text-rose-500 uppercase">Wait</p>
                    <p id="pendingTasks" class="text-xs font-bold">0</p>
                </div>
            </div>
        </div>

        <div class="glass-panel p-5 rounded-2xl border-l-4 border-rose-500 animate-fade-up" style="animation-delay: 0.4s;">
            <div class="flex justify-between items-center mb-4">
                <div class="w-10 h-10 rounded-xl bg-rose-50 flex items-center justify-center text-rose-600">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <p class="text-[12px] font-black text-slate-400 uppercase tracking-widest">Attendance</p>
            </div>
            <p class="text-[9px] font-black text-slate-400 uppercase">Monthly Rating</p>
            <h2 id="efficiencyScore" class="text-2xl font-black text-slate-900">0%</h2>
            <p class="text-[10px] font-bold text-slate-400 mt-1">Status: <span id="performanceStatus" class="text-emerald-500">Calculating...</span></p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="glass-panel p-6 rounded-3xl lg:col-span-2 animate-fade-up" style="animation-delay: 0.5s;">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h3 class="text-lg font-black text-slate-800">Weekly Efficiency</h3>
                    <p class="text-xs font-bold text-slate-400">Task completion & attendance correlation</p>
                </div>
                <select id="chartPeriod" class="text-[10px] font-black bg-slate-50 border-none rounded-lg focus:ring-0">
                    <option>Last 7 Days</option>
                    <option>Last 30 Days</option>
                </select>
            </div>
            <div class="chart-container">
                <canvas id="agentPerformanceChart"></canvas>
            </div>
        </div>

        <div class="glass-panel p-6 rounded-3xl animate-fade-up" style="animation-delay: 0.6s;">
            <h3 class="text-lg font-black text-slate-800 mb-1">Tasks</h3>
            <p class="text-xs font-bold text-slate-400 mb-6">Your upcoming assignments</p>
            
            <div id="scheduleList" class="space-y-4">
                <div class="flex items-center justify-center py-10 text-slate-400 italic text-xs">
                    Loading your schedule...
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    let performanceChart = null;

    document.addEventListener('DOMContentLoaded', () => {
        initChart();
        refreshDashboardData();
    });

    async function refreshDashboardData() {
        const refreshIcon = document.getElementById('refreshIcon');
        refreshIcon.classList.add('fa-spin');
        
        try {
            // Future Backend Endpoints
            const [statsRes, scheduleRes, performanceRes] = await Promise.all([
                fetch('/api/care/stats'),
                fetch('/api/care/schedule'),
                fetch('/api/care/performance')
            ]);

            const stats = await statsRes.json();
            const schedule = await scheduleRes.json();
            const performance = await performanceRes.json();

            updateUI(stats.data);
            renderSchedule(schedule.data);
            updateChart(performance.data);

        } catch (error) {
            console.warn("Using mock data until backend endpoints are created.");
            useMockData();
        } finally {
            refreshIcon.classList.remove('fa-spin');
            updateTimestamp();
        }
    }

    function initChart() {
        const ctx = document.getElementById('agentPerformanceChart').getContext('2d');
        const gradient = ctx.createLinearGradient(0, 0, 0, 250);
        gradient.addColorStop(0, 'rgba(99, 102, 241, 0.2)');
        gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');

        performanceChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Efficiency %',
                    data: [0, 0, 0, 0, 0, 0, 0],
                    borderColor: '#6366f1',
                    borderWidth: 4,
                    tension: 0.4,
                    fill: true,
                    backgroundColor: gradient,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#6366f1',
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, max: 100, grid: { color: '#f1f5f9' } },
                    x: { grid: { display: false } }
                }
            }
        });
    }

    function useMockData() {
        // Mocking the update for visual preview
        updateUI({
            tickets: { total: 48, resolved: 42, open: 6 },
            subs: { active: 1120, total: 1250, overdue: 45, expired: 85 },
            tasks: { total: 20, completed: 17, pending: 3 },
            performance: { efficiency: 92, status: 'Top Performer' }
        });

        renderSchedule([
            { day: 'Mon', date: '20', shift: 'Morning', time: '08:00 - 16:00', status: 'Present' },
            { day: 'Tue', date: '21', shift: 'Morning', time: '08:00 - 16:00', status: 'Present' },
            { day: 'Wed', date: '22', shift: 'Afternoon', time: '14:00 - 22:00', status: 'Upcoming' }
        ]);

        updateChart([88, 95, 82, 90, 94, 0, 0]);
    }

    function updateUI(data) {
        document.getElementById('totalTickets').innerText = data.tickets.total;
        document.getElementById('resolvedTickets').innerText = data.tickets.resolved;
        document.getElementById('openTickets').innerText = data.tickets.open;

        document.getElementById('activeSubs').innerText = data.subs.active.toLocaleString();
        document.getElementById('totalSubs').innerText = data.subs.total.toLocaleString();
        document.getElementById('overdueSubs').innerText = data.subs.overdue;

        const taskPercent = Math.round((data.tasks.completed / data.tasks.total) * 100);
        document.getElementById('totalTasks').innerText = data.tasks.total;
        document.getElementById('completedTasks').innerText = data.tasks.completed;
        document.getElementById('pendingTasks').innerText = data.tasks.pending;
        document.getElementById('taskPercent').innerText = taskPercent + '%';
        document.getElementById('taskProgressBar').style.width = taskPercent + '%';

        document.getElementById('efficiencyScore').innerText = data.performance.efficiency + '%';
        document.getElementById('performanceStatus').innerText = data.performance.status;
    }

    function renderSchedule(items) {
        const container = document.getElementById('scheduleList');
        container.innerHTML = items.map(item => `
            <div class="flex items-center gap-4 p-3 bg-slate-50/50 rounded-2xl border border-slate-100 transition-hover hover:bg-white hover:shadow-sm">
                <div class="text-center min-w-[45px] py-1 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <p class="text-[8px] font-black text-slate-400 uppercase">${item.day}</p>
                    <p class="text-sm font-black text-slate-800">${item.date}</p>
                </div>
                <div class="flex-1">
                    <p class="text-xs font-black text-slate-800">${item.shift} Shift</p>
                    <p class="text-[10px] font-bold text-slate-400">${item.time}</p>
                </div>
                <span class="status-badge ${item.status === 'Present' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500'}">
                    ${item.status}
                </span>
            </div>
        `).join('');
    }

    function updateChart(dataPoints) {
        performanceChart.data.datasets[0].data = dataPoints;
        performanceChart.update();
    }

    function updateTimestamp() {
        const now = new Date();
        document.getElementById('lastUpdated').innerText = `Updated at ${now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`;
    }
</script>
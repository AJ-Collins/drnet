<script>
    let performanceChart = null;
    let dashboardData = {
        tickets: { total: 0, resolved: 0, open: 0, resolutionRate: 0 },
        clients: { total: 0, active: 0, overdue: 0, expired: 0, inactive: 0 },
        tasks: { total: 0, completed: 0, pending: 0, efficiency: 0 },
        performance: { efficiency: 0, status: 'Loading...', attendance: { present: 0, late: 0, absent: 0, total: 0 } }
    };

    document.addEventListener('DOMContentLoaded', () => {
        initChart();
        refreshDashboardData();
    });

    async function refreshDashboardData() {
        const refreshIcon = document.getElementById('refreshIcon');
        refreshIcon.style.animation = 'spin 0.6s linear infinite';
        
        try {
            // Load all dashboard data in parallel
            const [ticketsData, clientsData, tasksData, performanceData, scheduleData] = await Promise.allSettled([
                fetchTicketsData(),
                fetchClientsData(),
                fetchTasksData(),
                fetchPerformanceData(),
                fetchScheduleData()
            ]);

            // Process tickets data
            if (ticketsData.status === 'fulfilled') {
                dashboardData.tickets = {
                    total: ticketsData.value.total || 0,
                    resolved: ticketsData.value.resolved || 0,
                    open: ticketsData.value.open || 0,
                    resolutionRate: ticketsData.value.resolutionRate || 0
                };
            }

            // Process clients data
            if (clientsData.status === 'fulfilled') {
                dashboardData.clients = {
                    total: clientsData.value.total || 0,
                    active: clientsData.value.active || 0,
                    overdue: clientsData.value.overdue || 0,
                    expired: clientsData.value.expired || 0,
                    inactive: clientsData.value.inactive || 0
                };
            }

            // Process tasks data
            if (tasksData.status === 'fulfilled') {
                dashboardData.tasks = {
                    total: tasksData.value.total || 0,
                    completed: tasksData.value.completed || 0,
                    pending: tasksData.value.pending || 0,
                    efficiency: tasksData.value.efficiency || 0
                };
            }

            // Process performance data
            if (performanceData.status === 'fulfilled') {
                dashboardData.performance = {
                    efficiency: performanceData.value.efficiency || 0,
                    status: performanceData.value.status || 'Loading',
                    attendance: performanceData.value.attendance || { present: 0, late: 0, absent: 0, total: 0 }
                };
            }

            // Process schedule data
            if (scheduleData.status === 'fulfilled') {
                renderSchedule(scheduleData.value);
            }

            // Update UI with all data
            updateDashboardUI();
            loadChartData();

        } catch (error) {
            console.error("Dashboard refresh error:", error);
            showToast("Failed to load dashboard data", 'error');
        } finally {
            refreshIcon.style.animation = 'none';
            updateTimestamp();
        }
    }

    // API Functions
    async function fetchTicketsData() {
        try {
            const response = await fetch('/api/care/dashboard/tickets');
            if (!response.ok) throw new Error('Failed to fetch tickets data');
            return await response.json();
        } catch (error) {
            console.warn("Using mock tickets data");
        }
    }

    async function fetchClientsData() {
        try {
            const response = await fetch('/api/care/dashboard/clients');
            if (!response.ok) throw new Error('Failed to fetch clients data');
            const data = await response.json();
            return {
                total: data.total || 0,
                active: data.active || 0,
                overdue: data.overdue || 0,
                expired: data.expired || 0,
                inactive: data.inactive || 0
            };
        } catch (error) {
            console.warn("Using mock clients data");
        }
    }

    async function fetchTasksData() {
        try {
            const response = await fetch('/api/care/dashboard/tasks');
            if (!response.ok) throw new Error('Failed to fetch tasks data');
            const data = await response.json();
            const total = data.total || 0;
            const completed = data.completed || 0;
            return {
                total: total,
                completed: completed,
                pending: total - completed,
                efficiency: total > 0 ? Math.round((completed / total) * 100) : 0
            };
        } catch (error) {
            console.warn("Using mock tasks data");
        }
    }

    async function fetchPerformanceData() {
        try {
            const response = await fetch('/api/care/dashboard/performance');
            if (!response.ok) throw new Error('Failed to fetch performance data');
            return await response.json();
        } catch (error) {
            console.warn("Using mock performance data");
        }
    }

    async function fetchScheduleData() {
        try {
            const response = await fetch('/api/care/dashboard/schedule');
            if (!response.ok) throw new Error('Failed to fetch schedule data');
            return await response.json();
        } catch (error) {
            console.warn("Using mock schedule data");
        }
    }

    async function loadChartData() {
        const period = document.getElementById('chartPeriod').value;
        try {
            const response = await fetch(`/api/care/dashboard/chart?period=${period}`);
            if (!response.ok) throw new Error('Failed to fetch chart data');
            const data = await response.json();
            updateChart(data);
        } catch (error) {
            console.warn("Using mock chart data");
        }
    }

    // UI Update Functions
    function updateDashboardUI() {
        // Update tickets card
        document.getElementById('totalTickets').innerText = dashboardData.tickets.total;
        document.getElementById('resolvedTickets').innerText = dashboardData.tickets.resolved;
        document.getElementById('openTickets').innerText = dashboardData.tickets.open;
        document.getElementById('resolutionRate').innerText = dashboardData.tickets.resolutionRate + '%';

        // Update clients card
        document.getElementById('totalClients').innerText = dashboardData.clients.total.toLocaleString();
        document.getElementById('activeClients').innerText = dashboardData.clients.active.toLocaleString();
        document.getElementById('overdueClients').innerText = dashboardData.clients.overdue;
        document.getElementById('expiredClients').innerText = dashboardData.clients.expired;
        document.getElementById('inactiveClients').innerText = dashboardData.clients.inactive || 0;

        // Update tasks card
        document.getElementById('totalTasks').innerText = dashboardData.tasks.total;
        document.getElementById('completedTasks').innerText = dashboardData.tasks.completed;
        document.getElementById('pendingTasks').innerText = dashboardData.tasks.pending;
        document.getElementById('taskPercent').innerText = dashboardData.tasks.efficiency + '%';
        
        // Update task progress circle
        const circle = document.getElementById('taskProgressCircle');
        const offset = 175.9 - (dashboardData.tasks.efficiency / 100 * 175.9);
        circle.style.strokeDashoffset = offset;

        // Update performance card
        document.getElementById('efficiencyScore').innerText = dashboardData.performance.efficiency + '%';
        document.getElementById('performanceStatus').innerText = dashboardData.performance.status;
        document.getElementById('daysPresent').innerText = `${dashboardData.performance.attendance.present}/${dashboardData.performance.attendance.total}`;
        document.getElementById('daysLate').innerText = dashboardData.performance.attendance.late;
        document.getElementById('daysAbsent').innerText = dashboardData.performance.attendance.absent;
        
        // Update performance ring
        const perfRing = document.getElementById('perfRing');
        const perfOffset = 188.4 - (dashboardData.performance.efficiency / 100 * 188.4);
        perfRing.style.strokeDashoffset = perfOffset;
    }

    function renderSchedule(items) {
        const container = document.getElementById('scheduleList');
        if (!items || items.length === 0) {
            container.innerHTML = `
                <div class="text-center py-8 text-slate-400">
                    <i class="fas fa-calendar-plus text-2xl mb-2"></i>
                    <p class="text-xs font-bold">No upcoming tasks</p>
                </div>
            `;
            return;
        }

        container.innerHTML = items.map(item => `
            <div class="flex items-center gap-4 p-3 bg-slate-50/50 rounded-2xl border border-slate-100 transition-all hover:bg-white hover:shadow-sm">
                <div class="text-center min-w-[45px] py-1 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <p class="text-[8px] font-black text-slate-400 uppercase">${item.day}</p>
                    <p class="text-sm font-black text-slate-800">${item.date}</p>
                </div>
                <div class="flex-1">
                    <p class="text-xs font-black text-slate-800">${item.title} Shift</p>
                    <p class="text-[10px] font-bold text-slate-400">${item.time}</p>
                </div>
                <span class="status-badge ${getStatusClass(item.status)}">
                    ${item.status}
                </span>
            </div>
        `).join('');
    }

    function getStatusClass(status) {
        switch(status.toLowerCase()) {
            case 'present':
            case 'completed':
            case 'upcoming':
                return 'bg-emerald-100 text-emerald-700';
            case 'scheduled':
            case 'in progress':
                return 'bg-blue-100 text-blue-700';
            case 'future':
                return 'bg-slate-100 text-slate-500';
            case 'late':
                return 'bg-amber-100 text-amber-700';
            case 'absent':
            case 'pending':
                return 'bg-rose-100 text-rose-700';
            default:
                return 'bg-slate-100 text-slate-500';
        }
    }

    function initChart() {
        const ctx = document.getElementById('agentPerformanceChart').getContext('2d');
        const gradient = ctx.createLinearGradient(0, 0, 0, 250);
        gradient.addColorStop(0, 'rgba(99, 102, 241, 0.2)');
        gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');

        performanceChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    label: 'Efficiency %',
                    data: [],
                    borderColor: '#6366f1',
                    borderWidth: 4,
                    tension: 0.4,
                    fill: true,
                    backgroundColor: gradient,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#6366f1',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { 
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: 'rgba(15, 23, 42, 0.9)',
                        titleColor: '#f1f5f9',
                        bodyColor: '#cbd5e1',
                        borderColor: '#475569',
                        borderWidth: 1
                    }
                },
                scales: {
                    y: { 
                        beginAtZero: true, 
                        max: 100, 
                        grid: { color: '#f1f5f9' },
                        ticks: { color: '#64748b', font: { size: 11 } }
                    },
                    x: { 
                        grid: { display: false },
                        ticks: { color: '#64748b', font: { size: 11 } }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });
    }

    function updateChart(dataPoints) {
        const period = parseInt(document.getElementById('chartPeriod').value);
        let labels = [];
        
        if (period === 7) {
            labels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
        } else {
            labels = Array.from({ length: period }, (_, i) => `Day ${i + 1}`);
        }
        
        performanceChart.data.labels = labels;
        performanceChart.data.datasets[0].data = dataPoints;
        performanceChart.update();
    }

    function updateTimestamp() {
        const now = new Date();
        const timeStr = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        const dateStr = now.toLocaleDateString('en-GB', { weekday: 'short', day: 'numeric', month: 'short' });
        document.getElementById('lastUpdated').innerHTML = `Updated: <span class="text-slate-600">${dateStr} ${timeStr}</span>`;
    }

    function viewAllTasks() {
        // Redirect to tasks/schedule page
        window.location.href = '/care/schedule';
    }

    function showToast(msg, type = 'error') {
        const toastContainer = document.getElementById('toastContainer');
        const toast = document.createElement('div');
        const bgColor = type === 'error' ? 'bg-rose-600' : 'bg-emerald-600';
        const title = type === 'error' ? 'Error' : 'Success';
        toast.className = `${bgColor} text-white p-4 rounded-2xl shadow-2xl min-w-[280px] animate-fade-in flex flex-col`;
        toast.innerHTML = `
            <span class="text-[10px] font-black uppercase tracking-widest opacity-70">${title}</span>
            <span class="text-sm font-bold">${msg}</span>
        `;
        toastContainer.appendChild(toast);
        setTimeout(() => {
            toast.style.opacity = '0';
            setTimeout(() => toast.remove(), 500);
        }, 4000);
    }

    // Auto-refresh every 2 minutes
    setInterval(refreshDashboardData, 120000);
</script>
<style>
        :root { font-family: 'Plus Jakarta Sans', sans-serif; }
        body { background-color: #f8fafc; }
        
        .glass-panel { 
            background: white;
            border: 1px solid #e2e8f0; 
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
        }
        
        .glass-panel:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
        }
        
        .animate-fade-up { animation: fade-in-up 0.5s ease-out forwards; opacity: 0; }
        @keyframes fade-in-up { 
            from { transform: translateY(15px); opacity: 0; } 
            to { transform: translateY(0); opacity: 1; } 
        }

        .chart-container { position: relative; height: 300px; width: 100%; }
        
        /* Spinner for loading states */
        .spinner-sm {
            border: 2px solid rgba(0,0,0,0.1);
            border-top: 2px solid #3b82f6;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            animation: spin 0.6s linear infinite;
        }
        @keyframes spin { 100% { transform: rotate(360deg); } }
    </style>
<div class="max-w-full mx-auto space-y-6">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 animate-fade-up">
            <div>
                <h1 class="text-3xl font-black text-slate-900 tracking-tight">Staff Dashboard</h1>
                <p class="text-slate-500 font-bold text-sm">View Stats on earnings, onboards and commissions</p>
            </div>
            <div class="flex items-center gap-3">
                <div class="text-right hidden md:block">
                    <p id="lastUpdated" class="text-[10px] font-bold text-gray-400">Syncing...</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            
            <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.1s;">
                <div class="absolute -top-6 -right-6 w-24 h-24 bg-emerald-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Financials</p>
                            <h3 class="text-lg font-black text-slate-800">Total Earnings</h3>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-emerald-50 flex items-center justify-center text-emerald-600">
                            <i class="fas fa-wallet"></i>
                        </div>
                    </div>
                    
                    <h2 class="text-3xl font-black text-slate-900 mb-4" id="totalEarnings">KES 0.00</h2>
                    
                    <div class="grid grid-cols-2 gap-2 border-t border-slate-100 pt-3">
                        <div>
                            <p class="text-[9px] font-bold text-slate-400 uppercase">Net Salary</p>
                            <p class="text-xs font-black text-slate-700" id="netSalary">KES 0.00</p>
                        </div>
                        <div class="text-right">
                            <p class="text-[9px] font-bold text-slate-400 uppercase">Commissions</p>
                            <p class="text-xs font-black text-emerald-600" id="commissionEarnings">KES 0.00</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.2s;">
                <div class="absolute -top-6 -right-6 w-24 h-24 bg-amber-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Assignments</p>
                            <h3 class="text-lg font-black text-slate-800">My Tasks</h3>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600">
                            <i class="fas fa-tasks"></i>
                        </div>
                    </div>

                    <div class="flex items-end gap-2 mb-4">
                        <h2 class="text-3xl font-black text-slate-900" id="totalTasks">0</h2>
                        <span class="text-xs font-bold text-slate-400 mb-1.5">Total Assigned</span>
                    </div>

                    <div class="flex items-center gap-3">
                        <div class="flex-1 bg-slate-50 rounded-lg p-2 border border-slate-100">
                            <div class="flex items-center gap-1.5 mb-1">
                                <div class="w-1.5 h-1.5 rounded-full bg-emerald-500"></div>
                                <span class="text-[9px] font-black text-slate-400 uppercase">Done</span>
                            </div>
                            <p class="text-sm font-black text-slate-700" id="completedTasks">0</p>
                        </div>
                        <div class="flex-1 bg-slate-50 rounded-lg p-2 border border-slate-100">
                            <div class="flex items-center gap-1.5 mb-1">
                                <div class="w-1.5 h-1.5 rounded-full bg-rose-500"></div>
                                <span class="text-[9px] font-black text-slate-400 uppercase">Pending</span>
                            </div>
                            <p class="text-sm font-black text-slate-700" id="pendingTasks">0</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.3s;">
                <div class="absolute -top-6 -right-6 w-24 h-24 bg-indigo-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Growth</p>
                            <h3 class="text-lg font-black text-slate-800">Onboardings</h3>
                        </div>
                        <div class="w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>

                    <div class="flex items-end gap-2 mb-4">
                        <h2 class="text-3xl font-black text-slate-900" id="totalClients">0</h2>
                        <span class="text-xs font-bold text-slate-400 mb-1.5">Clients</span>
                    </div>

                    <div class="space-y-2">
                        <div class="flex justify-between items-center text-xs">
                            <span class="font-bold text-slate-500">Active / Rated</span>
                            <span class="font-black text-emerald-600" id="activeClients">0</span>
                        </div>
                        <div class="w-full bg-slate-100 rounded-full h-1.5">
                            <div class="bg-emerald-500 h-1.5 rounded-full" style="width: 0%" id="activeProgress"></div>
                        </div>
                        <div class="flex justify-between items-center text-xs pt-1">
                            <span class="font-bold text-slate-500">Pending</span>
                            <span class="font-black text-amber-500" id="pendingClients">0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="glass-panel p-6 rounded-lg animate-fade-up" style="animation-delay: 0.4s;">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h3 class="text-lg font-black text-slate-800">Performance Metrics</h3>
                    <p class="text-xs font-bold text-slate-400">Task completion, Client Acquisition & Attendance</p>
                </div>
                <div class="flex gap-4">
                    <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 rounded-full bg-indigo-500"></div>
                        <span class="text-[10px] font-bold text-slate-500">Tasks</span>
                    </div>
                    <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 rounded-full bg-emerald-500"></div>
                        <span class="text-[10px] font-bold text-slate-500">Onboards</span>
                    </div>
                    <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 rounded-full bg-amber-500"></div>
                        <span class="text-[10px] font-bold text-slate-500">Attendance</span>
                    </div>
                </div>
            </div>
            
            <div class="chart-container">
                <canvas id="performanceChart"></canvas>
            </div>
        </div>

    </div>

    <script>
        let chartInstance = null;

        document.addEventListener('DOMContentLoaded', () => {
            initChart();
            fetchDashboardData();
        });

        async function fetchDashboardData() {
            try {
                const response = await fetch('/api/staff/dashboard/stats');
                const data = await response.json();

                if (data.success) {
                    updateStatsUI(data.stats);
                    updateChartUI(data.chart);
                    updateTimestamp();
                } else {
                    console.error("API Error:", data.message);
                }
            } catch (error) {
                console.error("Fetch Error:", error);
            }
        }

        function updateStatsUI(stats) {
            const formatCurrency = (amount) => 'KES ' + parseFloat(amount).toLocaleString(undefined, {minimumFractionDigits: 2});

            // 1. Earnings
            document.getElementById('totalEarnings').innerText = formatCurrency(stats.earnings.total);
            document.getElementById('netSalary').innerText = formatCurrency(stats.earnings.salary);
            document.getElementById('commissionEarnings').innerText = formatCurrency(stats.earnings.commission);

            // 2. Tasks
            document.getElementById('totalTasks').innerText = stats.tasks.total;
            document.getElementById('completedTasks').innerText = stats.tasks.completed || 0;
            document.getElementById('pendingTasks').innerText = stats.tasks.pending || 0;

            // 3. Onboards
            const totalClients = stats.onboards.total || 0;
            const activeClients = stats.onboards.active || 0;
            document.getElementById('totalClients').innerText = totalClients;
            document.getElementById('activeClients').innerText = activeClients;
            document.getElementById('pendingClients').innerText = stats.onboards.pending || 0;

            // Update Progress Bar
            const activePercent = totalClients > 0 ? (activeClients / totalClients) * 100 : 0;
            document.getElementById('activeProgress').style.width = `${activePercent}%`;
        }

        function initChart() {
            const ctx = document.getElementById('performanceChart').getContext('2d');
            
            // Create Gradients
            const gradTasks = ctx.createLinearGradient(0, 0, 0, 300);
            gradTasks.addColorStop(0, 'rgba(99, 102, 241, 0.2)');
            gradTasks.addColorStop(1, 'rgba(99, 102, 241, 0)');

            chartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        {
                            label: 'Tasks Completed',
                            data: [],
                            borderColor: '#6366f1', // Indigo
                            backgroundColor: gradTasks,
                            borderWidth: 3,
                            tension: 0.4,
                            fill: true,
                            pointBackgroundColor: '#fff',
                            pointBorderColor: '#6366f1',
                            pointRadius: 4
                        },
                        {
                            label: 'Active Onboards',
                            data: [],
                            borderColor: '#10b981', // Emerald
                            backgroundColor: 'transparent',
                            borderWidth: 3,
                            borderDash: [5, 5], // Dashed line for distinction
                            tension: 0.4,
                            pointBackgroundColor: '#fff',
                            pointBorderColor: '#10b981',
                            pointRadius: 4
                        },
                        {
                            label: 'Days Present',
                            data: [],
                            borderColor: '#f59e0b', // Amber
                            backgroundColor: 'transparent',
                            borderWidth: 2,
                            tension: 0.1,
                            pointBackgroundColor: '#f59e0b',
                            pointRadius: 3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: 'rgba(15, 23, 42, 0.9)',
                            titleColor: '#f8fafc',
                            bodyColor: '#e2e8f0',
                            padding: 10,
                            cornerRadius: 8,
                            displayColors: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f1f5f9' },
                            ticks: { font: { family: 'Plus Jakarta Sans', size: 11 }, color: '#64748b' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { family: 'Plus Jakarta Sans', size: 11 }, color: '#64748b' }
                        }
                    },
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    }
                }
            });
        }

        function updateChartUI(data) {
            if (!chartInstance) return;

            // Extract arrays for chart
            const labels = data.map(d => d.month_name);
            const tasks = data.map(d => d.tasks_completed);
            const clients = data.map(d => d.clients_onboarded);
            const attendance = data.map(d => d.days_present);

            chartInstance.data.labels = labels;
            chartInstance.data.datasets[0].data = tasks;
            chartInstance.data.datasets[1].data = clients;
            chartInstance.data.datasets[2].data = attendance;
            chartInstance.update();
        }

        function updateTimestamp() {
            const now = new Date();
            const str = now.toLocaleDateString('en-GB', { day: 'numeric', month: 'short' }) + ' ' + 
                       now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            document.getElementById('lastUpdated').innerHTML = `Synced: <span class="text-slate-600">${str}</span>`;
        }
    </script>
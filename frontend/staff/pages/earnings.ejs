    <div id="toastContainer" class="fixed top-5 right-5 z-50 space-y-3 no-print"></div>

    <script>
        // --- Utilities ---
        const formatMoney = (amount) => new Intl.NumberFormat('en-KE', { style: 'currency', currency: 'KES' }).format(amount || 0);
        const formatDate = (dateStr) => dateStr ? new Date(dateStr).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) : '-';

        // --- Core Logic ---
        
        window.onload = () => loadDashboardData();

        async function loadDashboardData() {
            try {
                const res = await fetch('/api/finance/my-finance');
                const data = await res.json();
                
                if (data.success) {
                    renderHistory(data.payslips);
                    document.getElementById('loading').classList.add('hidden');
                    document.getElementById('dashboardView').classList.remove('hidden');
                } else {
                    showToast("Failed to load data", "error");
                }
            } catch (err) {
                console.error(err);
                showToast("Connection error", "error");
            }
        }

        function renderHistory(list) {
            const tbody = document.getElementById('payslipTableBody');
            document.getElementById('payslipCount').innerText = `${list.length} Records`;

            if (list.length === 0) {
                tbody.innerHTML = `<tr><td colspan="4" class="p-8 text-center text-slate-400 italic">No payslips found.</td></tr>`;
                return;
            }

            tbody.innerHTML = list.map(p => `
                <tr class="hover:bg-slate-50 transition border-b border-slate-50 last:border-none">
                    <td class="px-6 py-4 text-sm font-bold text-slate-700">${p.pay_period}</td>
                    <td class="px-6 py-4 text-xs text-slate-500">${formatDate(p.payment_date)}</td>
                    <td class="px-6 py-4 text-sm font-black text-emerald-600">${formatMoney(p.net_pay)}</td>
                    <td class="px-6 py-4 text-right">
                        <button onclick="viewPayslip(${p.id})" class="text-xs text-slate-500 px-3 py-1.5 rounded-md font-bold hover:text-slate-900 transition">
                            VIEW
                        </button>
                    </td>
                </tr>
            `).join('');
        }

        // --- View Switching Logic ---

        async function viewPayslip(id) {
            // Show loading overlay if needed, or simple toast
            showToast("Loading document...", "success");

            try {
                const res = await fetch(`/api/finance/payslip/${id}`);
                const data = await res.json();

                if (data.success) {
                    populatePayslip(data.payslip);
                    // Hide Dashboard, Show Payslip
                    document.getElementById('dashboardView').classList.add('hidden');
                    document.getElementById('payslipView').classList.remove('hidden');
                    // Scroll to top
                    document.getElementById('mainContainer').scrollTop = 0;
                }
            } catch (err) {
                showToast("Error loading document", "error");
            }
        }

        function showDashboard() {
            document.getElementById('payslipView').classList.add('hidden');
            document.getElementById('dashboardView').classList.remove('hidden');
        }

        function populatePayslip(p) {
                // Parse JSON arrays safely
                let allowancesArray = [];
                let deductionsArray = [];
                
                try {
                    allowancesArray = typeof p.allowances === 'string' ? JSON.parse(p.allowances) : (Array.isArray(p.allowances) ? p.allowances : []);
                } catch (e) {
                    console.warn('Failed to parse allowances:', e);
                    allowancesArray = [];
                }
                
                try {
                    deductionsArray = typeof p.deductions === 'string' ? JSON.parse(p.deductions) : (Array.isArray(p.deductions) ? p.deductions : []);
                } catch (e) {
                    console.warn('Failed to parse deductions:', e);
                    deductionsArray = [];
                }
                
                // Calculate display totals from arrays
                const totalAllowances = allowancesArray.reduce((sum, val) => sum + parseFloat(val || 0), 0);
                const totalDeductions = deductionsArray.reduce((sum, val) => sum + parseFloat(val || 0), 0);
                
                // Use saved values directly
                const gross = parseFloat(p.gross_pay) || 0;
                const net = parseFloat(p.net_pay) || 0;
                
                // Basic = Gross - Allowances (for display breakdown)
                const basicSalary = gross - totalAllowances;
                
                // Set employee info
                document.getElementById('psPeriod').innerText = p.pay_period || 'N/A';
                document.getElementById('psName').innerText = `${p.first_name || ''} ${p.second_name || ''}`.trim();
                document.getElementById('psPosition').innerText = p.position || 'Staff';
                document.getElementById('psId').innerText = p.employee_id || 'N/A';
                document.getElementById('psDate').innerText = formatDate(p.payment_date);
                
                // Display financial breakdown
                document.getElementById('psBasic').innerText = formatMoney(basicSalary);
                document.getElementById('psAllow').innerText = formatMoney(totalAllowances);
                document.getElementById('psAllowDesc').innerText = p.allowance_description || "Standard Allowances";
                
                document.getElementById('psGross').innerText = formatMoney(gross);
                
                document.getElementById('psDeduct').innerText = "- " + formatMoney(totalDeductions);
                document.getElementById('psDedDesc').innerText = p.deduction_description || "Tax & Statutory";
                
                document.getElementById('psNet').innerText = formatMoney(net);
            }

        // --- Toast Notification ---
        function showToast(msg, type) {
            const container = document.getElementById('toastContainer');
            const el = document.createElement('div');
            const bg = type === 'error' ? 'bg-rose-600' : 'bg-emerald-600';
            el.className = `${bg} text-white p-4 rounded-xl shadow-xl min-w-[200px] animate-slide-up`;
            el.innerHTML = `<p class="text-xs font-bold uppercase opacity-75">${type}</p><p class="text-sm font-bold">${msg}</p>`;
            container.appendChild(el);
            setTimeout(() => el.remove(), 3000);
        }
    </script>
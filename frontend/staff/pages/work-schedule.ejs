<script>
  const API_BASE = "/api/schedules";
  let schedules = [];
  let currentSchedule = null;
  let activeFilter = "today";
  let taskTypeFilters = ["Installation", "Repair", "Maintenance", "Inspection", "Emergency"];
  let currentCalendarMonth = dayjs();
  let selectedDate = null;

  // === FETCH & RENDER ===
  async function loadSchedules() {
    const container = document.getElementById("scheduleList");
    container.innerHTML = `
      <div class="skeleton skeleton-card"></div>
      <div class="skeleton skeleton-card"></div>
      <div class="skeleton skeleton-card"></div>
    `;

    try {
      const res = await fetch(API_BASE, {
        headers: {
          'Cache-Control': 'no-cache'  // ← Forces fresh request
        }
      });

      let rawSchedules = [];
      if (res.status === 304 && schedules.length > 0) {
        // Use cached data
        rawSchedules = schedules.map(s => ({
          id: s.id,
          schedule_type: s.taskType,
          task_description: `Customer: ${s.customerName}\n Location: ${s.location}\n Contact: ${s.contactNumber}\n Priority: ${s.priority}\n Status: ${s.status}\n Description: ${s.description}\n Notes: ${s.notes}`,
          start_time: s.time + ':00',
          end_time: (parseInt(s.time.split(':')[0]) + s.duration) + ':' + s.time.split(':')[1] + ':00',
          day_of_week: dayjs(s.date).format('dddd'),
          month: dayjs(s.date).month() + 1,
          is_active: !s.is_deleted
        }));
      } else if (res.ok) {
        rawSchedules = await res.json();
      } else {
        throw new Error("Failed to load");
      }

      // === TRANSFORM DATA (Same as before) ===
      schedules = rawSchedules.map(item => {
        const lines = (item.task_description || "").split("\n").map(l => l.trim()).filter(Boolean);
        const descMap = {};
        lines.forEach(line => {
          const [key, ...valueParts] = line.split(":");
          if (key && valueParts.length) {
            descMap[key.trim().toLowerCase().replace(/\s+/g, '')] = valueParts.join(":").trim();
          }
        });

        const customer = descMap['customer'] || 'Unknown';
        const location = descMap['location'] || 'Unknown';
        const contact = descMap['contact'] || 'N/A';
        const priority = descMap['priority'] || 'Medium';
        const status = descMap['status'] || 'Pending';
        const description = descMap['description'] || '';
        const notes = descMap['notes'] || '';

        const start = item.start_time;
        const end = item.end_time;
        const duration = start && end
          ? ((new Date(`2000-01-01 ${end}`) - new Date(`2000-01-01 ${start}`)) / (1000 * 60 * 60)).toFixed(1)
          : 2;

        // Reconstruct date from day_of_week + month
        const year = new Date().getFullYear();
        const month = item.month;
        const dayOfWeek = item.day_of_week;
        const dayMap = { Sunday: 0, Monday: 1, Tuesday: 2, Wednesday: 3, Thursday: 4, Friday: 5, Saturday: 6 };
        const targetDay = dayMap[dayOfWeek];

        let date = dayjs().format("YYYY-MM-DD");
        if (targetDay !== undefined && month >= 1 && month <= 12) {
          const d = new Date(year, month - 1, 1);
          const firstDay = d.getDay();
          const diff = (targetDay - firstDay + 7) % 7;
          const daysInMonth = new Date(year, month, 0).getDate();
          let day = 1 + diff;
          while (day <= daysInMonth) {
            const testDate = new Date(year, month - 1, day);
            if (testDate.getDay() === targetDay) {
              date = testDate.toISOString().split('T')[0];
              break;
            }
            day += 7;
          }
        }

        return {
          id: item.id,
          taskType: item.schedule_type,
          priority,
          date,
          time: start ? start.slice(0, 5) : "09:00",
          duration: parseFloat(duration),
          status,
          customerName: customer,
          location,
          contactNumber: contact,
          description,
          notes,
          is_deleted: !item.is_active
        };
      });

      renderSchedules();
      renderCalendar();
      updateStats();
      updateFilterCounts();


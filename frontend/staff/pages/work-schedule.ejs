                  <span>${t.duration}h</span>
                </span>
                <span class="flex items-center gap-1">
                  <i class="fas fa-phone"></i>
                  <span>${t.contactNumber}</span>
                </span>
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <button onclick="event.stopPropagation(); viewTask(${t.id})" class="text-teal-600 hover:text-teal-700 p-2 hover:bg-teal-50 rounded-lg transition-all">
              <i class="fas fa-eye"></i>
            </button>
            <button onclick="event.stopPropagation(); openScheduleModal(${t.id})" class="text-blue-600 hover:text-blue-700 p-2 hover:bg-blue-50 rounded-lg transition-all">
              <i class="fas fa-edit"></i>
            </button>
          </div>
        </div>
      </div>
    `).join("") : `
      <div class="text-center py-12 text-gray-400">
        <div class="w-20 h-20 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
          <i class="fas fa-calendar-plus text-4xl text-gray-300"></i>
        </div>
        <p class="text-lg font-semibold text-gray-600 mb-2">No tasks scheduled</p>
        <p class="text-sm mb-4">Get started by adding your first task for this day</p>
        <button onclick="scheduleForDate()" class="bg-gradient-to-r from-teal-500 to-teal-600 text-white px-6 py-3 rounded-xl font-semibold hover:from-teal-600 hover:to-teal-700 transition-all shadow-lg inline-flex items-center gap-2">
          <i class="fas fa-plus"></i> Schedule Task
        </button>
      </div>
    `;

    container.classList.remove("hidden");
  }

  function scheduleForDate() {
    openScheduleModal();
    if (selectedDate) document.getElementById("taskDate").value = selectedDate.format("YYYY-MM-DD");
  }

</script>
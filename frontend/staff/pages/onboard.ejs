<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Onboard Client | Staff Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: #f8fafc; }
        
        .glass-panel {
            background: white;
            border: 1px solid #e2e8f0;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border-radius: 1rem;
            transition: all 0.2s ease;
        }

        .input-group input, .input-group select, .input-group textarea {
            transition: all 0.2s;
        }

        .input-group input:focus, .input-group select:focus, .input-group textarea:focus {
            ring: 2px;
            border-color: #0d9488; /* Teal-600 */
            box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
        }

        .animate-fade-up { animation: fadeUp 0.4s ease-out forwards; opacity: 0; }
        @keyframes fadeUp { from { opacity: 0; transform: translateY(15px); } to { opacity: 1; transform: translateY(0); } }

        /* Commission Pulse Animation */
        @keyframes pulse-green {
            0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
            70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
            100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
        }
        .commission-update { animation: pulse-green 1s; }
    </style>
</head>
<div class="text-slate-800 h-screen flex flex-col overflow-hidden">

    <div class="bg-slate-900 text-white p-4 flex justify-between items-center shadow-lg z-30 flex-shrink-0">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-teal-500 flex items-center justify-center font-bold">
                <i class="fas fa-user-plus"></i>
            </div>
            <div>
                <h1 class="text-lg font-bold tracking-tight leading-none">NEW ACQUISITION</h1>
                <p class="text-[10px] text-slate-400 font-medium">Register Client & Earn</p>
            </div>
        </div>
        <div class="flex items-center gap-4">
            <div class="hidden md:block text-right">
                <p class="text-[10px] text-slate-400 uppercase font-bold">Staff ID</p>
                <p class="text-xs font-bold text-white">STF-2026-001</p>
            </div>
        </div>
    </div>

    <div class="flex-1 overflow-y-auto p-4 md:p-8 relative">
        <div class="max-w-full mx-auto space-y-6">

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 animate-fade-up">
                <div class="glass-panel p-5 border-l-4 border-indigo-500 flex justify-between items-center">
                    <div>
                        <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">This Month</p>
                        <h2 class="text-2xl font-black text-slate-800 mt-1">12 Clients</h2>
                    </div>
                    <div class="w-10 h-10 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600">
                        <i class="fas fa-users text-lg"></i>
                    </div>
                </div>

                <div class="glass-panel p-5 border-l-4 border-emerald-500 flex justify-between items-center bg-emerald-50/30">
                    <div>
                        <p class="text-xs font-bold text-emerald-600 uppercase tracking-widest">Commission</p>
                        <h2 class="text-2xl font-black text-emerald-700 mt-1">KES 6,000</h2>
                    </div>
                    <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600">
                        <i class="fas fa-wallet text-lg"></i>
                    </div>
                </div>

                <div class="glass-panel p-5 border-l-4 border-amber-500 flex justify-between items-center">
                    <div>
                        <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Pending Install</p>
                        <h2 class="text-2xl font-black text-slate-800 mt-1">3</h2>
                    </div>
                    <div class="w-10 h-10 rounded-full bg-amber-50 flex items-center justify-center text-amber-600">
                        <i class="fas fa-tools text-lg"></i>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 animate-fade-up" style="animation-delay: 0.1s;">
                
                <div class="lg:col-span-2 glass-panel p-6 md:p-8">
                    <div class="flex justify-between items-center mb-6 border-b border-slate-100 pb-4">
                        <h3 class="text-lg font-black text-slate-800 flex items-center gap-2">
                            <i class="fas fa-pen-fancy text-teal-500"></i> Client Registration
                        </h3>
                        <span class="text-xs font-bold bg-slate-100 text-slate-500 px-2 py-1 rounded">Step 1 of 2</span>
                    </div>

                    <form id="onboardForm" onsubmit="handleOnboard(event)" class="space-y-5">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="input-group">
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">First Name</label>
                                <input type="text" required placeholder="e.g. John" class="w-full p-3 bg-slate-50 border border-slate-200 rounded-lg outline-none text-sm font-semibold text-slate-800 focus:bg-white">
                            </div>
                            <div class="input-group">
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Last Name</label>
                                <input type="text" required placeholder="e.g. Doe" class="w-full p-3 bg-slate-50 border border-slate-200 rounded-lg outline-none text-sm font-semibold text-slate-800 focus:bg-white">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="input-group">
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Phone Number</label>
                                <input type="tel" required placeholder="07..." class="w-full p-3 bg-slate-50 border border-slate-200 rounded-lg outline-none text-sm font-semibold text-slate-800 focus:bg-white">
                            </div>
                            <div class="input-group">
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Email Address (Optional)</label>
                                <input type="email" placeholder="client@email.com" class="w-full p-3 bg-slate-50 border border-slate-200 rounded-lg outline-none text-sm font-semibold text-slate-800 focus:bg-white">
                            </div>
                        </div>

                        <div class="input-group">
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Building / Location</label>
                            <div class="relative">
                                <i class="fas fa-map-marker-alt absolute left-3 top-3.5 text-slate-400"></i>
                                <input type="text" required placeholder="e.g. Sunrise Apartments, 3rd Floor, Door C2" class="w-full p-3 pl-10 bg-slate-50 border border-slate-200 rounded-lg outline-none text-sm font-semibold text-slate-800 focus:bg-white">
                            </div>
                        </div>

                        <div class="bg-indigo-50/50 p-5 rounded-xl border border-indigo-100">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-end">
                                <div class="input-group">
                                    <label class="block text-xs font-bold text-indigo-900 uppercase mb-1">Select Service Package</label>
                                    <select id="packageSelect" onchange="updateCommission()" required class="w-full p-3 bg-white border border-indigo-200 rounded-lg outline-none text-sm font-bold text-slate-800 cursor-pointer">
                                        <option value="" data-comm="0">-- Choose Package --</option>
                                        <option value="Home Fiber 10Mbps" data-comm="500">Home Fiber 10Mbps (KES 2,500)</option>
                                        <option value="Home Fiber 20Mbps" data-comm="800">Home Fiber 20Mbps (KES 3,500)</option>
                                        <option value="Business Pro 50Mbps" data-comm="1500">Business Pro 50Mbps (KES 6,000)</option>
                                        <option value="Enterprise 100Mbps" data-comm="2500">Enterprise 100Mbps (KES 10,000)</option>
                                    </select>
                                </div>
                                
                                <div class="bg-white p-3 rounded-lg border border-indigo-100 shadow-sm flex justify-between items-center" id="commissionBox">
                                    <div>
                                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Est. Commission</p>
                                        <p class="text-xs text-slate-400 mt-0.5">Paid upon activation</p>
                                    </div>
                                    <div class="text-right">
                                        <h3 id="commissionDisplay" class="text-xl font-black text-emerald-600">KES 0</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pt-4 flex items-center gap-4">
                            <button type="submit" id="submitBtn" class="flex-1 bg-slate-900 text-white py-3.5 rounded-xl font-bold hover:bg-slate-800 transition shadow-lg hover:shadow-xl flex justify-center items-center gap-2 group">
                                <span>Register & Onboard</span>
                                <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <div class="glass-panel flex flex-col h-full max-h-[600px]">
                    <div class="p-5 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center">
                        <h3 class="font-bold text-slate-700 text-sm">My Acquisitions</h3>
                        <button class="text-xs font-bold text-indigo-600 hover:text-indigo-800">View All</button>
                    </div>
                    
                    <div class="flex-1 overflow-y-auto p-0" id="recentList">
                        <div class="p-4 border-b border-slate-50 hover:bg-slate-50 transition flex justify-between items-center">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-500">JM</div>
                                <div>
                                    <p class="text-xs font-black text-slate-800">James Mwangi</p>
                                    <p class="text-[10px] text-slate-500">Home Fiber 20Mbps</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <span class="block text-[9px] font-bold bg-amber-100 text-amber-700 px-2 py-0.5 rounded-full uppercase mb-1">Pending Install</span>
                                <p class="text-[10px] font-bold text-slate-400">Today</p>
                            </div>
                        </div>

                        <div class="p-4 border-b border-slate-50 hover:bg-slate-50 transition flex justify-between items-center">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-500">AS</div>
                                <div>
                                    <p class="text-xs font-black text-slate-800">Alice Smith</p>
                                    <p class="text-[10px] text-slate-500">Business Pro</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <span class="block text-[9px] font-bold bg-emerald-100 text-emerald-700 px-2 py-0.5 rounded-full uppercase mb-1">Active</span>
                                <p class="text-[10px] font-bold text-emerald-600">+ KES 1,500</p>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
    <div id="toastContainer" class="fixed top-5 right-5 z-[100] space-y-3"></div>

    <script>
        // 1. DYNAMIC COMMISSION CALCULATOR
        function updateCommission() {
            const select = document.getElementById('packageSelect');
            const commissionBox = document.getElementById('commissionDisplay');
            const container = document.getElementById('commissionBox');
            
            // Get commission value from data-attribute
            const selectedOption = select.options[select.selectedIndex];
            const amount = selectedOption.getAttribute('data-comm') || 0;
            
            // Format Currency
            commissionBox.innerText = new Intl.NumberFormat('en-KE', { 
                style: 'currency', currency: 'KES', maximumFractionDigits: 0 
            }).format(amount);

            // Visual Feedback (Green Flash)
            if (amount > 0) {
                container.classList.remove('commission-update'); // Reset animation
                void container.offsetWidth; // Trigger reflow
                container.classList.add('commission-update', 'border-emerald-200', 'bg-emerald-50');
                commissionBox.classList.add('scale-110');
                setTimeout(() => commissionBox.classList.remove('scale-110'), 200);
            } else {
                container.classList.remove('border-emerald-200', 'bg-emerald-50');
            }
        }

        // 2. HANDLE FORM SUBMISSION
        async function handleOnboard(e) {
            e.preventDefault();
            const btn = document.getElementById('submitBtn');
            const originalContent = btn.innerHTML;
            const form = e.target;

            // Loading State
            btn.disabled = true;
            btn.innerHTML = `<i class="fas fa-circle-notch fa-spin text-lg"></i> Processing...`;

            // Simulate API Call delay
            await new Promise(resolve => setTimeout(resolve, 1500));

            // Extract Data for UI Update
            const formData = {
                firstName: form.querySelector('input[placeholder="e.g. John"]').value,
                lastName: form.querySelector('input[placeholder="e.g. Doe"]').value,
                package: document.getElementById('packageSelect').value,
                commission: document.getElementById('commissionDisplay').innerText
            };

            // Success UI Updates
            showToast(`Success! ${formData.firstName} has been queued for installation.`, 'success');
            addRecentItem(formData);
            
            // Reset Form
            form.reset();
            updateCommission(); // Reset commission display
            btn.disabled = false;
            btn.innerHTML = originalContent;
        }

        // 3. ADD TO RECENT LIST (Simulation)
        function addRecentItem(data) {
            const list = document.getElementById('recentList');
            const initials = (data.firstName[0] + data.lastName[0]).toUpperCase();
            
            const newItem = document.createElement('div');
            newItem.className = "p-4 border-b border-slate-50 bg-emerald-50/20 transition animate-fade-up flex justify-between items-center";
            newItem.innerHTML = `
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center text-xs font-bold text-indigo-600 ring-2 ring-white">${initials}</div>
                    <div>
                        <p class="text-xs font-black text-slate-800">${data.firstName} ${data.lastName}</p>
                        <p class="text-[10px] text-slate-500">${data.package}</p>
                    </div>
                </div>
                <div class="text-right">
                    <span class="block text-[9px] font-bold bg-amber-100 text-amber-700 px-2 py-0.5 rounded-full uppercase mb-1">Queued</span>
                    <p class="text-[10px] font-bold text-slate-400">Just Now</p>
                </div>
            `;
            
            list.insertBefore(newItem, list.firstChild);
        }

        // 4. TOAST NOTIFICATION
        function showToast(msg, type = 'success') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            const bgColor = type === 'success' ? 'bg-slate-900' : 'bg-rose-600';
            
            toast.className = `${bgColor} text-white p-4 rounded-xl shadow-2xl min-w-[300px] flex items-center gap-3 animate-fade-up`;
            toast.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle text-emerald-400' : 'fa-exclamation-circle'} text-xl"></i>
                <div>
                    <p class="text-[10px] font-bold uppercase opacity-70 tracking-widest">${type}</p>
                    <p class="text-sm font-bold">${msg}</p>
                </div>
            `;
            
            container.appendChild(toast);
            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateY(-10px)';
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }
    </script>
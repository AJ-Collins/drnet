<script>
let allBookings = [];
let selectedIds = new Set();
let currentClient = null;

// API Calls
const API = {
    fetchBookings: () => fetch('/api/bookings').then(r => r.json()),
    updateStatus: (id, status) => fetch(`/api/bookings/${id}/status`, {
        method: 'PATCH',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({ status })
    }),
    deleteBooking: (id) => fetch(`/api/bookings/${id}`, { method: 'DELETE' }),
    getBalance: () => fetch('/api/hr/dispatch/sms/balance').then(r => r.json()),
    sendSMS: (phone, message) => fetch('/api/hr/dispatch/sms', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({ phone, message })
    }).then(r => r.json())
};

// Templates
const getDefaultMessage = (client) => {
    return `Dear ${client.name}, your installation for ${client.package_name} at ${client.exact_location} has been confirmed. Our technicians will reach out shortly. Dr.Net Technology Labs - 0111357066`;
};

// Initialize
window.onload = async () => {
    await refreshData();
    await loadBalance();
    setupEventListeners();
};

async function refreshData() {
    try {
        allBookings = await API.fetchBookings();
        renderTable();
    } catch (e) {
        console.error("Fetch failed:", e);
        showToast('Failed to load bookings', 'error');
    }
}

async function loadBalance() {
    try {
        const data = await API.getBalance();
        if(data.success) {
            document.getElementById('smsBalanceVal').textContent = `KES ${data.data.balance}`;
        }
    } catch (e) {
        document.getElementById('smsBalanceVal').textContent = 'N/A';
    }
}

function renderTable() {
    const tbody = document.getElementById('bookingTableBody');
    const search = document.getElementById('searchInput').value.toLowerCase();
    const filter = document.getElementById('statusFilter').value;

    const filtered = allBookings.filter(b => {
        const matchesSearch = b.name.toLowerCase().includes(search) || 
                            b.phone.includes(search) || 
                            b.exact_location.toLowerCase().includes(search);
        const matchesFilter = !filter || b.status === filter;
        return matchesSearch && matchesFilter;
    });

    if (filtered.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="text-center py-10 text-slate-400">No bookings found</td></tr>';
        return;
    }

    tbody.innerHTML = filtered.map(b => `
        <tr class="hover:bg-slate-50/50 transition-colors">
            <td class="p-6 text-center">
                <input type="checkbox" ${selectedIds.has(b.id) ? 'checked' : ''} 
                       onchange="handleSelect(${b.id})" class="custom-check">
            </td>
            <td class="p-6">
                <div class="font-black text-slate-800 text-base tracking-tight">${b.name}</div>
                <div class="text-[10px] font-black text-teal-600 uppercase tracking-widest mt-0.5">${b.phone}</div>
            </td>
            <td class="p-6">
                <div class="text-xs font-black text-slate-800 uppercase tracking-tighter">${b.package_name}</div>
                <div class="text-xs text-slate-400 font-bold">${b.location} â€¢ <span class="italic font-medium">${b.exact_location}</span></div>
            </td>
            <td class="p-6">
                ${b.extra_notes ? `
                    <div class="note-cell" onclick="toggleNote(event, ${b.id})">
                        <div class="note-text text-xs text-slate-700" id="note-${b.id}">
                            ${b.extra_notes}
                        </div>
                        ${b.extra_notes.length > 60 ? '<span class="expand-indicator text-[10px]">... more</span>' : ''}
                    </div>
                ` : '<div class="text-xs text-slate-400 italic">No notes</div>'}
            </td>
            <td class="p-6">
                <select onchange="changeStatus(${b.id}, this.value)" class="inline-status-select st-${b.status} w-36">
                    <option value="pending" ${b.status === 'pending' ? 'selected' : ''}>Pending</option>
                    <option value="confirmed" ${b.status === 'confirmed' ? 'selected' : ''}>Confirmed</option>
                    <option value="installed" ${b.status === 'installed' ? 'selected' : ''}>Installed</option>
                    <option value="cancelled" ${b.status === 'cancelled' ? 'selected' : ''}>Cancelled</option>
                </select>
            </td>
            <td class="p-6 text-right">
                <div class="flex justify-end gap-2">
                    <button type="button" onclick="openSMS(${b.id})" class="flex items-center gap-2 px-4 h-10 rounded-xl text-teal-500 hover:bg-teal-300 hover:text-teal-600 transition-all duration-200 ease-in-out shadow-sm">
                      <i class="fas fa-comment-dots"></i>
                      <span class="text-sm font-medium">Contact</span>
                    </button>
                    <button onclick="confirmDelete(${b.id})" class="w-10 h-10 rounded-xl text-rose-500 flex items-center justify-center hover:bg-rose-300 hover:text-rose-600 transition-all">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </td>
        </tr>
    `).join('');
}

async function changeStatus(id, newStatus) {
    try {
        const res = await API.updateStatus(id, newStatus);
        if(res.ok) {
            const b = allBookings.find(x => x.id === id);
            b.status = newStatus;
            renderTable();
            showToast('Status updated successfully', 'success');
        }
    } catch (e) {
        showToast('Failed to update status', 'error');
    }
}

function confirmDelete(id) {
    showConfirm(
        'Remove Booking?',
        'This action cannot be undone',
        async () => {
            try {
                await API.deleteBooking(id);
                allBookings = allBookings.filter(x => x.id !== id);
                selectedIds.delete(id);
                renderTable();
                updateBulkUI();
                showToast('Booking deleted successfully', 'success');
            } catch (e) {
                showToast('Failed to delete booking', 'error');
            }
        }
    );
}

function openSMS(id) {
    currentClient = allBookings.find(b => b.id === id);
    document.getElementById('dName').textContent = currentClient.name;
    document.getElementById('dPhone').textContent = currentClient.phone;
    document.getElementById('dStatus').textContent = currentClient.status;
    document.getElementById('dStatus').className = `text-[9px] font-black uppercase px-2 py-0.5 rounded st-${currentClient.status}`;
    
    // Set default message
    document.getElementById('singleSmsBody').value = getDefaultMessage(currentClient);
    
    document.getElementById('smsDrawer').classList.add('active');
    document.getElementById('drawerOverlay').classList.add('active');
}

async function sendSingleSMS() {
    const message = document.getElementById('singleSmsBody').value.trim();
    if (!message) {
        showToast('Please enter a message', 'error');
        return;
    }

    try {
        const result = await API.sendSMS([currentClient.phone], message);
        if (result.success) {
            showToast('SMS sent successfully!', 'success');
            closeAllDrawers();
            await loadBalance();
        } else {
          showToast(result.error || 'Failed to send SMS', 'error');
        }
    } catch (e) {
      showToast('Failed to send SMS', 'error');
    }
}

function openBulkDrawer() {
    const selected = allBookings.filter(b => selectedIds.has(b.id));
    document.getElementById('bulkTotalBadge').textContent = selected.length;
    
    const list = document.getElementById('bulkRecipientList');
    list.innerHTML = selected.map(b => `
        <div class="recipient-badge">
            <i class="fas fa-user text-teal-600"></i>
            <span>${b.name}</span>
        </div>
    `).join('');
    
    document.getElementById('bulkDrawer').classList.add('active');
    document.getElementById('drawerOverlay').classList.add('active');
}

async function sendBulkSMS() {
    const message = document.getElementById('bulkSmsBody').value.trim();
    if (!message) {
        showToast('Please enter a message', 'error');
        return;
    }

    const selected = allBookings.filter(b => selectedIds.has(b.id));
    
    const messages = selected.map(b => ({
        phone: b.phone,
        message: message
    }));

    try {
        const result = await fetch('/api/hr/dispatch/sms/bulk', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ messages })
        }).then(r => r.json());
        
        if (result.success) {
            showToast(`SMS sent to ${messages.length} recipients!`, 'success');
            closeAllDrawers();
            selectedIds.clear();
            renderTable();
            updateBulkUI();
            await loadBalance();
        } else {
            showToast(result.error || 'Failed to send SMS', 'error');
        }
    } catch (e) {
        showToast('Failed to send SMS', 'error');
    }
}

function closeAllDrawers() {
    document.querySelectorAll('.drawer-panel').forEach(d => d.classList.remove('active'));
    document.getElementById('drawerOverlay').classList.remove('active');
}

function handleSelect(id) {
    if(selectedIds.has(id)) selectedIds.delete(id);
    else selectedIds.add(id);
    updateBulkUI();
    
    // Update select all checkbox
    const allChecked = allBookings.every(b => selectedIds.has(b.id));
    document.getElementById('selectAll').checked = allChecked;
}

function updateBulkUI() {
    const count = selectedIds.size;
    document.getElementById('selectedCount').textContent = count;
    document.getElementById('bulkActionBtn').style.display = count > 0 ? 'flex' : 'none';
}

function setupEventListeners() {
    document.getElementById('searchInput').addEventListener('input', renderTable);
    document.getElementById('statusFilter').addEventListener('change', renderTable);
    document.getElementById('selectAll').addEventListener('change', (e) => {
        if(e.target.checked) {
            allBookings.forEach(b => selectedIds.add(b.id));
        } else {
            selectedIds.clear();
        }
        renderTable();
        updateBulkUI();
    });
}

function toggleNote(event, bookingId) {
    event.stopPropagation();
    const noteCell = event.currentTarget;
    const noteText = document.getElementById(`note-${bookingId}`);
    
    noteCell.classList.toggle('expanded');
    noteText.classList.toggle('expanded');
}

function showToast(msg, type = 'error') {
      const toastContainer = document.getElementById('toastContainer');
      const toast = document.createElement('div');
      
      const bgColor = type === 'error' ? 'bg-rose-600' : 'bg-slate-900';
      const title = type === 'error' ? 'Error' : 'Success';
      
      toast.className = `${bgColor} text-white p-4 rounded-2xl shadow-2xl min-w-[280px] animate-fade-in flex flex-col`;
      toast.innerHTML = `
          <span class="text-[10px] font-black uppercase tracking-widest opacity-70">${title}</span>
          <span class="text-sm font-bold">${msg}</span>
      `;
      
      toastContainer.appendChild(toast);
      setTimeout(() => {
          toast.style.opacity = '0';
          setTimeout(() => toast.remove(), 500);
      }, 4000);
  }

  function showConfirm(title, text, onConfirm) {
    const overlay = document.createElement('div');
    overlay.className = 'fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-[200] flex items-center justify-center';
    overlay.innerHTML = `
        <div class="bg-white rounded-2xl p-6 max-w-md w-full mx-4 shadow-2xl">
            <div class="text-center mb-6">
                <div class="w-16 h-16 bg-rose-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                    <i class="fas fa-exclamation-triangle text-rose-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-black text-slate-900 mb-2">${title}</h3>
                <p class="text-sm text-slate-600">${text}</p>
            </div>
            <div class="flex gap-3">
                <button onclick="this.closest('.fixed').remove()" class="flex-1 px-4 py-3 rounded-xl bg-slate-100 text-slate-700 font-bold text-sm hover:bg-slate-200 transition-all">
                    Cancel
                </button>
                <button id="confirmBtn" class="flex-1 px-4 py-3 rounded-xl bg-rose-600 text-white font-bold text-sm hover:bg-rose-700 transition-all">
                    Yes, delete it
                </button>
            </div>
        </div>
    `;
    document.body.appendChild(overlay);
    
    document.getElementById('confirmBtn').onclick = () => {
        overlay.remove();
        onConfirm();
    };
}
</script>
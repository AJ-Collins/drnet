<style>
        :root { font-family: 'Plus Jakarta Sans', sans-serif; }
        body { background-color: #f8fafc; }
        
        .glass-panel { 
            background: white;
            border: 1px solid #e2e8f0; 
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
        }
        
        .glass-panel:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
        }
        
        .animate-fade-up { animation: fade-in-up 0.5s ease-out forwards; opacity: 0; }
        @keyframes fade-in-up { 
            from { transform: translateY(15px); opacity: 0; } 
            to { transform: translateY(0); opacity: 1; } 
        }

        .spin-slow { animation: spin 2s linear infinite; }
        @keyframes spin { 100% { transform: rotate(360deg); } }
    </style>
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8 animate-fade-up">
        <div>
            <h1 class="text-3xl font-black text-slate-900 tracking-tight">Supervisor Portal</h1>
            <p class="text-slate-500 font-bold text-sm">Operations Overview & Metrics</p>
        </div>
        <div class="flex items-center gap-3">
            <div class="text-right hidden md:block">
                <p id="lastUpdated" class="text-[10px] font-bold text-gray-400">Syncing...</p>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        
        <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.1s;">
            <div class="absolute -top-6 -right-6 w-24 h-24 bg-blue-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
            <div class="relative z-10">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Workforce</p>
                        <h3 class="text-lg font-black text-slate-800">Active Staff</h3>
                    </div>
                    <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center text-blue-600">
                        <i class="fas fa-user-tie text-lg"></i>
                    </div>
                </div>
                <div class="flex items-end gap-2">
                    <span id="activeStaff" class="text-3xl font-black text-slate-900 leading-none">--</span>
                    <span class="text-[10px] font-bold text-emerald-500 mb-1"><i class="fas fa-check-circle"></i> Online</span>
                </div>
            </div>
        </div>

        <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.2s;">
            <div class="absolute -top-6 -right-6 w-24 h-24 bg-amber-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
            <div class="relative z-10">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Queue</p>
                        <h3 class="text-lg font-black text-slate-800">Pending Bookings</h3>
                    </div>
                    <div class="w-10 h-10 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600">
                        <i class="fas fa-calendar-check text-lg"></i>
                    </div>
                </div>
                <div class="flex items-end gap-2">
                    <span id="pendingBookings" class="text-3xl font-black text-slate-900 leading-none">--</span>
                    <span class="text-[10px] font-bold text-amber-500 mb-1">Action Req.</span>
                </div>
            </div>
        </div>

        <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.3s;">
            <div class="absolute -top-6 -right-6 w-24 h-24 bg-teal-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
            <div class="relative z-10">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Growth</p>
                        <h3 class="text-lg font-black text-slate-800">New Clients</h3>
                    </div>
                    <div class="w-10 h-10 rounded-xl bg-teal-50 flex items-center justify-center text-teal-600">
                        <i class="fas fa-user-plus text-lg"></i>
                    </div>
                </div>
                <div class="flex items-end gap-2">
                    <span id="newClients" class="text-3xl font-black text-slate-900 leading-none">--</span>
                    <span class="text-[10px] font-bold text-slate-400 mb-1 uppercase">Today</span>
                </div>
            </div>
        </div>

        <div class="glass-panel p-6 rounded-lg relative overflow-hidden animate-fade-up group" style="animation-delay: 0.4s;">
            <div class="absolute -top-6 -right-6 w-24 h-24 bg-rose-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
            <div class="relative z-10">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Support</p>
                        <h3 class="text-lg font-black text-slate-800">Open Tickets</h3>
                    </div>
                    <div class="w-10 h-10 rounded-xl bg-rose-50 flex items-center justify-center text-rose-600">
                        <i class="fas fa-ticket-alt text-lg"></i>
                    </div>
                </div>
                <div class="flex items-end gap-2">
                    <span id="openTickets" class="text-3xl font-black text-slate-900 leading-none">--</span>
                    <span class="text-[10px] font-bold text-rose-500 mb-1">Unresolved</span>
                </div>
            </div>
        </div>

    </div>

    <div class="glass-panel p-6 rounded-lg border-none animate-fade-up" style="animation-delay: 0.5s;">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-black text-slate-800">Recent Activity Stream</h3>
            <span class="text-[10px] font-bold text-slate-400 uppercase">Live Updates</span>
        </div>
        <div id="activityFeed" class="space-y-4">
            <div class="text-center py-8 text-slate-400 text-xs">Loading activity...</div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', refreshDashboard);

        async function refreshDashboard() {

            try {
                const response = await fetch('/api/sup/dashboard-stats');
                const result = await response.json();

                if (result.success) {
                    const data = result.data;
                    
                    // Update Stats with animation effect
                    updateCounter('activeStaff', data.activeStaff);
                    updateCounter('pendingBookings', data.pendingBookings);
                    updateCounter('newClients', data.newClientsToday);
                    updateCounter('openTickets', data.openTickets);

                    // Render Activity
                    renderActivity(data.recentActivity);
                    
                    // Update Timestamp
                    const now = new Date();
                    document.getElementById('lastUpdated').textContent = `Updated: ${now.toLocaleTimeString()}`;
                }
            } catch (error) {
                console.error("Dashboard Sync Error:", error);
            }
        }

        function updateCounter(id, value) {
            const el = document.getElementById(id);
            el.innerText = value; // Simple update, can add count-up animation here
        }

        function renderActivity(activities) {
            const container = document.getElementById('activityFeed');
            if (!activities || activities.length === 0) {
                container.innerHTML = '<div class="text-center py-4 text-xs text-slate-400">No recent activity found.</div>';
                return;
            }

            container.innerHTML = activities.map(item => {
                let iconClass = 'bg-slate-100 text-slate-500 fa-info';
                if (item.type === 'New Booking') iconClass = 'bg-amber-100 text-amber-600 fa-calendar-plus';
                if (item.type === 'Client Onboarded') iconClass = 'bg-teal-100 text-teal-600 fa-user-check';

                return `
                    <div class="flex items-center gap-4 p-3 hover:bg-slate-50 rounded-xl transition-colors border border-transparent hover:border-slate-100">
                        <div class="w-10 h-10 rounded-full flex items-center justify-center shrink-0">
                            <i class="fas ${iconClass.split(' ').pop()} text-sm"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-bold text-slate-800">${item.detail}</p>
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wide">${item.type}</p>
                        </div>
                        <span class="text-[10px] font-bold text-slate-400">${new Date(item.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                    </div>
                `;
            }).join('');
        }
    </script>
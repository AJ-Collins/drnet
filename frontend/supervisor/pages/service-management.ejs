    async function editAssignment(assignmentId) {
        const assignment = selectedStaffAssignments.find(a => a.id === assignmentId);
        if (!assignment) return;
        
        // Switch to create form mode
        toggleCreateAssignmentForm();
        
        // Pre-fill the form
        setTimeout(() => {
            document.getElementById('staffSelect').value = assignment.staff_id;
            document.getElementById('taskSubject').value = assignment.issue_subject || assignment.note || '';
            document.getElementById('assignmentNote').value = assignment.instructions || '';
            
            if (assignment.due_date) {
                document.getElementById('dueDate').value = new Date(assignment.due_date).toISOString().slice(0, 16);
            }
            
            // Update button text
            const submitBtn = document.querySelector('#assignmentForm button[type="button"]');
            submitBtn.innerHTML = '<i class="fas fa-save"></i> Update Assignment';
            submitBtn.setAttribute('onclick', `updateAssignment(${assignmentId})`);
            
        }, 100);
    }

    async function updateAssignment(assignmentId) {
        const staffId = document.getElementById('staffSelect').value;
        const subject = document.getElementById('taskSubject').value;
        const instructions = document.getElementById('assignmentNote').value;
        const dueDate = document.getElementById('dueDate').value;
        const sendNotification = document.getElementById('sendNotification').checked;
        
        const btn = event.target;
        const originalText = btn.innerHTML;
        btn.innerHTML = `<span class="spinner"></span>`;
        btn.disabled = true;
        
        try {
            const res = await fetch(`/api/assignments/${assignmentId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    staff_id: staffId,
                    subject: subject,
                    instructions: instructions,
                    due_date: dueDate || null,
                    send_notification: sendNotification
                })
            });
            
            if (res.ok) {
                showToast("Assignment updated successfully!", 'success');
                toggleCreateAssignmentForm();
                
                // Reload assignments
                if (selectedStaffId) {
                    await loadStaffAssignments(selectedStaffId);
                }
                
            } else {
                const error = await res.json();
                showToast(error.error || "Failed to update assignment", 'error');
            }
        } catch (err) {
            console.error("Failed to update assignment:", err);
            showToast("Failed to update assignment", 'error');
        } finally {
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }

    async function markAsCompleted(assignmentId) {
        if (!confirm("Mark this assignment as completed?")) return;
        
        try {
            const res = await fetch(`/api/assignments/${assignmentId}/complete`, {
                method: 'PATCH'
            });
            
            if (res.ok) {
                showToast("Assignment marked as completed!", 'success');
                
                // Reload assignments
                if (selectedStaffId) {
                    await loadStaffAssignments(selectedStaffId);
                }
                
                // Return to active assignments
                showActiveAssignments();
                
            } else {
                const error = await res.json();
                showToast(error.error || "Failed to complete assignment", 'error');
            }
        } catch (err) {
            console.error("Failed to complete assignment:", err);
            showToast("Failed to complete assignment", 'error');
        }
    }

    async function deleteAssignment(assignmentId) {
        if (!confirm("Are you sure you want to delete this assignment?")) return;
        
        try {
            const res = await fetch(`/api/assignments/${assignmentId}`, {
                method: 'DELETE'
            });
            
            if (res.ok) {
                showToast("Assignment deleted successfully!", 'success');
                
                // Remove from local array
                selectedStaffAssignments = selectedStaffAssignments.filter(a => a.id !== assignmentId);
                
                // Update UI
                renderActiveAssignments();
                renderCompletedAssignments();
                renderPerformanceStats();
                
                // Return to active assignments
                showActiveAssignments();
                
            } else {
                const error = await res.json();
                showToast(error.error || "Failed to delete assignment", 'error');
            }
        } catch (err) {
            console.error("Failed to delete assignment:", err);
            showToast("Failed to delete assignment", 'error');
        }
    }

    function filterStaff() {
        const searchQuery = document.getElementById('staffSearch').value.toLowerCase();
        
        let filtered = allStaff;
        
        if (searchQuery) {
            filtered = filtered.filter(staff => 
                staff.first_name.toLowerCase().includes(searchQuery) ||
                staff.second_name.toLowerCase().includes(searchQuery) ||
                staff.email.toLowerCase().includes(searchQuery) ||
                staff.phone.toLowerCase().includes(searchQuery) ||
                staff.position.toLowerCase().includes(searchQuery)
            );
        }
        
        renderStaffList(filtered);
    }

    // Helper functions
    function formatDate(dateString) {
        if (!dateString) return 'Not set';
        const date = new Date(dateString);
        return date.toLocaleDateString('en-GB', { 
            day: 'numeric', 
            month: 'short', 
            year: 'numeric' 
        });
    }

    function formatDateTime(dateString) {
        if (!dateString) return 'Not set';
        const date = new Date(dateString);
        return date.toLocaleDateString('en-GB', { 
            day: 'numeric', 
            month: 'short', 
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
    }

    function showToast(msg, type = 'error') {
        const toastContainer = document.getElementById('toastContainer');
        const toast = document.createElement('div');
        const bgColor = type === 'error' ? 'bg-rose-600' : 'bg-emerald-600';
        const title = type === 'error' ? 'Error' : 'Success';
        toast.className = `${bgColor} text-white p-4 rounded-xl shadow-lg min-w-[280px] animate-fade-in flex flex-col`;
        toast.innerHTML = `
            <span class="text-[10px] font-bold uppercase tracking-wider opacity-70">${title}</span>
            <span class="text-sm font-semibold">${msg}</span>
        `;
        toastContainer.appendChild(toast);
        setTimeout(() => {
            toast.style.opacity = '0';
            setTimeout(() => toast.remove(), 500);
        }, 4000);
    }

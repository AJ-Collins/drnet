<div class="bg-gray-100 h-screen overflow-hidden flex flex-col">
    <div id="toastContainer" class="fixed top-5 right-5 z-[100] space-y-3"></div>
    
    <header class="bg-slate-800 text-white p-4 flex justify-between items-center shadow-md z-30">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-slate-700 rounded-full flex items-center justify-center">
                <i class="fas fa-users-cog text-lg"></i>
            </div>
            <div>
                <h1 class="text-lg md:text-xl font-bold tracking-tight">STAFF TASK ASSIGNMENT</h1>
                <p class="text-xs text-gray-300">Admin Panel - Assign & Manage Tasks</p>
            </div>
        </div>
        <div class="flex gap-2">
            <button onclick="toggleCreateAssignmentForm()" class="bg-green-600 hover:bg-green-700 px-3 py-2 rounded text-xs md:text-sm font-semibold transition flex items-center gap-2">
                <i class="fas fa-plus"></i>
                <span class="hidden md:inline">New Assignment</span>
            </button>
        </div>
    </header>

    <div class="flex flex-1 overflow-hidden">
        <!-- Left Sidebar - Staff List -->
        <aside id="sidebar" class="w-full md:w-1/3 lg:w-1/4 border-r bg-white flex flex-col">
            <div class="p-4 border-b bg-gray-50">
                <div class="flex justify-between items-center mb-2">
                    <span class="text-xs font-bold text-gray-500 uppercase">Staff Members</span>
                    <input type="text" id="staffSearch" onkeyup="filterStaff()" placeholder="Search staff..." class="w-2/3 p-2 border rounded text-sm outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>
            <div class="flex-1 overflow-y-auto" id="staffList">
                <!-- Loading Skeleton -->
                <div class="animate-pulse space-y-3 p-4">
                    <div class="h-20 bg-slate-100 rounded-xl"></div>
                    <div class="h-20 bg-slate-100 rounded-xl"></div>
                    <div class="h-20 bg-slate-100 rounded-xl"></div>
                </div>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col bg-white">
            <!-- Staff Details Header -->
            <div id="staffHeader" class="p-4 border-b bg-white shadow-sm">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center text-blue-600">
                            <i class="fas fa-user-tie text-lg"></i>
                        </div>
                        <div>
                            <h2 class="font-bold text-slate-800 text-lg">Select Staff Member</h2>
                            <p class="text-xs text-slate-500">Choose a staff member to view and manage assignments</p>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <button id="assignTaskBtn" onclick="toggleCreateAssignmentForm()" 
                                class="hidden text-xs bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-plus"></i> Assign Task
                        </button>
                        <button id="viewStatsBtn" onclick="viewPerformanceStats()" 
                                class="hidden text-xs bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-chart-bar"></i> View Stats
                        </button>
                        <button id="viewProfileBtn" onclick="viewStaffDetails()" 
                                class="hidden text-xs bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-eye"></i> View Profile
                        </button>
                    </div>
                </div>
            </div>

            <!-- Create Assignment Form (Replaces content area) -->
            <div id="createAssignmentForm" class="hidden flex-1 overflow-y-auto">
                <div class="p-6 bg-gray-100">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-lg font-bold text-gray-900">Create New Assignment</h3>
                        <button onclick="toggleCreateAssignmentForm()" class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                    
                    <form id="assignmentForm" class="space-y-6 max-w-2xl">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Select Staff Member</label>
                                <select id="staffSelect" class="w-full p-3 bg-white border rounded-lg text-sm outline-none focus:ring-2 focus:ring-green-500">
                                    <option value="">-- Choose Staff --</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Due Date</label>
                                <input type="datetime-local" id="dueDate" 
                                       class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-green-500">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Subject</label>
                            <input type="text" id="taskSubject" placeholder="Brief description of the task" 
                                   class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-green-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Assignment Note (Optional)</label>
                            <textarea id="assignmentNote" rows="4" placeholder="Provide clear instructions for the staff member..." 
                                      class="w-full p-3 border rounded-lg text-sm outline-none focus:ring-2 focus:ring-green-500 resize-none"></textarea>
                        </div>
                        
                        <div class="flex items-center gap-3 p-4 bg-green-50 rounded-lg border border-green-100">
                            <input type="checkbox" id="sendNotification" checked class="w-4 h-4 text-green-600 rounded">
                            <label for="sendNotification" class="text-sm text-gray-700 cursor-pointer">Send notification to staff member</label>
                        </div>
                        
                        <div class="flex gap-4 pt-4">
                            <button type="button" onclick="toggleCreateAssignmentForm()" 
                                    class="px-8 py-3 text-gray-600 font-semibold hover:text-gray-900">
                                Cancel
                            </button>
                            <button type="button" onclick="saveAssignment()" 
                                    class="flex-1 bg-teal-600 text-white py-3 rounded-lg font-semibold hover:bg-teal-700 transition flex items-center justify-center gap-2">
                                <i class="fas fa-paper-plane"></i> Assign Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Content Area (Default view) -->
            <div id="contentArea" class="flex-1 overflow-y-auto p-6">
                <!-- Default State -->
                <div id="defaultState" class="flex flex-col items-center justify-center h-full text-gray-400 p-6 text-center">
                    <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4">
                        <i class="fas fa-user-check text-2xl"></i>
                    </div>
                    <p class="text-sm font-semibold mb-1">Select a Staff Member</p>
                    <p class="text-xs text-gray-500">Choose a staff member from the list to view their assignments</p>
                </div>

                <!-- Active Assignments View -->
                <div id="activeAssignmentsView" class="hidden">
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">Active Assignments</h3>
                            <p class="text-sm text-gray-500">Tasks currently assigned to this staff member</p>
                        </div>
                        <button onclick="toggleCreateAssignmentForm()" class="text-sm bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-plus"></i> Add Task
                        </button>
                    </div>
                    <div id="activeAssignmentsList" class="space-y-4">
                        <!-- Assignments will be loaded here -->
                    </div>
                </div>

                <!-- Completed Assignments View -->
                <div id="completedAssignmentsView" class="hidden">
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">Completed Assignments</h3>
                            <p class="text-sm text-gray-500">Tasks completed by this staff member</p>
                        </div>
                    </div>
                    <div id="completedAssignmentsList" class="space-y-4">
                        <!-- Completed assignments will be loaded here -->
                    </div>
                </div>

                <!-- Performance Stats View -->
                <div id="statsView" class="hidden">
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">Performance Statistics</h3>
                            <p class="text-sm text-gray-500">Staff performance metrics and analytics</p>
                        </div>
                        <button onclick="showActiveAssignments()" class="text-sm bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-tasks"></i> Back to Tasks
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                        <div class="bg-white p-6 rounded-xl border shadow-sm">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500 font-semibold">Total Tasks</p>
                                    <p id="totalTasks" class="text-3xl font-bold text-gray-800 mt-2">0</p>
                                </div>
                                <div class="w-14 h-14 bg-blue-50 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-tasks text-blue-600 text-xl"></i>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white p-6 rounded-xl border shadow-sm">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500 font-semibold">Completion Rate</p>
                                    <p id="completionRate" class="text-3xl font-bold text-gray-800 mt-2">0%</p>
                                </div>
                                <div class="w-14 h-14 bg-green-50 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-chart-line text-green-600 text-xl"></i>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white p-6 rounded-xl border shadow-sm">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500 font-semibold">Avg. Time</p>
                                    <p id="avgTime" class="text-3xl font-bold text-gray-800 mt-2">0h</p>
                                </div>
                                <div class="w-14 h-14 bg-purple-50 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-clock text-purple-600 text-xl"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white p-6 rounded-xl border shadow-sm">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Recent Activity</h3>
                        <div id="recentActivity" class="space-y-4">
                            <!-- Activity items will be loaded here -->
                        </div>
                    </div>
                </div>

                <!-- Staff Details View -->
                <div id="staffDetailsView" class="hidden">
                    <div class="flex justify-between items-center mb-6">
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">Staff Profile</h3>
                            <p class="text-sm text-gray-500">Detailed information about the staff member</p>
                        </div>
                        <button onclick="showActiveAssignments()" class="text-sm bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                            <i class="fas fa-tasks"></i> Back to Tasks
                        </button>
                    </div>
                    
                    <div id="staffDetailsContent" class="bg-white p-6 rounded-xl border shadow-sm">
                        <!-- Staff details will be loaded here -->
                    </div>
                </div>

                <!-- Assignment Details View -->
                <div id="assignmentDetailsView" class="hidden">
                    <div id="assignmentDetailsContent" class="bg-white p-6 rounded-lg border shadow-sm">
                        <!-- Assignment details will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let allStaff = [];
    let selectedStaffId = null;
    let selectedStaffAssignments = [];
    let isCreateFormVisible = false;
    let currentView = 'default'; // 'default', 'active', 'completed', 'stats', 'details', 'assignment'

    // Initialize
    window.onload = async () => {
        await loadStaff();
        populateStaffSelect();
    };

    // Load all staff members
    async function loadStaff() {
        try {
            const res = await fetch('/api/manage/staff');
            if (!res.ok) throw new Error('Failed to load staff');
            
            allStaff = await res.json();
            renderStaffList(allStaff);
            
        } catch (err) {
            console.error("Failed to load staff:", err);
            showToast("Failed to load staff members", 'error');
            
            const list = document.getElementById('staffList');
            list.innerHTML = `
                <div class="text-center py-12 text-gray-400">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-exclamation-triangle text-xl"></i>
                    </div>
                    <p class="text-sm font-semibold">Unable to load staff</p>
                    <button onclick="loadStaff()" class="text-xs text-blue-600 hover:underline font-bold mt-2">
                        Retry
                    </button>
                </div>
            `;
        }
    }

    function populateStaffSelect() {
        const select = document.getElementById('staffSelect');
        select.innerHTML = '<option value="">-- Choose Staff --</option>' +
            allStaff.map(staff => `
                <option value="${staff.id}">${staff.first_name} ${staff.second_name} - ${staff.position}</option>
            `).join('');
    }

    function renderStaffList(staffMembers) {
        const list = document.getElementById('staffList');
        
        if (!staffMembers || staffMembers.length === 0) {
            list.innerHTML = `
                <div class="text-center py-12 text-gray-400">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-user-slash text-xl"></i>
                    </div>
                    <p class="text-sm font-semibold">No staff members found</p>
                </div>
            `;
            return;
        }
        
        list.innerHTML = staffMembers.map(staff => {
            const isActive = staff.id === selectedStaffId;
            const activeAssignments = staff.active_assignments || 0;
            
            return `
                <div class="p-4 border-b hover:bg-blue-50 cursor-pointer transition border-l-4 ${isActive ? 'border-l-blue-500 bg-blue-50' : 'border-l-transparent'}" 
                     onclick="selectStaff(${staff.id})">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full overflow-hidden bg-slate-100 border">
                            ${staff.image ? 
                                `<img src="${staff.image}" alt="${staff.first_name}" class="w-full h-full object-cover">` :
                                `<div class="w-full h-full flex items-center justify-center text-slate-600 font-bold">
                                    ${staff.first_name.charAt(0)}${staff.second_name?.charAt(0) || ''}
                                </div>`
                            }
                        </div>
                        <div class="flex-1">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h4 class="text-sm font-semibold text-gray-800">${staff.first_name} ${staff.second_name}</h4>
                                    <p class="text-xs text-gray-500">${staff.position || 'Staff'}</p>
                                </div>
                                ${activeAssignments > 0 ? `
                                    <span class="bg-blue-100 text-blue-600 text-[10px] font-bold px-2 py-0.5 rounded-full">
                                        ${activeAssignments}
                                    </span>
                                ` : ''}
                            </div>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="text-xs font-semibold ${staff.is_active ? 'text-green-600' : 'text-red-600'}">
                                    <i class="fas fa-circle text-[6px]"></i> ${staff.is_active ? 'Active' : 'Inactive'}
                                </span>
                                <span class="text-xs text-gray-500">• ${staff.department || 'No Dept'}</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }).join('');
    }

    function toggleCreateAssignmentForm() {
        const form = document.getElementById('createAssignmentForm');
        const contentArea = document.getElementById('contentArea');
        const isVisible = form.classList.contains('hidden');
        
        if (isVisible) {
            // Show create form, hide content area
            form.classList.remove('hidden');
            contentArea.classList.add('hidden');
            isCreateFormVisible = true;
            currentView = 'create';
            
            // If a staff is selected, pre-fill the staff select
            if (selectedStaffId) {
                document.getElementById('staffSelect').value = selectedStaffId;
            }
            
            // Set default due date to tomorrow
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            document.getElementById('dueDate').value = tomorrow.toISOString().slice(0, 16);
        } else {
            // Hide create form, show content area
            form.classList.add('hidden');
            contentArea.classList.remove('hidden');
            isCreateFormVisible = false;
            document.getElementById('assignmentForm').reset();
            
            // Return to current view
            showView(currentView === 'create' ? 'active' : currentView);
        }
    }

    async function selectStaff(staffId) {
      if (isCreateFormVisible) {
          toggleCreateAssignmentForm();
      }
      
      selectedStaffId = staffId;
      const staff = allStaff.find(s => s.id === staffId);
      
      if (!staff) return;
      
      // Update staff list selection
      renderStaffList(allStaff);
      
      // Update header (this replaces the buttons, so we don't need to show them separately)
      updateStaffHeader(staff);
      
      // Load staff assignments
      await loadStaffAssignments(staffId);
      
      // Show active assignments view
      showActiveAssignments();
    } 

    function updateStaffHeader(staff) {
        document.getElementById('staffHeader').innerHTML = `
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full overflow-hidden bg-blue-50 border">
                        ${staff.image ? 
                            `<img src="${staff.image}" alt="${staff.first_name}" class="w-full h-full object-cover">` :
                            `<div class="w-full h-full flex items-center justify-center text-blue-600 font-bold text-lg">
                                ${staff.first_name.charAt(0)}${staff.second_name?.charAt(0) || ''}
                            </div>`
                        }
                    </div>
                    <div>
                        <h2 class="font-bold text-slate-800 text-lg">${staff.first_name} ${staff.second_name}</h2>
                        <div class="flex items-center gap-3">
                            <p class="text-xs text-gray-500">${staff.position || 'Staff'}</p>
                            <span class="text-xs font-semibold ${staff.is_active ? 'text-green-600' : 'text-red-600'}">
                                <i class="fas fa-circle text-[6px]"></i> ${staff.is_active ? 'Active' : 'Inactive'}
                            </span>
                            <span class="text-xs text-gray-500">${staff.department || 'No Department'}</span>
                        </div>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button onclick="toggleCreateAssignmentForm()" 
                            class="text-xs bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                        <i class="fas fa-plus"></i> Assign Task
                    </button>
                    <button onclick="viewPerformanceStats()" 
                            class="text-xs bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                        <i class="fas fa-chart-bar"></i> View Stats
                    </button>
                    <button onclick="viewStaffDetails()" 
                            class="text-xs bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded font-semibold flex items-center gap-2">
                        <i class="fas fa-eye"></i> View Profile
                    </button>
                </div>
            </div>
        `;
    }

    async function loadStaffAssignments(staffId) {
        try {
            const res = await fetch(`/api/staff/${staffId}/assignments`);
            if (!res.ok) throw new Error('Failed to load assignments');
            
            selectedStaffAssignments = await res.json();
            renderActiveAssignments();
            renderCompletedAssignments();
            renderPerformanceStats();
            
        } catch (err) {
            console.error("Failed to load assignments:", err);
            showToast("Failed to load assignments", 'error');
        }
    }

    function showView(view) {

      if (isCreateFormVisible && view !== 'create') {
        const form = document.getElementById('createAssignmentForm');
        const contentArea = document.getElementById('contentArea');
        form.classList.add('hidden');
        contentArea.classList.remove('hidden');
        isCreateFormVisible = false;
        document.getElementById('assignmentForm').reset();
      }
        currentView = view;
        
        // Hide all views
        document.getElementById('defaultState').classList.add('hidden');
        document.getElementById('activeAssignmentsView').classList.add('hidden');
        document.getElementById('completedAssignmentsView').classList.add('hidden');
        document.getElementById('statsView').classList.add('hidden');
        document.getElementById('staffDetailsView').classList.add('hidden');
        document.getElementById('assignmentDetailsView').classList.add('hidden');
        
        // Show selected view
        if (view === 'default') {
            document.getElementById('defaultState').classList.remove('hidden');
        } else if (view === 'active') {
            document.getElementById('activeAssignmentsView').classList.remove('hidden');
        } else if (view === 'completed') {
            document.getElementById('completedAssignmentsView').classList.remove('hidden');
        } else if (view === 'stats') {
            document.getElementById('statsView').classList.remove('hidden');
        } else if (view === 'details') {
            document.getElementById('staffDetailsView').classList.remove('hidden');
        } else if (view === 'assignment') {
            document.getElementById('assignmentDetailsView').classList.remove('hidden');
        }
    }

    function showActiveAssignments() {
        showView('active');
    }

    function viewPerformanceStats() {
        showView('stats');
    }

    function viewStaffDetails() {
        showView('details');
        renderStaffDetailsContent();
    }

    function renderActiveAssignments() {
        const container = document.getElementById('activeAssignmentsList');
        // Show ALL assignments without filtering by status
        const allAssignments = selectedStaffAssignments;
        
        if (allAssignments.length === 0) {
            container.innerHTML = `
                <div class="text-center py-12 text-gray-400">
                    <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-inbox text-xl"></i>
                    </div>
                    <p class="text-sm font-semibold">No assignments</p>
                    <p class="text-xs mt-1">No tasks have been assigned yet</p>
                    <button onclick="toggleCreateAssignmentForm()" class="text-xs text-blue-600 hover:underline font-bold mt-2">
                        + Create First Task
                    </button>
                </div>
            `;
            return;
        }
        
        container.innerHTML = allAssignments.map(assignment => {
            const isTicket = assignment.type === 'ticket';
            const status = assignment.status || 'pending';
            
            // Determine status badge color
            let statusBadgeClass = 'bg-blue-100 text-blue-700';
            let statusIcon = 'fa-clock';
            let statusText = status.charAt(0).toUpperCase() + status.slice(1);
            
            if (status === 'completed') {
                statusBadgeClass = 'bg-green-100 text-green-700';
                statusIcon = 'fa-check-circle';
                statusText = 'Completed';
            } else if (status === 'pending') {
                statusBadgeClass = 'bg-amber-100 text-amber-700';
                statusIcon = 'fa-spinner';
                statusText = 'Pending';
            } else if (status === 'seen') {
                statusBadgeClass = 'bg-purple-100 text-purple-700';
                statusIcon = 'fa-user-check';
                statusText = 'Seen';
            }
            
            return `
                <div class="bg-white p-5 rounded-lg border shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center gap-2 flex-wrap">
                            <span class="text-xs font-bold bg-gray-100 text-gray-700 px-3 py-1 rounded-full uppercase">
                                <i class="fas fa-ticket-alt mr-1"></i> ${assignment.assignment_ticket_id}
                            </span>
                            <span class="text-xs font-bold ${statusBadgeClass} px-3 py-1 rounded-full uppercase">
                                <i class="fas ${statusIcon} mr-1"></i> ${statusText}
                            </span>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="viewAssignmentDetails(${assignment.id})" class="text-sm text-blue-600 hover:text-blue-800 px-3 py-1 hover:bg-blue-50 rounded-lg">
                                <i class="fas fa-eye mr-1"></i> View
                            </button>
                            <button onclick="editAssignment(${assignment.id})" class="text-sm text-yellow-600 hover:text-yellow-800 px-3 py-1 hover:bg-yellow-50 rounded-lg">
                                <i class="fas fa-edit mr-1"></i> Edit
                            </button>

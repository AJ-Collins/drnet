    async function saveAssignment() {
        const staffId = document.getElementById('staffSelect').value;
        const subject = document.getElementById('taskSubject').value;
        const instructions = document.getElementById('assignmentNote').value;
        const dueDate = document.getElementById('dueDate').value;
        const sendNotification = document.getElementById('sendNotification').checked;
        
        if (!staffId) {
            showToast("Please select a staff member", 'error');
            return;
        }
        
        const btn = event.target;
        const originalText = btn.innerHTML;
        btn.innerHTML = `<span class="spinner"></span>`;
        btn.disabled = true;
        
        try {
            const res = await fetch('/api/assignments', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    staff_id: staffId,
                    subject: subject,
                    instructions: instructions,
                    due_date: dueDate || null,
                    send_notification: sendNotification
                })
            });
            
            if (res.ok) {
                showToast("Task assigned successfully!", 'success');
                toggleCreateAssignmentForm();
                
                // Reload assignments if this staff is selected
                if (selectedStaffId == staffId) {
                    await loadStaffAssignments(staffId);
                } else {
                    // Select this staff
                    selectStaff(parseInt(staffId));
                }
                
            } else {
                const error = await res.json();
                showToast(error.error || "Failed to assign task", 'error');
            }
        } catch (err) {
            console.error("Failed to assign task:", err);
            showToast("Failed to assign task", 'error');
        } finally {
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }


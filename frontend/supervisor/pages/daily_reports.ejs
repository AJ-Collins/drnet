        // WORKSPACE TOGGLE LOGIC
        function toggleReportForm() {
            const defaultState = document.getElementById('defaultState');
            const formContainer = document.getElementById('reportFormContainer');
            const detailView = document.getElementById('reportDetailView');
            const generateBtn = document.getElementById('generateReportBtn');
            
            isFormVisible = !isFormVisible;
            
            if (isFormVisible) {
                defaultState.classList.add('hidden');
                detailView.classList.add('hidden');
                formContainer.classList.remove('hidden');
                generateBtn.innerHTML = '<i class="fas fa-times mr-2"></i>Close Workspace';
                generateBtn.classList.replace('bg-teal-600', 'bg-slate-600');
            } else {
                defaultState.classList.remove('hidden');
                formContainer.classList.add('hidden');
                detailView.classList.add('hidden');
                generateBtn.innerHTML = '<i class="fas fa-plus mr-2"></i>Generate Report';
                generateBtn.classList.replace('bg-slate-600', 'bg-teal-600');
            }
        }

        // COMPOSER TOOLS
        function copyToForm(text, dept) {
            if (!isFormVisible) toggleReportForm();
            
            // Auto-select textarea based on staff department
            let targetId = 'ops_summary';
            if (dept === 'support') targetId = 'support_summary';
            
            const target = document.getElementById(targetId);
            const separator = target.value ? "\n\n" : "";
            target.value += `${separator}[Staff Entry]: ${text}`;
            
            showToast(`Added to ${dept} section`, 'success');
            target.focus();
        }

        // PERSISTENCE
        async function submitGeneralReport(status) {
            const today = formatDate(new Date());
            
            const payload = {
                report_date: today,
                status: status,
                ops_summary: document.getElementById('ops_summary').value,
                ops_installs: parseInt(document.getElementById('ops_installs').value) || 0,
                ops_pending: parseInt(document.getElementById('ops_pending').value) || 0,
                staff_summary: document.getElementById('staff_summary').value,
                support_summary: document.getElementById('support_summary').value,
                is_urgent: document.getElementById('is_urgent').checked ? 1 : 0,
                conclusion: document.getElementById('conclusion').value
            };

            try {
                const response = await fetch('/api/reports/general', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();
                
                if (result.success) {
                    showToast(status === 'draft' ? "Draft Saved" : "Report Submitted", 'success');
                    // Refresh general reports
                    await fetchGeneralReports();
                    // Switch to general tab to see the new report
                    if (status === 'submitted') {
                        switchTab('general');
                        toggleReportForm();
                    }
                } else {
                    showToast("Error saving report", 'error');
                }
            } catch (error) {
                console.error("Submit error:", error);
                showToast("Error saving report", 'error');
            }
        }

        // HELPERS
        function formatDate(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function escapeForJS(str) {
            return (str || '')
                .replace(/\\/g, '\\\\')
                .replace(/`/g, '\\`')
                .replace(/\$/g, '\\$')
                .replace(/\n/g, '\\n')
                .replace(/\r/g, '\\r');
        }

        function showToast(msg, type = 'error') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            const bgColor = type === 'success' ? 'bg-emerald-600' : 'bg-rose-600';
            
            toast.className = `toast ${bgColor} text-white p-4 rounded-xl shadow-lg flex flex-col mb-2`;
            toast.innerHTML = `<span class="text-xs font-bold">${escapeHtml(msg)}</span>`;
            
            container.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }

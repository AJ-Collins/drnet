<style>
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            background-color: #f1f5f9; 
            height: 100vh;
            overflow: hidden;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 3px; }
        ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

        .glass-panel {
            background: white;
            border: 1px solid #e2e8f0;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

        .input-area {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            transition: all 0.2s;
        }
        
        .input-area:focus { 
            background: white; 
            border-color: #0f766e; 
            box-shadow: 0 0 0 3px rgba(15, 118, 110, 0.1); 
            outline: none;
        }

        .section-label {
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .feed-card {
            transition: transform 0.2s, border-color 0.2s;
            cursor: pointer;
        }
        .feed-card:hover {
            transform: translateY(-2px);
            border-color: #99f6e4;
        }

        .tag-ops { background: #ccfbf1; color: #0f766e; }
        .tag-support { background: #e0e7ff; color: #3730a3; }
        .tag-general { background: #fef3c7; color: #92400e; }
        
        /* Filter Pills */
        .filter-pill {
            background: white;
            color: #64748b;
            border: 1px solid #e2e8f0;
        }
        .filter-pill:hover {
            background: #f8fafc;
            border-color: #cbd5e1;
        }
        .filter-pill.active {
            background: #0f766e;
            color: white;
            border-color: #0f766e;
        }

        /* Tab styles */
        .tab-btn {
            background: white;
            color: #64748b;
            border-bottom: 3px solid transparent;
        }
        .tab-btn:hover {
            color: #0f766e;
        }
        .tab-btn.active {
            color: #0f766e;
            border-bottom-color: #0f766e;
        }
        
        /* Animation */
        .animate-fade-in { animation: fadeIn 0.4s ease-out forwards; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        /* Toast styles */
        #toastContainer { position: fixed; top: 1.25rem; right: 1.25rem; z-index: 100; }
        .toast {
            min-width: 280px;
            animation: slideIn 0.3s ease-out;
            margin-bottom: 0.75rem;
        }
        @keyframes slideIn { from { transform: translateX(400px); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    </style><div id="toastContainer"></div>

    <!-- Navigation Header -->
    <nav class="text-gray-900 h-16 flex items-center justify-between px-6 shrink-0 z-20">
        <div class="flex items-center gap-3">
            <div>
                <h1 class="font-bold text-2xl tracking-wide">Daily Reporting</h1>
                <p class="text-[10px] text-slate-400 uppercase tracking-widest">Daily Reporting System</p>
            </div>
        </div>
        
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2 bg-slate-800 px-3 py-1.5 rounded-lg border border-slate-700">
                <i class="fas fa-calendar-day text-white text-xs"></i>
                <span class="text-xs text-white font-bold" id="currentDate">Loading...</span>
            </div>
        </div>
    </nav>

    <div class="flex-1 overflow-hidden p-4 md:p-6">
        <div class="grid grid-cols-12 gap-6 h-full">

            <!-- LEFT PANEL: Reports Feed with Tabs -->
            <div class="col-span-12 lg:col-span-5 flex flex-col h-full">
                <!-- Tab Navigation -->
                <div class="mb-4 shrink-0">
                    <div class="flex gap-2 mb-4 border-b border-slate-200">
                        <button onclick="switchTab('staff')" id="staffTab" class="tab-btn active px-4 py-3 text-sm font-black uppercase transition-all">
                            <i class="fas fa-users mr-2"></i>Staff Reports
                        </button>
                        <button onclick="switchTab('general')" id="generalTab" class="tab-btn px-4 py-3 text-sm font-black uppercase transition-all">
                            <i class="fas fa-file-alt mr-2"></i>Generated Reports
                        </button>
                    </div>

                    <!-- Staff Reports Filters -->
                   <div id="staffFilters" class="flex flex-wrap items-center gap-2">
                        <button onclick="setRange('all')" 
                            class="filter-pill active px-3 py-1.5 rounded-full text-[10px] font-black uppercase transition-all">
                            All
                        </button>

                        <button onclick="setRange('daily')" 
                            class="filter-pill px-3 py-1.5 rounded-full text-[10px] font-black uppercase transition-all">
                            Daily
                        </button>

                        <button onclick="setRange('weekly')" 
                            class="filter-pill px-3 py-1.5 rounded-full text-[10px] font-black uppercase transition-all">
                            Weekly
                        </button>

                        <!-- Date picker -->
                        <div class="flex items-center gap-2 bg-slate-50 px-3 py-1.5 rounded-full border border-slate-200 max-w-[180px]">
                            <i class="far fa-calendar text-slate-400 text-[10px]"></i>
                            <input type="date" id="historyFilter"
                                onchange="applyFilters()"
                                class="bg-transparent border-none text-[10px] font-black text-slate-700 focus:ring-0 p-0 w-full cursor-pointer">
                        </div>

                        <!-- Push department filter to the right -->
                        <div class="ml-auto">
                            <select id="feedFilter"
                                onchange="applyDepartmentFilter(this.value)"
                                class="text-xs font-bold bg-white border border-slate-300 rounded-lg px-3 py-2 outline-none">
                                <option value="all">All Departments</option>
                                <option value="ops">Field Staff (Ops)</option>
                                <option value="support">Customer Support</option>
                            </select>
                        </div>
                    </div>

                    <!-- General Reports Filters -->
                    <div id="generalFilters" class="hidden space-y-3">
                        <div class="flex flex-wrap items-center gap-2">
                            <button onclick="setGeneralRange('all')" class="filter-pill active px-3 py-1.5 rounded-full text-[10px] font-black uppercase transition-all" data-general-filter="all">All Time</button>
                            <button onclick="setGeneralRange('month')" class="filter-pill px-3 py-1.5 rounded-full text-[10px] font-black uppercase transition-all" data-general-filter="month">This Month</button>
                            <button onclick="setGeneralRange('week')" class="filter-pill px-3 py-1.5 rounded-full text-[10px] font-black uppercase transition-all" data-general-filter="week">This Week</button>
                        </div>
                    </div>
                </div>

                <!-- Staff Reports Feed -->
                <div id="staffReportsFeed" class="flex-1 overflow-y-auto pr-2 space-y-4 min-w-[360px]">
                    <div class="flex flex-col items-center justify-center p-10 text-slate-400">
                        <i class="fas fa-circle-notch fa-spin text-2xl mb-2"></i>
                        <p class="text-xs font-bold uppercase">Loading Reports...</p>
                    </div>
                </div>

                <!-- General Reports Feed -->
                <div id="generalReportsFeed" class="hidden flex-1 overflow-y-auto pr-2 space-y-4 min-w-[360px]">
                    <div class="flex flex-col items-center justify-center p-10 text-slate-400">
                        <i class="fas fa-circle-notch fa-spin text-2xl mb-2"></i>
                        <p class="text-xs font-bold uppercase">Loading Generated Reports...</p>
                    </div>
                </div>
            </div>

            <!-- RIGHT PANEL: Report Generation / Detail View -->
            <div class="col-span-12 lg:col-span-7 flex flex-col h-full">
                <div class="glass-panel rounded-xl h-full flex flex-col overflow-hidden">
                    
                    <!-- Header -->
                    <div class="p-4 border-b border-slate-200 bg-slate-50 flex justify-between items-center shrink-0">
                        <div>
                            <h2 class="text-lg font-black text-slate-800" id="rightPanelTitle">Daily General Report</h2>
                            <p class="text-xs text-slate-500 font-bold" id="rightPanelSubtitle">Synthesize data from field and support teams</p>
                        </div>
                        <div class="flex gap-2">
                            <button id="generateReportBtn" onclick="toggleReportForm()" class="px-4 py-2 rounded-lg bg-teal-600 text-white font-bold text-xs hover:bg-teal-700 shadow-lg shadow-teal-500/20">
                                <i class="fas fa-plus mr-2"></i>Generate Report
                            </button>
                        </div>
                    </div>

                    <!-- Default State (Empty View) -->
                    <div id="defaultState" class="flex-1 flex flex-col items-center justify-center bg-white p-6 text-center">
                        <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-4">
                            <i class="fas fa-file-alt text-2xl text-slate-400"></i>
                        </div>
                        <p class="text-sm font-semibold text-slate-600 mb-1">No Report Generated Today</p>
                        <p class="text-xs text-slate-500 mb-4">Click "Generate Report" to create today's daily report</p>
                        <button onclick="toggleReportForm()" class="text-xs text-teal-600 hover:text-teal-700 font-bold uppercase">
                            <i class="fas fa-plus mr-1"></i> Create Report
                        </button>
                    </div>

                    <!-- Report Detail View -->
                    <div id="reportDetailView" class="hidden flex-1 overflow-y-auto p-6 bg-white">
                        <!-- Content will be dynamically loaded -->
                    </div>

                    <!-- Report Form (Hidden by Default) -->
                    <div id="reportFormContainer" class="hidden flex-1 overflow-y-auto p-6 bg-white">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-lg font-bold text-gray-900">Create Daily Report</h3>
                            <button onclick="toggleReportForm()" class="text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times text-xl"></i>
                            </button>
                        </div>

                        <form id="generalReportForm" class="max-w-3xl mx-auto space-y-8">

                            <div class="animate-fade-in" style="animation-delay: 0.1s">
                                <div class="section-label">
                                    <i class="fas fa-network-wired text-teal-500"></i>
                                    1. Operations & Logistics
                                </div>
                                <div class="bg-slate-50 p-4 rounded-xl border border-slate-200">
                                    <textarea 
                                        id="ops_summary"
                                        rows="4" 
                                        class="w-full input-area rounded-lg p-3 text-sm font-medium text-slate-700 placeholder-slate-400"
                                        placeholder="Summarize daily installations, maintenance runs, and logistical challenges based on field staff reports..."
                                    ></textarea>
                                    <div class="mt-3 flex gap-3">
                                        <div class="flex-1">
                                            <label class="text-[10px] font-bold uppercase text-slate-400 mb-1 block">Installations Completed</label>
                                            <input type="number" id="ops_installs" value="0" class="w-full input-area rounded p-2 text-sm font-bold">
                                        </div>
                                        <div class="flex-1">
                                            <label class="text-[10px] font-bold uppercase text-slate-400 mb-1 block">Pending Jobs</label>
                                            <input type="number" id="ops_pending" value="0" class="w-full input-area rounded p-2 text-sm font-bold">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="animate-fade-in" style="animation-delay: 0.2s">
                                <div class="section-label">
                                    <i class="fas fa-users text-blue-500"></i>
                                    2. Staff & Personnel
                                </div>
                                <div class="bg-slate-50 p-4 rounded-xl border border-slate-200">
                                    <textarea 
                                        id="staff_summary"
                                        rows="3" 
                                        class="w-full input-area rounded-lg p-3 text-sm font-medium text-slate-700 placeholder-slate-400"
                                        placeholder="Note attendance issues, high performers, or incidents reported by staff..."
                                    ></textarea>
                                </div>
                            </div>

                            <div class="animate-fade-in" style="animation-delay: 0.3s">
                                <div class="section-label">
                                    <i class="fas fa-headset text-indigo-500"></i>
                                    3. Support & Client Feedback
                                </div>
                                <div class="bg-slate-50 p-4 rounded-xl border border-slate-200">
                                    <textarea 
                                        id="support_summary"
                                        rows="3" 
                                        class="w-full input-area rounded-lg p-3 text-sm font-medium text-slate-700 placeholder-slate-400"
                                        placeholder="Summarize major client complaints, outages, or feedback from Support tickets..."
                                    ></textarea>
                                    <div class="mt-3">
                                        <label class="flex items-center gap-2 cursor-pointer">
                                            <input type="checkbox" id="is_urgent" class="w-4 h-4 text-teal-600 rounded border-gray-300 focus:ring-teal-500">
                                            <span class="text-xs font-bold text-slate-600">Flag for Urgent Management Review</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="animate-fade-in" style="animation-delay: 0.4s">
                                <div class="section-label">
                                    <i class="fas fa-clipboard-check text-slate-500"></i>
                                    4. Conclusion & Action Items
                                </div>
                                <textarea 
                                    id="conclusion"
                                    rows="3" 
                                    class="w-full input-area rounded-lg p-3 text-sm font-medium text-slate-700 placeholder-slate-400 border-l-4 border-l-slate-800"
                                    placeholder="Final remarks and required actions for tomorrow..."
                                ></textarea>
                            </div>

                            <div class="flex gap-4 pt-4 border-t border-slate-200">
                                <button type="button" onclick="toggleReportForm()" class="px-8 py-3 text-gray-600 font-semibold hover:text-gray-900">
                                    Cancel
                                </button>
                                <button type="button" onclick="submitGeneralReport('draft')" class="px-8 py-3 rounded-lg border border-slate-300 bg-white text-slate-600 font-bold text-sm hover:bg-slate-50">
                                    <i class="fas fa-save mr-2"></i>Save Draft
                                </button>
                                <button type="button" onclick="submitGeneralReport('submitted')" class="flex-1 bg-teal-600 text-white py-3 rounded-lg font-semibold hover:bg-teal-700 shadow-lg shadow-teal-500/20">
                                    <i class="fas fa-paper-plane mr-2"></i>Submit Report
                                </button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <script>
        // GLOBAL STATE
        let allStaffReports = [];
        let allGeneralReports = [];
        let currentTab = 'staff';
        let currentDepartmentFilter = 'all';
        let currentRangeFilter = 'all';
        let currentGeneralRangeFilter = 'all';
        let isFormVisible = false;

        // INITIALIZATION
        window.onload = () => {
            document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-US', { 
                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
            });
            
            document.getElementById('historyFilter').valueAsDate = new Date();
            
            // Fetch all data
            fetchStaffReports();
            fetchGeneralReports();
        };

        // DATA FETCHING
        async function fetchStaffReports() {
            try {
                const response = await fetch(`/api/reports/all-reports`);
                const data = await response.json();
                
                if (data.success) {
                    allStaffReports = data.reports;
                    applyFilters();
                }
            } catch (error) {
                console.error("Staff Reports Error:", error);
                document.getElementById('staffReportsFeed').innerHTML = 
                    `<p class="text-rose-500 text-xs p-4">Failed to load staff reports.</p>`;
            }
        }

        async function fetchGeneralReports() {
            try {
                const response = await fetch(`/api/reports/general`);
                const data = await response.json();
                
                if (data.success) {
                    allGeneralReports = data.reports;
                    applyGeneralFilters();
                }
            } catch (error) {
                console.error("General Reports Error:", error);
                document.getElementById('generalReportsFeed').innerHTML = 
                    `<p class="text-rose-500 text-xs p-4">Failed to load general reports.</p>`;
            }
        }

        // TAB SWITCHING
        function switchTab(tab) {
            currentTab = tab;
            
            // Update tab buttons
            document.getElementById('staffTab').classList.toggle('active', tab === 'staff');
            document.getElementById('generalTab').classList.toggle('active', tab === 'general');
            
            // Toggle filters
            document.getElementById('staffFilters').classList.toggle('hidden', tab !== 'staff');
            document.getElementById('generalFilters').classList.toggle('hidden', tab !== 'general');
            
            // Toggle feeds
            document.getElementById('staffReportsFeed').classList.toggle('hidden', tab !== 'staff');
            document.getElementById('generalReportsFeed').classList.toggle('hidden', tab !== 'general');
            
            // Update right panel
            if (tab === 'staff') {
                document.getElementById('rightPanelTitle').textContent = 'Daily General Report';
                document.getElementById('rightPanelSubtitle').textContent = 'Synthesize data from field and support teams';
                document.getElementById('generateReportBtn').classList.remove('hidden');
                closeDetailView();
            } else {
                document.getElementById('rightPanelTitle').textContent = 'Report Details';
                document.getElementById('rightPanelSubtitle').textContent = 'Click on a report to view details';
                document.getElementById('generateReportBtn').classList.add('hidden');
                closeDetailView();
            }
        }

        // STAFF REPORTS FILTERING
        function applyFilters() {
            let filtered = [...allStaffReports];
            const selectedHistoryDate = document.getElementById('historyFilter').value;

            // Department Filter
            if (currentDepartmentFilter !== 'all') {
                filtered = filtered.filter(r => r.department === currentDepartmentFilter);
            }
            
            // Range Logic
            const referenceDate = selectedHistoryDate ? new Date(selectedHistoryDate + 'T00:00:00') : new Date();
            const refDateStr = formatDate(referenceDate);

            if (currentRangeFilter === 'daily') {
                filtered = filtered.filter(r => {
                    const rDate = formatDate(new Date(r.report_date || r.created_at));
                    return rDate === refDateStr;
                });
            } else if (currentRangeFilter === 'weekly') {
                const weekAgo = new Date(referenceDate);
                weekAgo.setDate(weekAgo.getDate() - 7);
                filtered = filtered.filter(r => {
                    const rDate = new Date(r.report_date || r.created_at);
                    return rDate >= weekAgo && rDate <= referenceDate;
                });
            }
            
            renderStaffFeed(filtered);
        }

        function setRange(range) {
            currentRangeFilter = range;
            document.querySelectorAll('.filter-pill').forEach(pill => {
                if (pill.hasAttribute('data-general-filter')) return;
                pill.classList.toggle('active', pill.getAttribute('onclick').includes(`'${range}'`));
            });
            applyFilters();
        }

        function applyDepartmentFilter(value) {
            currentDepartmentFilter = value;
            applyFilters();
        }

        // GENERAL REPORTS FILTERING
        function applyGeneralFilters() {
            let filtered = [...allGeneralReports];
            const now = new Date();

            if (currentGeneralRangeFilter === 'week') {
                const weekAgo = new Date(now);
                weekAgo.setDate(weekAgo.getDate() - 7);
                filtered = filtered.filter(r => {
                    const rDate = new Date(r.report_date);
                    return rDate >= weekAgo && rDate <= now;
                });
            } else if (currentGeneralRangeFilter === 'month') {
                const monthAgo = new Date(now);
                monthAgo.setMonth(monthAgo.getMonth() - 1);
                filtered = filtered.filter(r => {
                    const rDate = new Date(r.report_date);
                    return rDate >= monthAgo && rDate <= now;
                });
            }

            renderGeneralFeed(filtered);
        }

        function setGeneralRange(range) {
            currentGeneralRangeFilter = range;
            document.querySelectorAll('[data-general-filter]').forEach(pill => {
                pill.classList.toggle('active', pill.getAttribute('data-general-filter') === range);
            });
            applyGeneralFilters();
        }

        // RENDERING
        function renderStaffFeed(reports) {
            const feedContainer = document.getElementById('staffReportsFeed');
            feedContainer.innerHTML = '';

            if (reports.length === 0) {
                feedContainer.innerHTML = `
                    <div class="p-8 text-center border-2 border-dashed border-slate-200 rounded mx-2">
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">No staff reports found</p>
                    </div>`;
                return;
            }

            reports.forEach(report => {
                feedContainer.innerHTML += `
                    <div class="bg-white border border-slate-300 shadow-sm mb-4 animate-fade-in mx-1">
                        <div class="px-3 py-2 border-b border-slate-200 flex justify-between items-center bg-slate-50">
                            <div class="flex items-center gap-2">
                                <span class="text-[11px] font-extrabold text-slate-900 uppercase tracking-tight">
                                    ${escapeHtml(report.first_name || 'Unknown')} ${escapeHtml(report.second_name || '')}
                                </span>
                                <span class="text-slate-300">|</span>
                                <span class="text-[10px] font-bold text-slate-500 uppercase">
                                    ${escapeHtml(report.position || 'Staff')}
                                </span>
                            </div>
                            <div class="text-[9px] font-black text-slate-400 uppercase tracking-tighter">
                                DEPT: ${report.department}
                            </div>
                        </div>

                        <div class="p-4 bg-white">
                            <div class="text-xs text-slate-700 leading-relaxed font-medium">
                                "${escapeHtml(report.content || 'No content provided.')}"
                            </div>
                        </div>

                        <div class="px-3 py-2 border-t border-slate-100 flex justify-between items-center bg-white">
                            <div class="flex items-center gap-3">
                                <div class="flex items-center text-slate-400 gap-1.5">
                                    <i class="far fa-calendar text-[10px]"></i>
                                    <span class="text-[10px] font-bold">${new Date(report.created_at).toLocaleDateString()}</span>
                                </div>
                                <div class="flex items-center text-slate-400 gap-1.5">
                                    <i class="far fa-clock text-[10px]"></i>
                                    <span class="text-[10px] font-bold">${new Date(report.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                                </div>
                            </div>
                            
                            <button 
                                onclick="copyToForm(\`${escapeForJS(report.content || '')}\`, '${report.department}')" 
                                class="px-3 py-1 bg-white hover:bg-slate-900 border border-slate-800 text-[10px] font-black text-slate-800 hover:text-white uppercase transition-all duration-200"
                            >
                                <i class="fas fa-plus mr-1"></i> Add to Report
                            </button>
                        </div>
                    </div>`;
            });
        }

        function renderGeneralFeed(reports) {
            const feedContainer = document.getElementById('generalReportsFeed');
            feedContainer.innerHTML = '';

            if (reports.length === 0) {
                feedContainer.innerHTML = `<div class="p-10 text-center text-slate-400 text-xs font-bold uppercase tracking-widest border-2 border-dashed border-slate-200">No generated reports found</div>`;
                return;
            }

            reports.forEach(report => {
                const statusBadge = report.status === 'submitted' 
                    ? '<span class="text-[9px] font-black uppercase text-emerald-600 px-2 py-0.5 border border-emerald-600 bg-white">Finalized</span>'
                    : '<span class="text-[9px] font-black uppercase text-slate-500 px-2 py-0.5 border border-slate-400 bg-white">Draft</span>';
                
                const urgentBadge = report.is_urgent 
                    ? '<span class="text-[9px] font-black uppercase text-white px-2 py-0.5 bg-rose-600 border border-rose-600 ml-1">Urgent</span>'
                    : '';
                
                feedContainer.innerHTML += `
                    <div onclick="viewGeneralReport(${report.id})" class="bg-white border border-slate-300 shadow-sm mb-4 animate-fade-in cursor-pointer hover:border-slate-500 transition-all mx-1">
                        <div class="px-3 py-2 border-b border-slate-200 flex justify-between items-center bg-slate-50">
                            <div class="flex flex-col">
                                <h4 class="text-[11px] font-black text-slate-900 uppercase tracking-tight">
                                    Daily Report - ${new Date(report.report_date).toLocaleDateString()}
                                </h4>
                                <p class="text-[9px] text-slate-500 font-bold uppercase tracking-tighter">
                                    Author: ${escapeHtml(report.first_name || '')} ${escapeHtml(report.second_name || '')}
                                </p>
                            </div>
                            <div class="flex items-center">
                                ${statusBadge}
                                ${urgentBadge}
                            </div>
                        </div>

                        <div class="grid grid-cols-3 divide-x divide-slate-200 border-b border-slate-100">
                            <div class="p-3 text-center">
                                <p class="text-[9px] text-slate-400 font-bold uppercase mb-1">Installations</p>
